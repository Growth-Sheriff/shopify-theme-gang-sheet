<script>
(function() {
  // Segments and probabilities (weighted towards lower discounts)
  const segments = [
    { discount: 5, weight: 30, code: 'SPIN5' },
    { discount: 10, weight: 25, code: 'SPIN10' },
    { discount: 15, weight: 20, code: 'SPIN15' },
    { discount: 20, weight: 15, code: 'SPIN20' },
    { discount: 25, weight: 7, code: 'SPIN25' },
    { discount: 30, weight: 3, code: 'SPIN30' }
  ];

  // DOM Elements
  const overlay = document.getElementById('spinWheelOverlay');
  const closeBtn = document.getElementById('spinWheelClose');
  const wheel = document.getElementById('spinWheel');
  const spinBtn = document.getElementById('spinWheelBtn');
  const wheelCenter = document.getElementById('wheelCenter');
  const resultDiv = document.getElementById('spinResult');
  const resultDiscount = document.getElementById('resultDiscount');
  const resultCode = document.getElementById('resultCode');

  let isSpinning = false;
  let currentRotation = 0;

  // Show wheel on page load - ALWAYS (her sayfa yenilemede gÃ¶ster)
  setTimeout(() => {
    overlay.classList.add('active');
    document.body.style.overflow = 'hidden';
  }, 500);

  // Close wheel
  function closeWheel() {
    overlay.classList.remove('active');
    document.body.style.overflow = '';
  }

  closeBtn.addEventListener('click', closeWheel);

  overlay.addEventListener('click', function(e) {
    if (e.target === overlay) {
      closeWheel();
    }
  });

  // Weighted random selection
  function getWeightedRandom() {
    const totalWeight = segments.reduce((sum, s) => sum + s.weight, 0);
    let random = Math.random() * totalWeight;
    
    for (let i = 0; i < segments.length; i++) {
      random -= segments[i].weight;
      if (random <= 0) {
        return { index: i, segment: segments[i] };
      }
    }
    return { index: 0, segment: segments[0] };
  }

  // Spin the wheel
  function spinWheel() {
    if (isSpinning) return;
    
    isSpinning = true;
    spinBtn.disabled = true;
    spinBtn.textContent = 'ðŸŽ° Ã‡evriliyor...';
    wheelCenter.textContent = '...';

    // Get result
    const result = getWeightedRandom();
    
    // Calculate rotation
    // Each segment is 60 degrees (360 / 6)
    // We need to land on the correct segment
    const segmentAngle = 360 / segments.length;
    const targetAngle = (360 - (result.index * segmentAngle)) - (segmentAngle / 2);
    
    // Add multiple full rotations + target angle
    const spins = 5 + Math.random() * 3; // 5-8 full rotations
    const finalRotation = currentRotation + (360 * spins) + targetAngle;
    
    wheel.classList.add('spinning');
    wheel.style.transform = `rotate(${finalRotation}deg)`;
    currentRotation = finalRotation;

    // Show result after spin
    setTimeout(() => {
      isSpinning = false;
      wheel.classList.remove('spinning');
      
      // Display result
      resultDiscount.textContent = `%${result.segment.discount}`;
      resultCode.textContent = result.segment.code;
      resultDiv.classList.add('show');
      
      // Save discount to session storage
      sessionStorage.setItem('spinWheelDiscount', result.segment.discount);
      sessionStorage.setItem('spinWheelCode', result.segment.code);
      
      // Update button
      spinBtn.textContent = 'âœ“ Ä°ndirim KazanÄ±ldÄ±!';
      wheelCenter.textContent = `%${result.segment.discount}`;
      
      // Create confetti
      createConfetti();
      
      // Auto close after 4 seconds
      setTimeout(() => {
        closeWheel();
      }, 4000);
      
    }, 5500);
  }

  // Event listeners
  spinBtn.addEventListener('click', spinWheel);
  wheelCenter.addEventListener('click', spinWheel);

  // Confetti effect
  function createConfetti() {
    const colors = ['#D4AF37', '#F5E7A3', '#fff', '#dc2626', '#22c55e'];
    const modal = document.querySelector('.spin-wheel-modal');
    
    for (let i = 0; i < 50; i++) {
      const confetti = document.createElement('div');
      confetti.className = 'confetti';
      confetti.style.left = Math.random() * 100 + '%';
      confetti.style.top = '0';
      confetti.style.background = colors[Math.floor(Math.random() * colors.length)];
      confetti.style.animationDelay = Math.random() * 0.5 + 's';
      confetti.style.transform = `rotate(${Math.random() * 360}deg)`;
      
      modal.appendChild(confetti);
      
      setTimeout(() => {
        confetti.classList.add('active');
      }, 10);
      
      setTimeout(() => {
        confetti.remove();
      }, 3500);
    }
  }

  // Keyboard close
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && overlay.classList.contains('active')) {
      closeWheel();
    }
  });
})();
</script>
