{% comment %}
  ============================================
  BOTTOM NAVIGATION BAR
  ============================================
  iOS Style Tab Bar - Mobile Only
{% endcomment %}

<nav class="bottom-nav" id="bottomNav">
  <a href="{{ routes.root_url }}" class="nav-item {% if request.path == '/' %}active{% endif %}">
    <i class="ti ti-home"></i>
    <span>Home</span>
  </a>
  
  <a href="{{ routes.all_products_collection_url }}" class="nav-item {% if request.path contains '/collections' or request.path contains '/products' %}active{% endif %}">
    <i class="ti ti-category"></i>
    <span>Shop</span>
  </a>
  
  <button type="button" class="nav-item nav-cart" data-cart-trigger>
    <span class="cart-badge" id="navCartBadge">{{ cart.item_count }}</span>
    <i class="ti ti-shopping-bag"></i>
    <span>Cart</span>
  </button>
  
  <a href="{{ routes.all_products_collection_url }}" class="nav-item">
    <i class="ti ti-heart"></i>
    <span>Favorites</span>
  </a>
  
  <a href="{{ routes.account_url }}" class="nav-item {% if request.path contains '/account' %}active{% endif %}">
    <i class="ti ti-user"></i>
    <span>Account</span>
  </a>
</nav>

<style>
/* ===== BOTTOM NAVIGATION ===== */
.bottom-nav {
  display: none;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-top: 1px solid #f0f0f0;
  padding: 0.5rem 0.5rem calc(0.5rem + env(safe-area-inset-bottom, 0px));
  z-index: 999;
  box-shadow: 0 -4px 20px rgba(0,0,0,0.06);
}

.bottom-nav .nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 0.2rem;
  padding: 0.5rem 0;
  min-height: 44px;
  color: #888;
  text-decoration: none;
  font-size: 0.65rem;
  font-weight: 500;
  border: none;
  background: none;
  cursor: pointer;
  transition: all 0.2s;
  position: relative;
}

.bottom-nav .nav-item i {
  font-size: 1.35rem;
  transition: transform 0.2s;
}

.bottom-nav .nav-item.active {
  color: #7367F0;
}

.bottom-nav .nav-item.active i {
  transform: scale(1.1);
}

.bottom-nav .nav-item:active i {
  transform: scale(0.9);
}

/* Cart Badge */
.nav-cart {
  position: relative;
}

.cart-badge {
  position: absolute;
  top: 0;
  right: 50%;
  transform: translateX(60%);
  min-width: 18px;
  height: 18px;
  background: #7367F0;
  color: #fff;
  font-size: 0.65rem;
  font-weight: 600;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 4px;
}

.cart-badge:empty,
.cart-badge[data-count="0"] {
  display: none;
}

/* Active Indicator */
.nav-item.active::before {
  content: '';
  position: absolute;
  top: -0.5rem;
  left: 50%;
  transform: translateX(-50%);
  width: 4px;
  height: 4px;
  background: #7367F0;
  border-radius: 50%;
}

/* Mobile Only */
@media (max-width: 768px) {
  .bottom-nav {
    display: flex;
  }
  
  /* Add padding to body for bottom nav */
  body {
    padding-bottom: 70px;
  }
  
  /* Hide mobile checkout bar when bottom nav exists */
  .mobile-checkout-bar {
    bottom: 65px !important;
  }
}

/* Landscape phones */
@media (max-width: 768px) and (orientation: landscape) {
  .bottom-nav {
    padding: 0.4rem 0.5rem;
  }
  
  .bottom-nav .nav-item {
    padding: 0.3rem 0;
  }
  
  .bottom-nav .nav-item i {
    font-size: 1.2rem;
  }
  
  .bottom-nav .nav-item span {
    display: none;
  }
}

/* Tablet - hide */
@media (min-width: 769px) {
  .bottom-nav {
    display: none !important;
  }
  
  body {
    padding-bottom: 0;
  }
}
</style>

<script>
(function(){
  // Update cart badge on ajax cart changes
  document.addEventListener('cart:updated', function(e){
    const badge = document.getElementById('navCartBadge');
    if(badge && e.detail && e.detail.item_count !== undefined){
      badge.textContent = e.detail.item_count;
      badge.dataset.count = e.detail.item_count;
    }
  });
  
  // Smooth hide on scroll down, show on scroll up
  let lastScroll = 0;
  const nav = document.getElementById('bottomNav');
  
  window.addEventListener('scroll', function(){
    const currentScroll = window.pageYOffset;
    
    if(currentScroll > lastScroll && currentScroll > 100){
      nav.style.transform = 'translateY(100%)';
    } else {
      nav.style.transform = 'translateY(0)';
    }
    
    lastScroll = currentScroll;
  }, { passive: true });
  
  // Add transition
  nav.style.transition = 'transform 0.3s ease';
})();
</script>
