{% comment %}
  Review Badge Collapsible v1.0
  Soft badge under price that expands to show Judge.me reviews widget
  
  Usage: {% render 'review-badge-collapsible', product: product %}
{% endcomment %}

{% liquid
  assign provider = section.settings.reviews_provider | default: 'judgeme'
  assign show_badge = section.settings.show_review_badge | default: true
  assign rating_score = section.settings.rating_score | default: '4.8'
  assign review_count = section.settings.review_count | default: '250'
  assign recommend_percent = section.settings.recommend_percent | default: '98%'
%}

{% if show_badge %}
<div class="review-badge-wrapper">
  <!-- Clickable Badge Trigger -->
  <button type="button" class="review-badge-trigger" id="review-badge-trigger" aria-expanded="false" aria-controls="review-dropdown">
    <div class="badge-stars">
