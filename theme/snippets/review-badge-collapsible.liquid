<script>
  (function() {
    const trigger = document.getElementById('review-badge-trigger');
    const dropdown = document.getElementById('review-dropdown');
    let widgetLoaded = false;

    if (!trigger || !dropdown) return;

    trigger.addEventListener('click', function() {
      const isExpanded = this.getAttribute('aria-expanded') === 'true';
      
      // Toggle state
      this.setAttribute('aria-expanded', !isExpanded);
      dropdown.setAttribute('aria-hidden', isExpanded);

      // Lazy load widget on first open
      if (!isExpanded && !widgetLoaded) {
        loadReviewWidget();
        widgetLoaded = true;
      }
    });

    function loadReviewWidget() {
      // Hide loading indicator after widget loads
      const hideLoading = () => {
        const loadingEl = dropdown.querySelector('.jdgm-widget-loading');
        if (loadingEl) loadingEl.style.display = 'none';
      };

      // Trigger Judge.me widget initialization
      if (typeof jdgm !== 'undefined') {
        // Try multiple initialization methods
        setTimeout(() => {
          if (jdgm.init) jdgm.init();
          if (jdgm.SHOP_DOMAIN) {
            // Force widget refresh
            const widget = document.getElementById('judgeme_product_reviews');
            if (widget && jdgm.initializeWidgets) {
              jdgm.initializeWidgets([widget]);
            }
          }
          // Dispatch custom event that Judge.me listens for
          window.dispatchEvent(new Event('jdgm:loaded'));
          hideLoading();
        }, 200);
      } else {
        // Judge.me script not loaded yet - wait and retry
        let retryCount = 0;
        const retryInterval = setInterval(() => {
          retryCount++;
          if (typeof jdgm !== 'undefined') {
            clearInterval(retryInterval);
            if (jdgm.init) jdgm.init();
            hideLoading();
          } else if (retryCount > 10) {
            clearInterval(retryInterval);
            // Show fallback message
            const loadingEl = dropdown.querySelector('.jdgm-widget-loading');
            if (loadingEl) {
              loadingEl.innerHTML = '<span style="color: #92400E;">Judge.me app not installed. Please install from Shopify App Store.</span>';
            }
          }
        }, 500);
      }
      
      // Trigger Loox if available
      if (typeof LooxReviews !== 'undefined') {
        setTimeout(() => LooxReviews.init(), 100);
      }

      // Trigger Stamped if available
      if (typeof StampedFn !== 'undefined') {
        setTimeout(() => StampedFn.init(), 100);
      }

      // Trigger Yotpo if available
      if (typeof yotpo !== 'undefined' && yotpo.initWidgets) {
        setTimeout(() => yotpo.initWidgets(), 100);
      }
    }

    // Close on outside click
    document.addEventListener('click', function(e) {
      if (!trigger.contains(e.target) && !dropdown.contains(e.target)) {
        trigger.setAttribute('aria-expanded', 'false');
        dropdown.setAttribute('aria-hidden', 'true');
      }
    });

    // Close on Escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && trigger.getAttribute('aria-expanded') === 'true') {
        trigger.setAttribute('aria-expanded', 'false');
        dropdown.setAttribute('aria-hidden', 'true');
        trigger.focus();
      }
    });
  })();
</script>
