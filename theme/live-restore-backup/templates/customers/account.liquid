{% comment %}
  ============================================
  CUSTOMER ACCOUNT TEMPLATE
  Shopify 2.0 Compatible - Account Dashboard
  ============================================
{% endcomment %}

<style>
/* ===== ACCOUNT PAGE STYLES ===== */
.account-page {
  padding: 40px 0 60px;
  background: linear-gradient(180deg, #f8f9fc 0%, #fff 100%);
  min-height: 100vh;
}

.account-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40px;
  flex-wrap: wrap;
  gap: 20px;
}

.account-welcome {
  display: flex;
  align-items: center;
  gap: 16px;
}

.account-avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background: linear-gradient(135deg, #7367f0, #9e95f5);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 1.5rem;
  font-weight: 700;
}

.account-welcome-text h1 {
  font-size: 1.5rem;
  font-weight: 700;
  color: #2d2d3a;
  margin: 0 0 4px 0;
}

.account-welcome-text p {
  font-size: 0.9rem;
  color: #6c757d;
  margin: 0;
}

.account-logout {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 10px 20px;
  background: #fff;
  border: 1px solid rgba(115, 103, 240, 0.2);
  border-radius: 10px;
  color: #5d596c;
  font-size: 0.9rem;
  text-decoration: none;
  transition: all 0.3s ease;
}

.account-logout:hover {
  background: #7367f0;
  color: #fff;
  border-color: #7367f0;
}

/* Stats Cards */
.account-stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 20px;
  margin-bottom: 40px;
}

.stat-card {
  background: #fff;
  border-radius: 16px;
  padding: 24px;
  box-shadow: 0 4px 20px rgba(0,0,0,0.04);
  border: 1px solid rgba(115, 103, 240, 0.08);
  display: flex;
  align-items: center;
  gap: 16px;
}

.stat-icon {
  width: 50px;
  height: 50px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.3rem;
}

.stat-icon.orders { background: rgba(115, 103, 240, 0.1); color: #7367f0; }
.stat-icon.addresses { background: rgba(40, 199, 111, 0.1); color: #28c76f; }
.stat-icon.wishlist { background: rgba(234, 84, 85, 0.1); color: #ea5455; }

.stat-content h3 {
  font-size: 1.5rem;
  font-weight: 700;
  color: #2d2d3a;
  margin: 0;
}

.stat-content p {
  font-size: 0.85rem;
  color: #6c757d;
  margin: 4px 0 0 0;
}

/* Account Grid */
.account-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30px;
}

/* Section Cards */
.account-section {
  background: #fff;
  border-radius: 16px;
  box-shadow: 0 4px 20px rgba(0,0,0,0.04);
  border: 1px solid rgba(115, 103, 240, 0.08);
  overflow: hidden;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 24px;
  border-bottom: 1px solid rgba(0,0,0,0.05);
}

.section-header h2 {
  font-size: 1.1rem;
  font-weight: 600;
  color: #2d2d3a;
  margin: 0;
  display: flex;
  align-items: center;
  gap: 10px;
}

.section-header h2 i {
  color: #7367f0;
}

.section-link {
  font-size: 0.85rem;
  color: #7367f0;
  text-decoration: none;
}

.section-link:hover {
  text-decoration: underline;
}

.section-body {
  padding: 24px;
}

/* Orders List */
.order-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px 0;
  border-bottom: 1px solid rgba(0,0,0,0.05);
}

.order-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.order-item:first-child {
  padding-top: 0;
}

.order-info h4 {
  font-size: 0.95rem;
  font-weight: 600;
  color: #2d2d3a;
  margin: 0 0 4px 0;
}

.order-info h4 a {
  color: inherit;
  text-decoration: none;
}

.order-info h4 a:hover {
  color: #7367f0;
}

.order-meta {
  font-size: 0.8rem;
  color: #9a97a8;
}

.order-status {
  padding: 6px 12px;
  border-radius: 20px;
  font-size: 0.75rem;
  font-weight: 600;
}

.order-status.fulfilled { background: rgba(40, 199, 111, 0.1); color: #28c76f; }
.order-status.unfulfilled { background: rgba(255, 159, 67, 0.1); color: #ff9f43; }
.order-status.cancelled { background: rgba(234, 84, 85, 0.1); color: #ea5455; }

/* Address Card */
.address-card {
  padding: 16px;
  background: #f8f9fc;
  border-radius: 12px;
  margin-bottom: 12px;
}

.address-card:last-child {
  margin-bottom: 0;
}

.address-card.default {
  border: 1px solid rgba(115, 103, 240, 0.3);
  background: rgba(115, 103, 240, 0.03);
}

.address-badge {
  display: inline-block;
  padding: 3px 8px;
  background: #7367f0;
  color: #fff;
  font-size: 0.65rem;
  font-weight: 600;
  border-radius: 4px;
  margin-bottom: 8px;
  text-transform: uppercase;
}

.address-card p {
  font-size: 0.9rem;
  color: #5d596c;
  margin: 0;
  line-height: 1.6;
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: 30px;
  color: #9a97a8;
}

.empty-state i {
  font-size: 2.5rem;
  margin-bottom: 12px;
  opacity: 0.5;
}

.empty-state p {
  font-size: 0.9rem;
  margin: 0;
}

/* ===== RESPONSIVE ===== */
@media (max-width: 991.98px) {
  .account-grid {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 767.98px) {
  .account-page {
    padding: 24px 0 40px;
  }
  
  .account-header {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .account-stats {
    grid-template-columns: 1fr;
  }
  
  .section-body {
    padding: 16px;
  }
}
</style>

<div class="account-page">
  <div class="container">
    
    <!-- Header -->
    <div class="account-header">
      <div class="account-welcome">
        <div class="account-avatar">
          {{ customer.first_name | slice: 0 | upcase }}{{ customer.last_name | slice: 0 | upcase }}
        </div>
        <div class="account-welcome-text">
          <h1>Hello, {{ customer.first_name }}!</h1>
          <p>{{ customer.email }}</p>
        </div>
      </div>
      <a href="{{ routes.account_logout_url }}" class="account-logout">
        <i class="fa-solid fa-right-from-bracket"></i>
        Logout
      </a>
    </div>
    
    <!-- Stats -->
    <div class="account-stats">
      <div class="stat-card">
        <div class="stat-icon orders">
          <i class="fa-solid fa-box"></i>
        </div>
        <div class="stat-content">
          <h3>{{ customer.orders_count }}</h3>
          <p>Total Orders</p>
        </div>
      </div>
      <div class="stat-card">
        <div class="stat-icon addresses">
          <i class="fa-solid fa-location-dot"></i>
        </div>
        <div class="stat-content">
          <h3>{{ customer.addresses_count }}</h3>
          <p>Saved Addresses</p>
        </div>
      </div>
      <div class="stat-card">
        <div class="stat-icon wishlist">
          <i class="fa-solid fa-heart"></i>
        </div>
        <div class="stat-content">
          <h3 id="wishlistCount">0</h3>
          <p>Wishlist Items</p>
        </div>
      </div>
    </div>
    
    <!-- Grid -->
    <div class="account-grid">
      
      <!-- Recent Orders -->
      <div class="account-section">
        <div class="section-header">
          <h2><i class="fa-solid fa-receipt"></i> Recent Orders</h2>
          {%- if customer.orders_count > 3 -%}
            <a href="#orders" class="section-link">View All</a>
          {%- endif -%}
        </div>
        <div class="section-body">
          {%- if customer.orders.size > 0 -%}
            {%- for order in customer.orders limit: 3 -%}
              <div class="order-item">
                <div class="order-info">
                  <h4><a href="{{ order.customer_url }}">{{ order.name }}</a></h4>
                  <span class="order-meta">{{ order.created_at | date: '%B %d, %Y' }} • {{ order.line_items.size }} items • {{ order.total_price | money }}</span>
                </div>
                <span class="order-status {{ order.fulfillment_status }}">
                  {{ order.fulfillment_status_label | default: 'Processing' }}
                </span>
              </div>
            {%- endfor -%}
          {%- else -%}
            <div class="empty-state">
              <i class="fa-solid fa-box-open"></i>
              <p>No orders yet</p>
            </div>
          {%- endif -%}
        </div>
      </div>
      
      <!-- Addresses -->
      <div class="account-section">
        <div class="section-header">
          <h2><i class="fa-solid fa-map-marker-alt"></i> Addresses</h2>
          <a href="{{ routes.account_addresses_url }}" class="section-link">Manage</a>
        </div>
        <div class="section-body">
          {%- if customer.addresses.size > 0 -%}
            {%- for address in customer.addresses limit: 2 -%}
              <div class="address-card {% if address == customer.default_address %}default{% endif %}">
                {%- if address == customer.default_address -%}
                  <span class="address-badge">Default</span>
                {%- endif -%}
                <p>
                  {{ address.first_name }} {{ address.last_name }}<br>
                  {{ address.address1 }}<br>
                  {{ address.city }}, {{ address.province_code }} {{ address.zip }}<br>
                  {{ address.country }}
                </p>
              </div>
            {%- endfor -%}
          {%- else -%}
            <div class="empty-state">
              <i class="fa-solid fa-location-dot"></i>
              <p>No addresses saved</p>
            </div>
          {%- endif -%}
        </div>
      </div>
      
    </div>
    
    <!-- All Orders Section -->
    {%- if customer.orders.size > 0 -%}
      <div class="account-section" id="orders" style="margin-top: 30px;">
        <div class="section-header">
          <h2><i class="fa-solid fa-history"></i> Order History</h2>
        </div>
        <div class="section-body">
          {%- for order in customer.orders -%}
            <div class="order-item">
              <div class="order-info">
                <h4><a href="{{ order.customer_url }}">{{ order.name }}</a></h4>
                <span class="order-meta">{{ order.created_at | date: '%B %d, %Y' }} • {{ order.line_items.size }} items • {{ order.total_price | money }}</span>
              </div>
              <span class="order-status {{ order.fulfillment_status }}">
                {{ order.fulfillment_status_label | default: 'Processing' }}
              </span>
            </div>
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}
    
  </div>
</div>

<script>
// Update wishlist count from localStorage
document.addEventListener('DOMContentLoaded', function() {
  const wishlist = JSON.parse(localStorage.getItem('cp_wishlist') || '[]');
  document.getElementById('wishlistCount').textContent = wishlist.length;
});
</script>
