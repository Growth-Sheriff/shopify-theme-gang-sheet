<style>
/* ===== COLLECTIONS PAGE STYLES ===== */
.collections-page {
  padding: 40px 0 60px;
  background: linear-gradient(180deg, #f8f9fc 0%, #fff 100%);
  min-height: 100vh;
}

/* Page Header */
.collections-header {
  text-align: center;
  margin-bottom: 40px;
  padding: 0 15px;
}

.collections-title {
  font-size: 2.5rem;
  font-weight: 700;
  color: #2d2d3a;
  margin-bottom: 12px;
  background: linear-gradient(135deg, #7367f0 0%, #9e95f5 50%, #7367f0 100%);
  background-size: 200% auto;
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  animation: gradientShift 4s ease-in-out infinite;
}

@keyframes gradientShift {
  0%, 100% { background-position: 0% center; }
  50% { background-position: 200% center; }
}

.collections-subtitle {
  font-size: 1rem;
  color: #6c757d;
  max-width: 500px;
  margin: 0 auto;
}

/* Collections Grid */
.collections-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 24px;
  padding: 0 15px;
}

/* Collection Card */
.collection-card {
  background: #fff;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0,0,0,0.06);
  transition: all 0.3s ease;
  position: relative;
  border: 1px solid rgba(115, 103, 240, 0.08);
}

.collection-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 12px 40px rgba(115, 103, 240, 0.15);
  border-color: rgba(115, 103, 240, 0.2);
}

.collection-card-link {
  display: block;
  text-decoration: none;
  color: inherit;
}

/* Card Image */
.collection-card-image {
  position: relative;
  width: 100%;
  height: 200px;
  overflow: hidden;
  background: linear-gradient(135deg, #f0f2f8 0%, #e8eaf3 100%);
}

.collection-card-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.4s ease;
}

.collection-card:hover .collection-card-image img {
  transform: scale(1.08);
}

/* Placeholder for collections without images */
.collection-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #7367f0 0%, #9e95f5 100%);
  color: #fff;
}

.collection-placeholder svg {
  width: 48px;
  height: 48px;
  stroke: rgba(255,255,255,0.9);
  margin-bottom: 8px;
}

.collection-placeholder span {
  font-size: 0.75rem;
  opacity: 0.8;
  text-transform: uppercase;
  letter-spacing: 1px;
}

/* Image Overlay */
.collection-card-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, transparent 40%, rgba(45, 45, 58, 0.7) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.collection-card:hover .collection-card-overlay {
  opacity: 1;
}

/* Product Count Badge */
.collection-count {
  position: absolute;
  top: 12px;
  right: 12px;
  background: rgba(255,255,255,0.95);
  backdrop-filter: blur(8px);
  padding: 6px 12px;
  border-radius: 20px;
  font-size: 0.75rem;
  font-weight: 600;
  color: #7367f0;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

/* Card Body */
.collection-card-body {
  padding: 20px;
}

.collection-card-title {
  font-size: 1.15rem;
  font-weight: 600;
  color: #2d2d3a;
  margin: 0 0 8px 0;
  transition: color 0.3s ease;
}

.collection-card:hover .collection-card-title {
  color: #7367f0;
}

.collection-card-desc {
  font-size: 0.875rem;
  color: #6c757d;
  margin: 0;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.5;
}

/* View Button */
.collection-view-btn {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  margin-top: 16px;
  font-size: 0.85rem;
  font-weight: 600;
  color: #7367f0;
  text-decoration: none;
  transition: all 0.3s ease;
}

.collection-view-btn svg {
  width: 16px;
  height: 16px;
  transition: transform 0.3s ease;
}

.collection-card:hover .collection-view-btn svg {
  transform: translateX(4px);
}

/* ===== RESPONSIVE ===== */
@media (max-width: 991.98px) {
  .collections-grid {
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    gap: 20px;
  }
  
  .collections-title {
    font-size: 2rem;
  }
}

@media (max-width: 767.98px) {
  .collections-page {
    padding: 24px 0 40px;
  }
  
  .collections-header {
    margin-bottom: 24px;
  }
  
  .collections-title {
    font-size: 1.6rem;
  }
  
  .collections-subtitle {
    font-size: 0.9rem;
  }
  
  .collections-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
    padding: 0 10px;
  }
  
  .collection-card {
    border-radius: 12px;
  }
  
  .collection-card-image {
    height: 140px;
  }
  
  .collection-card-body {
    padding: 12px;
  }
  
  .collection-card-title {
    font-size: 0.95rem;
    margin-bottom: 4px;
  }
  
  .collection-card-desc {
    display: none;
  }
  
  .collection-count {
    top: 8px;
    right: 8px;
    padding: 4px 8px;
    font-size: 0.65rem;
  }
  
  .collection-view-btn {
    margin-top: 10px;
    font-size: 0.75rem;
  }
}

@media (max-width: 479.98px) {
  .collections-grid {
    gap: 10px;
  }
  
  .collection-card-image {
    height: 120px;
  }
  
  .collection-card-body {
    padding: 10px;
  }
  
  .collection-card-title {
    font-size: 0.85rem;
  }
}
</style>

<div class="collections-page">
  <div class="container">
    
    <!-- Page Header -->
    <div class="collections-header">
      <h1 class="collections-title">{{ 'collections.general.title' | t | default: 'Our Collections' }}</h1>
      <p class="collections-subtitle">{{ 'collections.general.subtitle' | t | default: 'Explore our curated collection of premium DTF transfers and accessories' }}</p>
    </div>
    
    <!-- Collections Grid -->
    <div class="collections-grid">
      {%- for collection in collections -%}
        {%- unless collection.handle == 'frontpage' or collection.handle == 'all' -%}
          <article class="collection-card">
            <a href="{{ collection.url }}" class="collection-card-link">
              
              <!-- Image -->
              <div class="collection-card-image">
                {%- if collection.image -%}
                  <img 
                    src="{{ collection.image | image_url: width: 600 }}" 
                    alt="{{ collection.title | escape }}"
                    loading="lazy"
                    width="600"
                    height="400"
                  >
                {%- else -%}
                  <div class="collection-placeholder">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                    </svg>
                    <span>Collection</span>
                  </div>
                {%- endif -%}
                
                <div class="collection-card-overlay"></div>
                
                <!-- Product Count -->
                <span class="collection-count">
                  {{ collection.products_count }} {{ collection.products_count | pluralize: 'product', 'products' }}
                </span>
              </div>
              
              <!-- Body -->
              <div class="collection-card-body">
                <h2 class="collection-card-title">{{ collection.title }}</h2>
                
                {%- if collection.description != blank -%}
                  <p class="collection-card-desc">{{ collection.description | strip_html | truncate: 100 }}</p>
                {%- endif -%}
                
                <span class="collection-view-btn">
                  View Collection
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </span>
              </div>
              
            </a>
          </article>
        {%- endunless -%}
      {%- endfor -%}
    </div>
    
  </div>
</div>
