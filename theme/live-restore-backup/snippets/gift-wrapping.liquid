{% comment %}
  ============================================
  GIFT WRAPPING OPTION SNIPPET
  Include in cart page/drawer
  Usage: {% render 'gift-wrapping' %}
  ============================================
{% endcomment %}

<style>
/* ===== GIFT WRAPPING STYLES ===== */
.gift-wrapping {
  background: linear-gradient(135deg, rgba(115, 103, 240, 0.05), rgba(158, 149, 245, 0.08));
  border-radius: 16px;
  padding: 20px;
  margin-bottom: 20px;
  border: 1px solid rgba(115, 103, 240, 0.12);
}

.gift-wrapping-header {
  display: flex;
  align-items: center;
  gap: 14px;
  cursor: pointer;
}

.gift-wrapping-checkbox {
  position: relative;
  width: 22px;
  height: 22px;
}

.gift-wrapping-checkbox input {
  position: absolute;
  opacity: 0;
  cursor: pointer;
  width: 100%;
  height: 100%;
  z-index: 2;
  margin: 0;
}

.gift-wrapping-check {
  position: absolute;
  top: 0;
  left: 0;
  width: 22px;
  height: 22px;
  border: 2px solid #7367f0;
  border-radius: 6px;
  background: #fff;
  transition: all 0.3s ease;
}

.gift-wrapping-checkbox input:checked ~ .gift-wrapping-check {
  background: #7367f0;
}

.gift-wrapping-checkbox input:checked ~ .gift-wrapping-check::after {
  content: '';
  position: absolute;
  left: 6px;
  top: 2px;
  width: 6px;
  height: 12px;
  border: solid #fff;
  border-width: 0 2px 2px 0;
  transform: rotate(45deg);
}

.gift-wrapping-icon {
  width: 44px;
  height: 44px;
  border-radius: 12px;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 10px rgba(115, 103, 240, 0.1);
}

.gift-wrapping-icon i {
  font-size: 1.2rem;
  color: #7367f0;
}

.gift-wrapping-info {
  flex: 1;
}

.gift-wrapping-title {
  font-size: 0.95rem;
  font-weight: 600;
  color: #2d2d3a;
  margin: 0 0 4px 0;
}

.gift-wrapping-description {
  font-size: 0.8rem;
  color: #6c757d;
  margin: 0;
}

.gift-wrapping-price {
  font-size: 1rem;
  font-weight: 600;
  color: #7367f0;
}

/* Gift Message Area */
.gift-message-area {
  margin-top: 16px;
  padding-top: 16px;
  border-top: 1px solid rgba(115, 103, 240, 0.15);
  display: none;
}

.gift-message-area.active {
  display: block;
  animation: slideDown 0.3s ease;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.gift-message-label {
  display: block;
  font-size: 0.85rem;
  font-weight: 500;
  color: #5d596c;
  margin-bottom: 8px;
}

.gift-message-input {
  width: 100%;
  min-height: 80px;
  padding: 12px 14px;
  border: 1px solid rgba(115, 103, 240, 0.2);
  border-radius: 10px;
  font-size: 0.9rem;
  color: #2d2d3a;
  background: #fff;
  resize: vertical;
  transition: all 0.3s ease;
  font-family: inherit;
}

.gift-message-input:focus {
  outline: none;
  border-color: #7367f0;
  box-shadow: 0 0 0 3px rgba(115, 103, 240, 0.1);
}

.gift-message-input::placeholder {
  color: #9a97a8;
}

.gift-message-char {
  text-align: right;
  font-size: 0.75rem;
  color: #9a97a8;
  margin-top: 6px;
}

/* Gift Options */
.gift-options {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10px;
  margin-top: 16px;
}

.gift-option {
  position: relative;
  padding: 12px;
  background: #fff;
  border: 1px solid rgba(115, 103, 240, 0.15);
  border-radius: 10px;
  text-align: center;
  cursor: pointer;
  transition: all 0.3s ease;
}

.gift-option:hover {
  border-color: rgba(115, 103, 240, 0.3);
}

.gift-option.selected {
  border-color: #7367f0;
  background: rgba(115, 103, 240, 0.05);
}

.gift-option input {
  position: absolute;
  opacity: 0;
  cursor: pointer;
}

.gift-option-icon {
  font-size: 1.5rem;
  margin-bottom: 6px;
}

.gift-option-name {
  font-size: 0.8rem;
  font-weight: 500;
  color: #2d2d3a;
}

.gift-option-price {
  font-size: 0.75rem;
  color: #6c757d;
  margin-top: 2px;
}

/* ===== RESPONSIVE ===== */
@media (max-width: 767.98px) {
  .gift-wrapping {
    padding: 16px;
  }
  
  .gift-wrapping-icon {
    width: 38px;
    height: 38px;
  }
  
  .gift-wrapping-icon i {
    font-size: 1rem;
  }
  
  .gift-wrapping-title {
    font-size: 0.9rem;
  }
  
  .gift-options {
    grid-template-columns: 1fr;
  }
}
</style>

<div class="gift-wrapping" id="gift-wrapping">
  <label class="gift-wrapping-header">
    <div class="gift-wrapping-checkbox">
      <input type="checkbox" id="gift-wrapping-checkbox" name="attributes[gift_wrapping]" value="yes" onchange="toggleGiftMessage()">
      <span class="gift-wrapping-check"></span>
    </div>
    <div class="gift-wrapping-icon">
      <i class="fa-solid fa-gift"></i>
    </div>
    <div class="gift-wrapping-info">
      <h4 class="gift-wrapping-title">Add Gift Wrapping</h4>
      <p class="gift-wrapping-description">Make it extra special with premium gift packaging</p>
    </div>
    <span class="gift-wrapping-price">+${{ settings.gift_wrap_price | default: '5.00' }}</span>
  </label>
  
  <div class="gift-message-area" id="gift-message-area">
    <!-- Gift Wrap Style Options -->
    <div class="gift-options">
      <label class="gift-option selected" onclick="selectGiftOption(this)">
        <input type="radio" name="attributes[gift_wrap_style]" value="classic" checked>
        <div class="gift-option-icon">üéÅ</div>
        <div class="gift-option-name">Classic</div>
        <div class="gift-option-price">Included</div>
      </label>
      <label class="gift-option" onclick="selectGiftOption(this)">
        <input type="radio" name="attributes[gift_wrap_style]" value="luxury">
        <div class="gift-option-icon">‚ú®</div>
        <div class="gift-option-name">Luxury</div>
        <div class="gift-option-price">+$3.00</div>
      </label>
      <label class="gift-option" onclick="selectGiftOption(this)">
        <input type="radio" name="attributes[gift_wrap_style]" value="eco">
        <div class="gift-option-icon">üåø</div>
        <div class="gift-option-name">Eco-Friendly</div>
        <div class="gift-option-price">+$2.00</div>
      </label>
    </div>
    
    <!-- Gift Message -->
    <label class="gift-message-label" style="margin-top: 16px;">
      <i class="fa-solid fa-pen"></i> Add a gift message (optional)
    </label>
    <textarea 
      class="gift-message-input" 
      name="attributes[gift_message]" 
      id="gift-message" 
      placeholder="Write your personal message here..."
      maxlength="200"
      oninput="updateCharCount()"></textarea>
    <p class="gift-message-char"><span id="gift-char-count">0</span>/200 characters</p>
  </div>
</div>

<script>
function toggleGiftMessage() {
  const checkbox = document.getElementById('gift-wrapping-checkbox');
  const messageArea = document.getElementById('gift-message-area');
  
  if (checkbox.checked) {
    messageArea.classList.add('active');
    
    // Update cart attributes
    updateCartAttribute('gift_wrapping', 'yes');
  } else {
    messageArea.classList.remove('active');
    
    // Remove cart attributes
    updateCartAttribute('gift_wrapping', '');
    updateCartAttribute('gift_message', '');
    updateCartAttribute('gift_wrap_style', '');
  }
}

function selectGiftOption(element) {
  document.querySelectorAll('.gift-option').forEach(opt => opt.classList.remove('selected'));
  element.classList.add('selected');
  
  const input = element.querySelector('input');
  if (input) {
    updateCartAttribute('gift_wrap_style', input.value);
  }
}

function updateCharCount() {
  const textarea = document.getElementById('gift-message');
  const counter = document.getElementById('gift-char-count');
  
  if (textarea && counter) {
    counter.textContent = textarea.value.length;
  }
}

// Update cart attribute
async function updateCartAttribute(key, value) {
  try {
    // Get current cart
    const cartResponse = await fetch('/cart.js');
    const cart = await cartResponse.json();
    
    // Update attributes
    const attributes = cart.attributes || {};
    if (value) {
      attributes[key] = value;
    } else {
      delete attributes[key];
    }
    
    // Save to cart
    await fetch('/cart/update.js', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ attributes: attributes })
    });
  } catch (error) {
    console.error('Error updating cart attribute:', error);
  }
}

// Save message on blur
document.getElementById('gift-message')?.addEventListener('blur', function() {
  updateCartAttribute('gift_message', this.value);
});

// Check if gift wrapping was previously selected
document.addEventListener('DOMContentLoaded', async function() {
  try {
    const response = await fetch('/cart.js');
    const cart = await response.json();
    
    if (cart.attributes && cart.attributes.gift_wrapping === 'yes') {
      const checkbox = document.getElementById('gift-wrapping-checkbox');
      if (checkbox) {
        checkbox.checked = true;
        toggleGiftMessage();
      }
      
      // Restore message
      const message = cart.attributes.gift_message;
      if (message) {
        const textarea = document.getElementById('gift-message');
        if (textarea) {
          textarea.value = message;
          updateCharCount();
        }
      }
      
      // Restore style
      const style = cart.attributes.gift_wrap_style;
      if (style) {
        const option = document.querySelector(`.gift-option input[value="${style}"]`);
        if (option) {
          selectGiftOption(option.closest('.gift-option'));
        }
      }
    }
  } catch (error) {
    console.error('Error loading cart attributes:', error);
  }
});
</script>
