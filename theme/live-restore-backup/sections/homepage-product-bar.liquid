{% comment %}
  Product Showcase Bar - Fully Dynamic
  Local Pickup Alert + Add to Cart Buttons
{% endcomment %}

<section class="cp-product-bar" style="background: {{ section.settings.section_bg | default: '#ffffff' }}; padding: {{ section.settings.section_padding | default: '1.5rem 0' }};">
  <div class="container">
    {% if section.settings.show_header %}
    <div class="cp-product-bar-header" style="text-align: center; margin-bottom: 2rem;">
      {% if section.settings.badge_text != blank %}
        <span class="cp-section-badge">{{ section.settings.badge_text }}</span>
      {% endif %}
      {% if section.settings.title != blank %}
        <h2 class="cp-section-title">{{ section.settings.title }}</h2>
      {% endif %}
    </div>
    {% endif %}
    
    <div class="cp-product-bar-grid cols-{{ section.settings.mobile_columns | default: '2' }}">
      {% for block in section.blocks %}
        {% if block.type == 'product_card' %}
          {% assign card_product = block.settings.product %}
          
          {% if card_product != blank %}
            <!-- Shopify Product Selected - Auto Data -->
            <div class="cp-product-bar-item" {{ block.shopify_attributes }}>
              <a href="{{ card_product.url }}" class="cp-product-bar-link">
                <div class="cp-product-bar-img">
                  {% if block.settings.show_3d_viewer %}
                    <!-- 3D T-Shirt Preview with Real Shirt -->
                    <div class="cp-3d-tshirt-preview">
                      <canvas class="cp-mini-tshirt-canvas" data-block-id="{{ block.id }}"></canvas>
                      <div class="cp-3d-badge-label"><i class="fa-solid fa-cube"></i> 3D</div>
                    </div>
                  {% elsif card_product.featured_image %}
                    <img src="{{ card_product.featured_image | image_url: width: 300 }}" alt="{{ card_product.title }}" width="300" height="300" loading="lazy" style="width:100%;height:100%;object-fit:cover;display:block;">
                  {% else %}
                    <div class="cp-product-bar-placeholder">
                      <i class="fa-solid fa-image"></i>
                    </div>
                  {% endif %}
                  
                  <!-- 4D Badge - Always visible if enabled -->
                  {% if block.settings.show_4d_badge %}
                  <div class="cp-4d-badge">
                    <span class="cp-4d-text">4D</span>
                    <span class="cp-4d-discount">{{ block.settings.badge_discount_text | default: '20% OFF' }}</span>
                  </div>
                  {% endif %}
                  
                  <span class="cp-product-bar-btn">{{ section.settings.view_product_text | default: 'VIEW PRODUCT' }}</span>
                </div>
                <div class="cp-product-bar-content">
                  <div class="cp-product-bar-title">{{ card_product.title }}</div>
                  <div class="cp-product-bar-rating">
                    {% assign rating = block.settings.rating | default: 5 %}
                    {% assign next_star = rating | plus: 1 %}
                    {% for i in (1..5) %}
                      {% if i <= rating %}
                        <i class="fa-solid fa-star"></i>
                      {% elsif i == next_star and block.settings.half_star %}
                        <i class="fa-solid fa-star-half-stroke"></i>
                      {% else %}
                        <i class="fa-regular fa-star"></i>
                      {% endif %}
                    {% endfor %}
                    <span>({{ block.settings.review_count | default: card_product.metafields.reviews.rating_count | default: 0 }})</span>
                  </div>
                  <div class="cp-product-bar-prices">
                    {% if card_product.compare_at_price > card_product.price %}
                      <span class="cp-product-bar-old-price">{{ card_product.compare_at_price | money }}</span>
                    {% endif %}
                    <span class="cp-product-bar-price">{{ card_product.price | money }}</span>
                  </div>
                </div>
              </a>
              
              {%- comment -%} Upload Widget Area (Global OR Block level) {%- endcomment -%}
              {%- assign show_upload_bar = false -%}
              {%- if section.settings.enable_upload_mode_global or block.settings.enable_upload_mode -%}
                {%- assign show_upload_bar = true -%}
              {%- endif -%}
              
              {% if show_upload_bar %}
                <div class="upload-widget-area">
                  {% render 'dtf-quick-upload-btn', product: card_product, button_text: 'Upload Design' %}
                </div>
              {% endif %}

              {%- comment -%} Add to Cart Button (Hidden when upload mode is enabled) {%- endcomment -%}
              {% unless show_upload_bar %}
              <form action="{{ routes.cart_add_url }}" method="post" class="cp-product-bar-cart-form">
                <input type="hidden" name="id" value="{{ card_product.selected_or_first_available_variant.id }}">
                <button type="submit" class="sb-btn cp-product-bar-add-btn" {% unless card_product.available %}disabled{% endunless %}>
                  <i class="fa-solid fa-cart-plus"></i>
                  {% if card_product.available %}
                    {{ section.settings.add_to_cart_text | default: 'Add to Cart' }}
                  {% else %}
                    {{ section.settings.sold_out_text | default: 'Sold Out' }}
                  {% endif %}
                </button>
              </form>
              {% endunless %}
            </div>
          {% else %}
            <!-- Manual Entry Fallback -->
            <div class="cp-product-bar-item" {{ block.shopify_attributes }}>
              <a href="{{ block.settings.link | default: '#' }}" class="cp-product-bar-link">
                <div class="cp-product-bar-img">
                  {% if block.settings.image %}
                    <img src="{{ block.settings.image | image_url: width: 300 }}" alt="{{ block.settings.title }}" width="300" height="300" loading="lazy" style="width:100%;height:100%;object-fit:cover;display:block;">
                  {% elsif block.settings.image_url != blank %}
                    <img src="{{ block.settings.image_url }}" alt="{{ block.settings.title }}" width="300" height="300" loading="lazy" style="width:100%;height:100%;object-fit:cover;display:block;">
                  {% else %}
                    <div class="cp-product-bar-placeholder">
                      <i class="fa-solid fa-image"></i>
                    </div>
                  {% endif %}
                  <span class="cp-product-bar-btn">{{ section.settings.view_product_text | default: 'VIEW PRODUCT' }}</span>
                </div>
                <div class="cp-product-bar-content">
                  <div class="cp-product-bar-title">{{ block.settings.title | default: 'Select a product' }}</div>
                  <div class="cp-product-bar-rating">
                    {% assign rating = block.settings.rating | default: 5 %}
                    {% assign next_star = rating | plus: 1 %}
                    {% for i in (1..5) %}
                      {% if i <= rating %}
                        <i class="fa-solid fa-star"></i>
                      {% elsif i == next_star and block.settings.half_star %}
                        <i class="fa-solid fa-star-half-stroke"></i>
                      {% else %}
                        <i class="fa-regular fa-star"></i>
                      {% endif %}
                    {% endfor %}
                    <span>({{ block.settings.review_count }})</span>
                  </div>
                  <div class="cp-product-bar-prices">
                    {% if block.settings.compare_price != blank %}
                      <span class="cp-product-bar-old-price">{{ block.settings.compare_price }}</span>
                    {% endif %}
                    <span class="cp-product-bar-price">{{ block.settings.price | default: '$0.00' }}</span>
                  </div>
                </div>
              </a>
              
              {%- comment -%} Manual Entry: Extract product from link and check upload mode {%- endcomment -%}
              {%- assign manual_product_handle = block.settings.link | split: '/products/' | last | split: '?' | first | split: '/' | first -%}
              {%- assign manual_product = all_products[manual_product_handle] -%}
              
              {%- assign show_upload_manual = false -%}
              {%- if section.settings.enable_upload_mode_global or block.settings.enable_upload_mode -%}
                {%- if manual_product != blank -%}
                  {%- assign show_upload_manual = true -%}
                {%- endif -%}
              {%- endif -%}
              
              {% if show_upload_manual %}
                <div class="upload-widget-area">
                  {% render 'dtf-quick-upload-btn', product: manual_product, button_text: 'Upload Design' %}
                </div>
              {% else %}
                <button class="sb-btn cp-product-bar-add-btn" onclick="window.location.href='{{ block.settings.link | default: '#' }}'">
                  <i class="fa-solid fa-cart-plus"></i>
                  {{ section.settings.add_to_cart_text | default: 'Add to Cart' }}
                </button>
              {% endif %}
            </div>
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>
    
    <!-- Local Pickup Alert - Soft Design -->
    {% if section.settings.show_pickup_alert %}
    <div class="cp-pickup-alert-soft">
      <div class="cp-pickup-inner">
        <div class="cp-pickup-left">
          <span class="cp-pickup-dot"></span>
          <span class="cp-pickup-label">{{ section.settings.pickup_badge | default: 'Pickup available' }}</span>
        </div>
        <div class="cp-pickup-center">
          <span class="cp-pickup-location">
            <i class="fa-solid fa-store"></i>
            {{ section.settings.pickup_location | default: 'Dallas, TX' }}
          </span>
          <span class="cp-pickup-divider">â€¢</span>
          <span class="cp-pickup-time-soft">
            {{ section.settings.pickup_time | default: 'Today until 7:00 PM' }}
          </span>
        </div>
        <a href="{{ section.settings.pickup_link | default: '#' }}" class="cp-pickup-link">
          {{ section.settings.pickup_btn_text | default: 'View store info' }}
          <i class="fa-solid fa-chevron-right"></i>
        </a>
      </div>
    </div>
    {% endif %}
  </div>
</section>

<!-- Floating Add to Cart Button -->
{% if section.settings.show_floating_cart %}
<div class="cp-floating-cart" id="floatingCartBtn">
  <a href="{{ routes.cart_url }}" class="cp-floating-cart-btn">
    <i class="fa-solid fa-shopping-cart"></i>
    <span class="cp-floating-cart-text">{{ section.settings.floating_cart_text | default: 'View Cart' }}</span>
    <span class="cp-floating-cart-count">{{ cart.item_count }}</span>
  </a>
</div>
{% endif %}

<style>
  /* Product Bar Styles */
  .cp-product-bar-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 1.25rem;
  }
  
  .cp-product-bar-item {
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 15px rgba(0,0,0,0.06);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }
  
  .cp-product-bar-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(115, 103, 240, 0.15);
  }
  
  .cp-product-bar-link {
    text-decoration: none;
    flex: 1;
  }
  
  .cp-product-bar-placeholder {
    width: 100%;
    height: 100%;
    min-height: 200px;
    background: linear-gradient(135deg, #f0f0f0, #e8e8e8);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #bbb;
    font-size: 2.5rem;
  }
  
  .cp-product-bar-discount {
    position: absolute;
    top: 10px;
    left: 10px;
    background: #ea5455;
    color: #fff;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
  }
  
  .cp-product-bar-img {
    position: relative;
    width: 100%;
    aspect-ratio: 1;
    overflow: hidden;
  }
  
  .cp-product-bar-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
    display: block;
  }
  
  /* Mini 3D Viewer Styles */
  .cp-mini-3d-viewer {
    width: 100%;
    height: 100%;
    position: relative;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  }
  
  .cp-mini-canvas {
    width: 100% !important;
    height: 100% !important;
    display: block;
  }
  
  .cp-3d-loading {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 10;
  }
  
  .cp-3d-spinner {
    width: 40px;
    height: 40px;
    border: 3px solid #e0e0e0;
    border-top-color: #7367F0;
    border-radius: 50%;
    animation: spin3d 1s linear infinite;
  }
  
  @keyframes spin3d {
    to { transform: rotate(360deg); }
  }
  
  .cp-mini-3d-viewer.loaded .cp-3d-loading {
    display: none;
  }
  
  /* 3D T-Shirt Preview Container */
  .cp-3d-tshirt-preview {
    width: 100%;
    height: 100%;
    aspect-ratio: 1;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    position: relative;
    overflow: hidden;
  }
  
  .cp-mini-tshirt-canvas {
    width: 100% !important;
    height: 100% !important;
    display: block;
  }
  
  .cp-3d-badge-label {
    position: absolute;
    bottom: 8px;
    left: 8px;
    background: rgba(115, 103, 240, 0.9);
    color: #fff;
    padding: 4px 10px;
    border-radius: 20px;
    font-size: 0.7rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 4px;
    z-index: 5;
  }
  
  .cp-3d-badge-label i {
    font-size: 0.65rem;
  }

  .cp-product-bar-item:hover .cp-product-bar-img img {
    transform: scale(1.05);
  }
  
  .cp-product-bar-btn {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%) translateY(20px);
    background: #1a1a1a;
    color: #fff;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
    opacity: 0;
    transition: all 0.3s ease;
  }
  
  .cp-product-bar-item:hover .cp-product-bar-btn {
    opacity: 1;
    transform: translateX(-50%) translateY(0);
  }
  
  .cp-product-bar-content {
    padding: 1rem;
    text-align: center;
  }
  
  .cp-product-bar-title {
    font-size: 0.9rem;
    font-weight: 600;
    color: #5d596c;
    margin-bottom: 0.5rem;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .cp-product-bar-rating {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2px;
    margin-bottom: 0.5rem;
  }
  
  .cp-product-bar-rating i {
    color: #FFB400;
    font-size: 0.75rem;
  }
  
  .cp-product-bar-rating span {
    color: #6e6b7b;
    font-size: 0.75rem;
    margin-left: 0.25rem;
  }
  
  .cp-product-bar-prices {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }
  
  .cp-product-bar-old-price {
    color: #b9b9c3;
    text-decoration: line-through;
    font-size: 0.875rem;
  }
  
  .cp-product-bar-price {
    color: #7367F0;
    font-weight: 700;
    font-size: 1.125rem;
  }
  
  /* Add to Cart Button */
  .cp-product-bar-cart-form {
    padding: 0 1rem 1rem;
  }
  
  .cp-product-bar-add-btn {
    width: 100%;
    padding: 0.625rem 1rem;
    background: linear-gradient(135deg, #7367F0, #5e50ee);
    color: #fff;
    border: none;
    border-radius: 8px;
    font-size: 0.8125rem;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    transition: all 0.2s ease;
  }
  
  .cp-product-bar-add-btn:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(115, 103, 240, 0.4);
  }
  
  .cp-product-bar-add-btn:disabled {
    background: #ccc;
    cursor: not-allowed;
  }
  
  /* 4D Premium Badge - Gold Soft Style */
  .cp-4d-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    display: flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.375rem 0.875rem;
    background: linear-gradient(135deg, #D4AF37 0%, #F4E5B2 50%, #D4AF37 100%);
    border-radius: 50px;
    box-shadow: 0 2px 12px rgba(212, 175, 55, 0.35);
    z-index: 2;
  }
  
  .cp-4d-text {
    font-size: 0.75rem;
    font-weight: 800;
    color: #8B6914;
    text-shadow: 0 1px 0 rgba(255,255,255,0.4);
    letter-spacing: 0.5px;
  }
  
  .cp-4d-discount {
    font-size: 0.7rem;
    font-weight: 700;
    color: #5D4A10;
    background: rgba(255,255,255,0.5);
    padding: 0.15rem 0.5rem;
    border-radius: 50px;
  }
  
  /* Upload Area */
  .cp-product-upload-area {
    padding: 0 1rem;
    margin-bottom: 0.5rem;
  }
  
  .cp-upload-label {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    background: linear-gradient(135deg, rgba(115, 103, 240, 0.1), rgba(115, 103, 240, 0.18));
    border: 2px dashed #7367F0;
    border-radius: 10px;
    font-size: 0.8125rem;
    font-weight: 600;
    color: #7367F0;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%;
  }
  
  .cp-upload-label:hover {
    background: linear-gradient(135deg, #7367F0, #8b80f8);
    border-color: #7367F0;
    border-style: solid;
    color: #fff;
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(115, 103, 240, 0.35);
  }
  
  .cp-upload-label i {
    font-size: 1.125rem;
  }
  
  .cp-upload-input {
    display: none;
  }
  
  /* Local Pickup Alert - Soft Design */
  .cp-pickup-alert-soft {
    margin-top: 1.5rem;
    padding: 0.875rem 1.25rem;
    background: #fafafa;
    border-radius: 10px;
    border: 1px solid #ebebeb;
  }
  
  .cp-pickup-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    flex-wrap: wrap;
  }
  
  .cp-pickup-left {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .cp-pickup-dot {
    width: 8px;
    height: 8px;
    background: #22c55e;
    border-radius: 50%;
    animation: pulse-dot 2s ease-in-out infinite;
  }
  
  @keyframes pulse-dot {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.6; transform: scale(1.2); }
  }
  
  .cp-pickup-label {
    font-size: 0.8125rem;
    font-weight: 600;
    color: #22c55e;
  }
  
  .cp-pickup-center {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex: 1;
    justify-content: center;
  }
  
  .cp-pickup-location {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.8125rem;
    color: #6e6b7b;
  }
  
  .cp-pickup-location i {
    font-size: 0.75rem;
    color: #a5a3ae;
  }
  
  .cp-pickup-divider {
    color: #d4d4d4;
    font-size: 0.75rem;
  }
  
  .cp-pickup-time-soft {
    font-size: 0.8125rem;
    color: #6e6b7b;
  }
  
  .cp-pickup-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.8125rem;
    color: #7367F0;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
  }
  
  .cp-pickup-link:hover {
    color: #5e50ee;
  }
  
  .cp-pickup-link i {
    font-size: 0.625rem;
    transition: transform 0.2s ease;
  }
  
  .cp-pickup-link:hover i {
    transform: translateX(3px);
  }
  
  /* Floating Cart Button */
  .cp-floating-cart {
    position: fixed;
    bottom: 30px;
    right: 30px;
    z-index: 999;
  }
  
  .cp-floating-cart-btn {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1.5rem;
    background: linear-gradient(135deg, #7367F0, #5e50ee);
    color: #fff;
    text-decoration: none;
    border-radius: 50px;
    font-weight: 600;
    box-shadow: 0 10px 40px rgba(115, 103, 240, 0.4);
    animation: floatPulse 3s ease-in-out infinite;
  }
  
  .cp-floating-cart-btn:hover {
    transform: scale(1.05);
  }
  
  .cp-floating-cart-count {
    background: #ea5455;
    color: #fff;
    min-width: 24px;
    height: 24px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: 700;
  }
  
  /* Shake Animation */
  @keyframes floatPulse {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-5px);
    }
  }
  
  @keyframes shake {
    0%, 100% { transform: translateX(0); }
    10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
    20%, 40%, 60%, 80% { transform: translateX(5px); }
  }
  
  .cp-floating-cart-btn.shake {
    animation: shake 0.6s ease-in-out;
  }
  
  /* Responsive */
  @media (max-width: 1200px) {
    .cp-product-bar-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
  
  @media (max-width: 991px) {
    .cp-product-bar-grid {
      grid-template-columns: repeat(3, 1fr);
    }
    
    .cp-pickup-alert {
      flex-direction: column;
      text-align: center;
    }
    
    .cp-pickup-content {
      justify-content: center;
    }
    
    .cp-pickup-action {
      margin-left: 0;
    }
  }
  
  @media (max-width: 767px) {
    .cp-product-bar {
      padding: 1rem 0 !important;
    }
    
    .cp-product-bar .container {
      padding: 0 8px !important;
    }
    
    .cp-product-bar-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 8px;
      max-width: 100%;
      margin: 0;
      padding: 0;
    }
    
    .cp-product-bar-grid.cols-1 {
      grid-template-columns: 1fr;
      max-width: 320px;
      margin: 0 auto;
    }
    
    .cp-product-bar-grid.cols-2 {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .cp-product-bar-item {
      border-radius: 10px;
      box-shadow: 0 1px 6px rgba(0,0,0,0.05);
      background: #fff;
      overflow: hidden;
    }
    
    .cp-product-bar-img {
      width: 100%;
      height: 110px;
      aspect-ratio: auto;
      background: #f8f8f8;
    }
    
    .cp-product-bar-img img {
      width: 100%;
      height: 110px;
      object-fit: cover;
    }
    
