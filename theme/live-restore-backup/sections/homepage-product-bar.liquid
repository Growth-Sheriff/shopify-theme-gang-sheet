<script>
  // Shake floating cart button periodically
  document.addEventListener('DOMContentLoaded', function() {
    const floatingBtn = document.querySelector('.cp-floating-cart-btn');
    if (floatingBtn) {
      setInterval(() => {
        floatingBtn.classList.add('shake');
        setTimeout(() => {
          floatingBtn.classList.remove('shake');
        }, 600);
      }, 5000);
    }
    
    // Initialize Mini T-Shirt 3D Viewers - wait for Three.js
    setTimeout(initMiniTshirtViewers, 500);
  });
  
  function initMiniTshirtViewers() {
    const canvases = document.querySelectorAll('.cp-mini-tshirt-canvas');
    if (canvases.length === 0) {
      console.log('No mini tshirt canvases found');
      return;
    }
    
    // Check if Three.js is loaded
    if (typeof THREE === 'undefined') {
      console.log('THREE not loaded, retrying...');
      setTimeout(initMiniTshirtViewers, 300);
      return;
    }
    
    if (typeof THREE.GLTFLoader === 'undefined') {
      console.log('GLTFLoader not loaded, retrying...');
      setTimeout(initMiniTshirtViewers, 300);
      return;
    }
    
    console.log('Three.js ready, initializing mini viewers...');
    
    const modelPath = '{{ "shirt_baked.glb" | asset_url }}';
    const lightColors = ['#7dd3fc', '#f472b6', '#fbbf24', '#86efac', '#a5b4fc', '#fca5a5'];
    
    canvases.forEach((canvas, index) => {
      const container = canvas.parentElement;
      const containerWidth = container.clientWidth || 200;
      
      // Scene
      const scene = new THREE.Scene();
      scene.background = new THREE.Color(0xf0f0f8);
      
      // Camera - closer view for product card
      const camera = new THREE.PerspectiveCamera(25, 1, 0.1, 100);
      camera.position.set(0, 0, 2.5);
      
      // Renderer
      const renderer = new THREE.WebGLRenderer({
        canvas: canvas,
        antialias: true,
        alpha: false
      });
      renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
      renderer.setSize(containerWidth, containerWidth);
      renderer.outputEncoding = THREE.sRGBEncoding;
      
      // Lighting - same as product page
      const ambientLight = new THREE.AmbientLight(0xffffff, 0.5);
      scene.add(ambientLight);
      
      const keyLight = new THREE.DirectionalLight(0xffffff, 0.8);
      keyLight.position.set(3, 5, 5);
      scene.add(keyLight);
      
      const fillLight = new THREE.DirectionalLight(0xffffff, 0.4);
      fillLight.position.set(-3, 3, 3);
      scene.add(fillLight);
      
      // Color for this card
      const colorIndex = index % lightColors.length;
      const shirtColor = new THREE.Color(lightColors[colorIndex]);
      
      // Load model
      const loader = new THREE.GLTFLoader();
      
      loader.load(
        modelPath,
        function(gltf) {
          console.log('Mini shirt loaded for card', index);
          const model = gltf.scene;
          
          // Apply color to mesh
          model.traverse(function(child) {
            if (child.isMesh) {
              child.material = new THREE.MeshStandardMaterial({
                color: shirtColor,
                roughness: 0.85,
                metalness: 0
              });
            }
          });
          
          scene.add(model);
          
          // Animation
          let rotation = 0;
          function animate() {
            requestAnimationFrame(animate);
            rotation += 0.01;
            model.rotation.y = rotation;
            renderer.render(scene, camera);
          }
          animate();
        },
        undefined,
        function(error) {
          console.error('Mini shirt load error:', error);
          // Fallback - create simple box as placeholder
          const geometry = new THREE.BoxGeometry(0.6, 0.8, 0.2);
          const material = new THREE.MeshStandardMaterial({ color: shirtColor, roughness: 0.85 });
          const fallback = new THREE.Mesh(geometry, material);
          scene.add(fallback);
          
          let rotation = 0;
          function animate() {
            requestAnimationFrame(animate);
            rotation += 0.01;
            fallback.rotation.y = rotation;
            renderer.render(scene, camera);
          }
          animate();
        }
      );
    });
  }
</script>

