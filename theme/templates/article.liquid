<style>
/* ===== ARTICLE PAGE STYLES ===== */
.article-page {
  padding: 40px 0 60px;
  background: #fff;
}

/* Breadcrumb */
.article-breadcrumb {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 30px;
  font-size: 0.85rem;
  color: #9a97a8;
}

.article-breadcrumb a {
  color: #7367f0;
  text-decoration: none;
}

.article-breadcrumb a:hover {
  text-decoration: underline;
}

.article-breadcrumb svg {
  width: 14px;
  height: 14px;
}

/* Article Header */
.article-header {
  text-align: center;
  max-width: 800px;
  margin: 0 auto 40px;
  padding: 0 15px;
}

.article-tags {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 8px;
  margin-bottom: 16px;
}

.article-tag {
  padding: 4px 12px;
  background: rgba(115, 103, 240, 0.1);
  border-radius: 20px;
  font-size: 0.75rem;
  font-weight: 500;
  color: #7367f0;
  text-decoration: none;
}

.article-page-title {
  font-size: 2.5rem;
  font-weight: 700;
  color: #2d2d3a;
  line-height: 1.3;
  margin: 0 0 20px 0;
}

.article-header-meta {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20px;
  color: #6c757d;
  font-size: 0.9rem;
}

.article-header-meta svg {
  width: 16px;
  height: 16px;
  margin-right: 4px;
}

.article-author {
  display: flex;
  align-items: center;
}

.article-author-avatar {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  background: linear-gradient(135deg, #7367f0, #9e95f5);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-weight: 600;
  font-size: 0.85rem;
  margin-right: 10px;
}

/* Featured Image */
.article-featured-image {
  max-width: 1000px;
  margin: 0 auto 40px;
  padding: 0 15px;
}

.article-featured-image img {
  width: 100%;
  height: auto;
  border-radius: 16px;
  box-shadow: 0 8px 40px rgba(0,0,0,0.1);
}

/* Article Content */
.article-content {
  max-width: 760px;
  margin: 0 auto;
  padding: 0 15px;
  font-size: 1.1rem;
  line-height: 1.8;
  color: #5d596c;
}

.article-content h2 {
  font-size: 1.75rem;
  font-weight: 700;
  color: #2d2d3a;
  margin: 2.5rem 0 1rem;
}

.article-content h3 {
  font-size: 1.4rem;
  font-weight: 600;
  color: #2d2d3a;
  margin: 2rem 0 0.75rem;
}

.article-content h4 {
  font-size: 1.2rem;
  font-weight: 600;
  color: #2d2d3a;
  margin: 1.5rem 0 0.5rem;
}

.article-content p {
  margin-bottom: 1.5rem;
}

.article-content a {
  color: #7367f0;
  text-decoration: underline;
}

.article-content img {
  max-width: 100%;
  height: auto;
  border-radius: 12px;
  margin: 1.5rem 0;
}

.article-content ul,
.article-content ol {
  margin: 1.5rem 0;
  padding-left: 1.5rem;
}

.article-content li {
  margin-bottom: 0.5rem;
}

.article-content blockquote {
  margin: 2rem 0;
  padding: 1.5rem 2rem;
  background: linear-gradient(135deg, rgba(115, 103, 240, 0.05), rgba(158, 149, 245, 0.08));
  border-left: 4px solid #7367f0;
  border-radius: 0 12px 12px 0;
  font-style: italic;
  color: #5d596c;
}

.article-content pre,
.article-content code {
  background: #f8f9fc;
  border-radius: 8px;
  font-family: 'Fira Code', monospace;
}

.article-content pre {
  padding: 1.5rem;
  overflow-x: auto;
  margin: 1.5rem 0;
}

.article-content code {
  padding: 2px 6px;
  font-size: 0.9em;
}

/* Share Section */
.article-share {
  max-width: 760px;
  margin: 50px auto 0;
  padding: 30px;
  background: linear-gradient(135deg, #f8f9fc, #f0f2f8);
  border-radius: 16px;
  text-align: center;
}

.article-share-title {
  font-size: 0.9rem;
  font-weight: 600;
  color: #5d596c;
  margin-bottom: 16px;
}

.article-share-links {
  display: flex;
  justify-content: center;
  gap: 12px;
}

.article-share-link {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44px;
  height: 44px;
  background: #fff;
  border-radius: 50%;
  color: #5d596c;
  text-decoration: none;
  transition: all 0.3s ease;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}

.article-share-link:hover {
  transform: translateY(-3px);
  box-shadow: 0 6px 20px rgba(115, 103, 240, 0.2);
}

.article-share-link.facebook:hover { background: #1877f2; color: #fff; }
.article-share-link.twitter:hover { background: #1da1f2; color: #fff; }
.article-share-link.pinterest:hover { background: #e60023; color: #fff; }
.article-share-link.linkedin:hover { background: #0a66c2; color: #fff; }
.article-share-link.email:hover { background: #7367f0; color: #fff; }

/* Author Box */
.article-author-box {
  max-width: 760px;
  margin: 40px auto;
  padding: 30px;
  background: #fff;
  border: 1px solid rgba(115, 103, 240, 0.1);
  border-radius: 16px;
  display: flex;
  gap: 20px;
  align-items: center;
}

.author-box-avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background: linear-gradient(135deg, #7367f0, #9e95f5);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 2rem;
  font-weight: 700;
  flex-shrink: 0;
}

.author-box-info h4 {
  font-size: 1.1rem;
  font-weight: 600;
  color: #2d2d3a;
  margin: 0 0 6px 0;
}

.author-box-info p {
  font-size: 0.9rem;
  color: #6c757d;
  margin: 0;
}

/* Navigation */
.article-nav {
  max-width: 760px;
  margin: 50px auto;
  padding: 0 15px;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20px;
}

.article-nav-link {
  padding: 20px;
  background: #fff;
  border: 1px solid rgba(115, 103, 240, 0.1);
  border-radius: 12px;
  text-decoration: none;
  transition: all 0.3s ease;
}

.article-nav-link:hover {
  border-color: #7367f0;
  box-shadow: 0 6px 20px rgba(115, 103, 240, 0.1);
}

.article-nav-link.prev {
  text-align: left;
}

.article-nav-link.next {
  text-align: right;
}

.article-nav-label {
  font-size: 0.75rem;
  text-transform: uppercase;
  color: #9a97a8;
  margin-bottom: 4px;
  display: flex;
  align-items: center;
  gap: 4px;
}

.article-nav-link.next .article-nav-label {
  justify-content: flex-end;
}

.article-nav-title {
  font-size: 0.95rem;
  font-weight: 600;
  color: #2d2d3a;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* Comments */
.article-comments {
  max-width: 760px;
  margin: 50px auto;
  padding: 0 15px;
}

.comments-title {
  font-size: 1.5rem;
  font-weight: 700;
  color: #2d2d3a;
  margin-bottom: 30px;
}

.comment-form {
  background: #f8f9fc;
  padding: 30px;
  border-radius: 16px;
  margin-bottom: 40px;
}

.comment-form .form-group {
  margin-bottom: 20px;
}

.comment-form label {
  display: block;
  font-size: 0.9rem;
  font-weight: 500;
  color: #5d596c;
  margin-bottom: 8px;
}

.comment-form input,
.comment-form textarea {
  width: 100%;
  padding: 12px 16px;
  border: 1px solid rgba(115, 103, 240, 0.2);
  border-radius: 10px;
  font-size: 0.95rem;
  transition: border-color 0.3s ease;
}

.comment-form input:focus,
.comment-form textarea:focus {
  outline: none;
  border-color: #7367f0;
}

.comment-form textarea {
  min-height: 120px;
  resize: vertical;
}

.comment-form button {
  padding: 12px 30px;
  background: linear-gradient(135deg, #7367f0, #9e95f5);
  border: none;
  border-radius: 10px;
  color: #fff;
  font-size: 0.95rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.comment-form button:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(115, 103, 240, 0.3);
}

.comment-item {
  padding: 20px 0;
  border-bottom: 1px solid rgba(0,0,0,0.05);
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-header {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 10px;
}

.comment-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: linear-gradient(135deg, #7367f0, #9e95f5);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-weight: 600;
  font-size: 0.85rem;
}

.comment-author {
  font-weight: 600;
  color: #2d2d3a;
}

.comment-date {
  font-size: 0.8rem;
  color: #9a97a8;
}

.comment-body {
  font-size: 0.95rem;
  color: #5d596c;
  line-height: 1.6;
}

/* ===== RESPONSIVE ===== */
@media (max-width: 767.98px) {
  .article-page {
    padding: 20px 0 40px;
  }
  
  .article-page-title {
    font-size: 1.6rem;
  }
  
  .article-header-meta {
    flex-direction: column;
    gap: 10px;
  }
  
  .article-content {
    font-size: 1rem;
  }
  
  .article-author-box {
    flex-direction: column;
    text-align: center;
  }
  
  .article-nav {
    grid-template-columns: 1fr;
  }
  
  .article-nav-link.next {
    text-align: left;
  }
  
  .article-nav-link.next .article-nav-label {
    justify-content: flex-start;
  }
}
</style>

<article class="article-page">
  <div class="container">
    
    <!-- Breadcrumb -->
    <nav class="article-breadcrumb">
      <a href="{{ routes.root_url }}">Home</a>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <a href="{{ blog.url }}">{{ blog.title }}</a>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <span>{{ article.title | truncate: 40 }}</span>
    </nav>
    
    <!-- Header -->
    <header class="article-header">
      {%- if article.tags.size > 0 -%}
        <div class="article-tags">
          {%- for tag in article.tags -%}
            <a href="{{ blog.url }}/tagged/{{ tag | handleize }}" class="article-tag">{{ tag }}</a>
          {%- endfor -%}
        </div>
      {%- endif -%}
      
      <h1 class="article-page-title">{{ article.title }}</h1>
      
      <div class="article-header-meta">
        <span class="article-author">
          <span class="article-author-avatar">{{ article.author | slice: 0 | upcase }}</span>
          {{ article.author }}
        </span>
        <span>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          {{ article.published_at | date: '%B %d, %Y' }}
        </span>
      </div>
    </header>
    
    <!-- Featured Image -->
    {%- if article.image -%}
      <div class="article-featured-image">
        <img 
          src="{{ article.image | image_url: width: 1200 }}" 
          alt="{{ article.title | escape }}"
          width="1200"
          height="675"
        >
      </div>
    {%- endif -%}
    
    <!-- Content -->
    <div class="article-content">
      {{ article.content }}
    </div>
    
    <!-- Share -->
    <div class="article-share">
      <p class="article-share-title">Share this article</p>
      <div class="article-share-links">
        <a href="https://www.facebook.com/sharer/sharer.php?u={{ shop.url }}{{ article.url }}" 
           target="_blank" 
           rel="noopener" 
           class="article-share-link facebook"
           aria-label="Share on Facebook">
          <i class="fa-brands fa-facebook-f"></i>
        </a>
        <a href="https://twitter.com/intent/tweet?url={{ shop.url }}{{ article.url }}&text={{ article.title | url_encode }}" 
           target="_blank" 
           rel="noopener" 
           class="article-share-link twitter"
           aria-label="Share on Twitter">
          <i class="fa-brands fa-x-twitter"></i>
        </a>
        <a href="https://pinterest.com/pin/create/button/?url={{ shop.url }}{{ article.url }}&media={{ article.image | image_url: width: 800 }}&description={{ article.title | url_encode }}" 
           target="_blank" 
           rel="noopener" 
           class="article-share-link pinterest"
           aria-label="Share on Pinterest">
          <i class="fa-brands fa-pinterest-p"></i>
        </a>
        <a href="https://www.linkedin.com/shareArticle?mini=true&url={{ shop.url }}{{ article.url }}&title={{ article.title | url_encode }}" 
           target="_blank" 
           rel="noopener" 
           class="article-share-link linkedin"
           aria-label="Share on LinkedIn">
          <i class="fa-brands fa-linkedin-in"></i>
        </a>
        <a href="mailto:?subject={{ article.title | url_encode }}&body={{ shop.url }}{{ article.url }}" 
           class="article-share-link email"
           aria-label="Share via Email">
          <i class="fa-solid fa-envelope"></i>
        </a>
      </div>
    </div>
    
    <!-- Author Box -->
    <div class="article-author-box">
      <div class="author-box-avatar">{{ article.author | slice: 0 | upcase }}</div>
      <div class="author-box-info">
        <h4>{{ article.author }}</h4>
        <p>Author at {{ shop.name }}</p>
      </div>
    </div>
    
    <!-- Navigation -->
    <nav class="article-nav">
      {%- if blog.previous_article -%}
        <a href="{{ blog.previous_article.url }}" class="article-nav-link prev">
          <span class="article-nav-label">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            Previous
          </span>
          <span class="article-nav-title">{{ blog.previous_article.title }}</span>
        </a>
      {%- else -%}
        <div></div>
      {%- endif -%}
      
      {%- if blog.next_article -%}
        <a href="{{ blog.next_article.url }}" class="article-nav-link next">
          <span class="article-nav-label">
            Next
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </span>
          <span class="article-nav-title">{{ blog.next_article.title }}</span>
        </a>
      {%- endif -%}
    </nav>
    
    <!-- Comments -->
    {%- if blog.comments_enabled? -%}
      <section class="article-comments">
        <h3 class="comments-title">
          {%- if article.comments_count > 0 -%}
            {{ article.comments_count }} {{ article.comments_count | pluralize: 'Comment', 'Comments' }}
          {%- else -%}
            Leave a Comment
          {%- endif -%}
        </h3>
        
        <!-- Comment Form -->
        {%- form 'new_comment', article, class: 'comment-form' -%}
          <div class="form-group">
            <label for="comment-author">Name</label>
            <input type="text" name="comment[author]" id="comment-author" required>
          </div>
          <div class="form-group">
            <label for="comment-email">Email</label>
            <input type="email" name="comment[email]" id="comment-email" required>
          </div>
          <div class="form-group">
            <label for="comment-body">Comment</label>
            <textarea name="comment[body]" id="comment-body" required></textarea>
          </div>
          <button type="submit">Post Comment</button>
        {%- endform -%}
        
        <!-- Comments List -->
        {%- if article.comments_count > 0 -%}
          {%- paginate article.comments by 10 -%}
            {%- for comment in article.comments -%}
              <div class="comment-item">
                <div class="comment-header">
                  <div class="comment-avatar">{{ comment.author | slice: 0 | upcase }}</div>
                  <div>
                    <div class="comment-author">{{ comment.author }}</div>
                    <div class="comment-date">{{ comment.created_at | date: '%B %d, %Y' }}</div>
                  </div>
                </div>
                <div class="comment-body">{{ comment.content }}</div>
              </div>
            {%- endfor -%}
          {%- endpaginate -%}
        {%- endif -%}
      </section>
    {%- endif -%}
    
  </div>
</article>
