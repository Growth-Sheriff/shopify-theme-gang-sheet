<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="theme-color" content="#7367f0">
  <title>{{ shop.name }} - Coming Soon</title>
  
  {{ content_for_header }}
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  
  <style>
    *, *::before, *::after {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
    
    body {
      font-family: 'Montserrat', system-ui, -apple-system, sans-serif;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: #fff;
      overflow-x: hidden;
    }
    
    /* Animated Background */
    .bg-animation {
      position: fixed;
      inset: 0;
      z-index: 0;
      overflow: hidden;
    }
    
    .bg-animation .bubble {
      position: absolute;
      border-radius: 50%;
      background: rgba(255,255,255,0.1);
      animation: float 15s infinite ease-in-out;
    }
    
    .bubble:nth-child(1) { width: 80px; height: 80px; left: 10%; animation-delay: 0s; }
    .bubble:nth-child(2) { width: 120px; height: 120px; left: 30%; animation-delay: 2s; }
    .bubble:nth-child(3) { width: 60px; height: 60px; left: 50%; animation-delay: 4s; }
    .bubble:nth-child(4) { width: 100px; height: 100px; left: 70%; animation-delay: 1s; }
    .bubble:nth-child(5) { width: 140px; height: 140px; left: 85%; animation-delay: 3s; }
    
    @keyframes float {
      0%, 100% {
        transform: translateY(100vh) scale(0);
        opacity: 0;
      }
      10% {
        opacity: 1;
      }
      90% {
        opacity: 1;
      }
      100% {
        transform: translateY(-100vh) scale(1);
        opacity: 0;
      }
    }
    
    /* Main Container */
    .password-page {
      position: relative;
      z-index: 1;
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 40px 20px;
      text-align: center;
    }
    
    /* Logo */
    .password-logo {
      margin-bottom: 40px;
    }
    
    .password-logo img {
      max-height: 60px;
      width: auto;
    }
    
    .password-logo-text {
      font-size: 2rem;
      font-weight: 700;
      letter-spacing: -0.5px;
    }
    
    /* Content */
    .password-content {
      max-width: 500px;
    }
    
    .password-icon {
      width: 100px;
      height: 100px;
      margin: 0 auto 30px;
      background: rgba(255,255,255,0.15);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      backdrop-filter: blur(10px);
    }
    
    .password-icon i {
      font-size: 2.5rem;
      opacity: 0.9;
    }
    
    .password-title {
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 16px;
      line-height: 1.2;
    }
    
    .password-subtitle {
      font-size: 1.1rem;
      opacity: 0.85;
      margin-bottom: 40px;
      line-height: 1.6;
    }
    
    /* Newsletter Form */
    .password-form {
      margin-bottom: 30px;
    }
    
    .password-form-group {
      display: flex;
      gap: 12px;
      max-width: 420px;
      margin: 0 auto;
    }
    
    .password-form input[type="email"] {
      flex: 1;
      padding: 16px 20px;
      border: 2px solid rgba(255,255,255,0.2);
      border-radius: 12px;
      background: rgba(255,255,255,0.1);
      color: #fff;
      font-size: 1rem;
      backdrop-filter: blur(10px);
      transition: all 0.3s ease;
    }
    
    .password-form input[type="email"]::placeholder {
      color: rgba(255,255,255,0.6);
    }
    
    .password-form input[type="email"]:focus {
      outline: none;
      border-color: rgba(255,255,255,0.5);
      background: rgba(255,255,255,0.15);
    }
    
    .password-form button {
      padding: 16px 28px;
      background: #fff;
      border: none;
      border-radius: 12px;
      color: #7367f0;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      white-space: nowrap;
    }
    
    .password-form button:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }
    
    /* Social Links */
    .password-social {
      display: flex;
      justify-content: center;
      gap: 16px;
      margin-bottom: 30px;
    }
    
    .password-social a {
      width: 48px;
      height: 48px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(255,255,255,0.1);
      border-radius: 50%;
      color: #fff;
      font-size: 1.2rem;
      text-decoration: none;
      backdrop-filter: blur(10px);
      transition: all 0.3s ease;
    }
    
    .password-social a:hover {
      background: rgba(255,255,255,0.25);
      transform: translateY(-3px);
    }
    
    /* Enter Password Link */
    .password-enter {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      color: rgba(255,255,255,0.7);
      text-decoration: none;
      font-size: 0.9rem;
      transition: color 0.3s ease;
    }
    
    .password-enter:hover {
      color: #fff;
    }
    
    /* Password Modal */
    .password-modal {
      position: fixed;
      inset: 0;
      z-index: 9999;
      display: none;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }
    
    .password-modal.active {
      display: flex;
    }
    
    .modal-overlay {
      position: absolute;
      inset: 0;
      background: rgba(0,0,0,0.6);
      backdrop-filter: blur(8px);
    }
    
    .modal-content {
      position: relative;
      background: #fff;
      border-radius: 20px;
      padding: 40px;
      width: 100%;
      max-width: 400px;
      color: #2d2d3a;
      box-shadow: 0 25px 80px rgba(0,0,0,0.3);
    }
    
    .modal-close {
      position: absolute;
      top: 16px;
      right: 16px;
      width: 36px;
      height: 36px;
      border-radius: 50%;
      background: #f8f9fc;
      border: none;
      color: #5d596c;
      font-size: 1rem;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .modal-close:hover {
      background: #ea5455;
      color: #fff;
    }
    
    .modal-title {
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 8px;
    }
    
    .modal-subtitle {
      font-size: 0.9rem;
      color: #6c757d;
      margin-bottom: 24px;
    }
    
    .modal-form .form-group {
      margin-bottom: 20px;
    }
    
    .modal-form input {
      width: 100%;
      padding: 14px 16px;
      border: 1px solid rgba(115, 103, 240, 0.2);
      border-radius: 12px;
      font-size: 1rem;
    }
    
    .modal-form input:focus {
      outline: none;
      border-color: #7367f0;
    }
    
    .modal-form button {
      width: 100%;
      padding: 14px 24px;
      background: linear-gradient(135deg, #7367f0, #9e95f5);
      border: none;
      border-radius: 12px;
      color: #fff;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
    }
    
    .modal-form .error {
      color: #ea5455;
      font-size: 0.85rem;
      margin-top: 8px;
    }
    
    /* Footer */
    .password-footer {
      position: relative;
      z-index: 1;
      text-align: center;
      padding: 20px;
      font-size: 0.85rem;
      opacity: 0.7;
    }
    
    .password-footer a {
      color: #fff;
    }
    
    /* Responsive */
    @media (max-width: 479.98px) {
      .password-title {
        font-size: 1.8rem;
      }
      
      .password-form-group {
        flex-direction: column;
      }
      
      .password-form button {
        width: 100%;
      }
      
      .modal-content {
        padding: 30px 24px;
      }
    }
  </style>
</head>
<body>
  
  <!-- Animated Background -->
  <div class="bg-animation">
    <div class="bubble"></div>
    <div class="bubble"></div>
    <div class="bubble"></div>
    <div class="bubble"></div>
    <div class="bubble"></div>
  </div>
  
  <!-- Main Content -->
  <main class="password-page">
    
    <div class="password-logo">
      {%- if settings.logo -%}
        <img src="{{ settings.logo | image_url: width: 240 }}" alt="{{ shop.name }}" width="240" height="72">
      {%- else -%}
        <span class="password-logo-text">{{ shop.name }}</span>
      {%- endif -%}
    </div>
    
    <div class="password-content">
      <div class="password-icon">
        <i class="fa-solid fa-rocket"></i>
      </div>
      
      <h1 class="password-title">Coming Soon</h1>
      <p class="password-subtitle">
        We're working hard to bring you something amazing. Sign up to be the first to know when we launch!
      </p>
      
      <!-- Newsletter Form -->
      {%- form 'customer', class: 'password-form' -%}
        <input type="hidden" name="contact[tags]" value="newsletter, password-page">
        <div class="password-form-group">
          <input type="email" 
                 name="contact[email]" 
                 placeholder="Enter your email" 
                 required
                 autocomplete="email">
          <button type="submit">Notify Me</button>
        </div>
      {%- endform -%}
      
      <!-- Social Links -->
      <div class="password-social">
        {%- if settings.social_facebook_link != blank -%}
          <a href="{{ settings.social_facebook_link }}" target="_blank" rel="noopener" aria-label="Facebook">
            <i class="fa-brands fa-facebook-f"></i>
          </a>
        {%- endif -%}
        {%- if settings.social_instagram_link != blank -%}
          <a href="{{ settings.social_instagram_link }}" target="_blank" rel="noopener" aria-label="Instagram">
            <i class="fa-brands fa-instagram"></i>
          </a>
        {%- endif -%}
        {%- if settings.social_twitter_link != blank -%}
          <a href="{{ settings.social_twitter_link }}" target="_blank" rel="noopener" aria-label="Twitter">
            <i class="fa-brands fa-x-twitter"></i>
          </a>
        {%- endif -%}
        {%- if settings.social_youtube_link != blank -%}
          <a href="{{ settings.social_youtube_link }}" target="_blank" rel="noopener" aria-label="YouTube">
            <i class="fa-brands fa-youtube"></i>
          </a>
        {%- endif -%}
      </div>
      
      <!-- Enter Store Link -->
      <a href="#" class="password-enter" onclick="openPasswordModal(); return false;">
        <i class="fa-solid fa-lock"></i>
        Enter using password
      </a>
    </div>
    
  </main>
  
  <!-- Footer -->
  <footer class="password-footer">
    <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. <a href="https://www.shopify.com" target="_blank">Powered by Shopify</a></p>
  </footer>
  
  <!-- Password Modal -->
  <div class="password-modal" id="passwordModal">
    <div class="modal-overlay" onclick="closePasswordModal()"></div>
    <div class="modal-content">
      <button type="button" class="modal-close" onclick="closePasswordModal()">
        <i class="fa-solid fa-times"></i>
      </button>
      
      <h2 class="modal-title">Enter Store</h2>
      <p class="modal-subtitle">Enter the password to access the store</p>
      
      {%- form 'storefront_password', class: 'modal-form' -%}
        <div class="form-group">
          <input type="password" 
                 name="password" 
                 placeholder="Password"
                 autocomplete="current-password"
                 required>
          {%- if form.errors -%}
            <p class="error">{{ form.errors.messages.password }}</p>
          {%- endif -%}
        </div>
        <button type="submit">Enter</button>
      {%- endform -%}
    </div>
  </div>
  
  <script>
    function openPasswordModal() {
      document.getElementById('passwordModal').classList.add('active');
    }
    
    function closePasswordModal() {
      document.getElementById('passwordModal').classList.remove('active');
    }
    
    // Show modal if there are password errors
    {%- if form.errors -%}
      openPasswordModal();
    {%- endif -%}
  </script>
  
</body>
</html>
