{% comment %}
  ============================================
  CUSTOMER ORDER TEMPLATE
  Shopify 2.0 Compatible - Single Order View
  ============================================
{% endcomment %}

<style>
/* ===== ORDER PAGE STYLES ===== */
.order-page {
  padding: 40px 0 60px;
  background: linear-gradient(180deg, #f8f9fc 0%, #fff 100%);
  min-height: 100vh;
}

.back-link {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  color: #7367f0;
  text-decoration: none;
  font-size: 0.9rem;
  margin-bottom: 20px;
}

.back-link:hover {
  text-decoration: underline;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 30px;
  flex-wrap: wrap;
  gap: 20px;
}

.order-header-left h1 {
  font-size: 1.75rem;
  font-weight: 700;
  color: #2d2d3a;
  margin: 0 0 8px 0;
}

.order-date {
  font-size: 0.9rem;
  color: #6c757d;
}

.order-status-badge {
  padding: 8px 16px;
  border-radius: 20px;
  font-size: 0.85rem;
  font-weight: 600;
}

.order-status-badge.fulfilled { background: rgba(40, 199, 111, 0.1); color: #28c76f; }
.order-status-badge.unfulfilled { background: rgba(255, 159, 67, 0.1); color: #ff9f43; }
.order-status-badge.partial { background: rgba(0, 207, 232, 0.1); color: #00cfe8; }
.order-status-badge.cancelled { background: rgba(234, 84, 85, 0.1); color: #ea5455; }

/* Order Grid */
.order-grid {
  display: grid;
  grid-template-columns: 1fr 380px;
  gap: 30px;
}

/* Cards */
.order-card {
  background: #fff;
  border-radius: 16px;
  box-shadow: 0 4px 20px rgba(0,0,0,0.04);
  border: 1px solid rgba(115, 103, 240, 0.08);
  overflow: hidden;
}

.card-header {
  padding: 20px 24px;
  border-bottom: 1px solid rgba(0,0,0,0.05);
}

.card-header h2 {
  font-size: 1.1rem;
  font-weight: 600;
  color: #2d2d3a;
  margin: 0;
  display: flex;
  align-items: center;
  gap: 10px;
}

.card-header h2 i {
  color: #7367f0;
}

.card-body {
  padding: 24px;
}

/* Order Items */
.order-item {
  display: flex;
  gap: 16px;
  padding: 16px 0;
  border-bottom: 1px solid rgba(0,0,0,0.05);
}

.order-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.order-item:first-child {
  padding-top: 0;
}

.item-image {
  width: 80px;
  height: 80px;
  border-radius: 10px;
  overflow: hidden;
  background: #f8f9fc;
  flex-shrink: 0;
}

.item-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.item-details {
  flex: 1;
}

.item-title {
  font-size: 0.95rem;
  font-weight: 600;
  color: #2d2d3a;
  margin: 0 0 4px 0;
}

.item-title a {
  color: inherit;
  text-decoration: none;
}

.item-title a:hover {
  color: #7367f0;
}

.item-variant {
  font-size: 0.8rem;
  color: #9a97a8;
  margin-bottom: 8px;
}

.item-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-qty {
  font-size: 0.85rem;
  color: #6c757d;
}

.item-price {
  font-size: 0.95rem;
  font-weight: 600;
  color: #2d2d3a;
}

/* Order Summary */
.order-summary-row {
  display: flex;
  justify-content: space-between;
  padding: 10px 0;
  font-size: 0.9rem;
  color: #5d596c;
}

.order-summary-row.total {
  border-top: 1px solid rgba(0,0,0,0.1);
  margin-top: 10px;
  padding-top: 16px;
  font-size: 1.1rem;
  font-weight: 700;
  color: #2d2d3a;
}

/* Address Info */
.address-block {
  margin-bottom: 20px;
}

.address-block:last-child {
  margin-bottom: 0;
}

.address-label {
  font-size: 0.75rem;
  text-transform: uppercase;
  color: #9a97a8;
  margin-bottom: 8px;
  font-weight: 600;
}

.address-text {
  font-size: 0.9rem;
  color: #5d596c;
  line-height: 1.6;
}

/* Fulfillment Info */
.fulfillment-info {
  padding: 16px;
  background: rgba(40, 199, 111, 0.05);
  border-radius: 10px;
  border: 1px solid rgba(40, 199, 111, 0.2);
}

.fulfillment-info.pending {
  background: rgba(255, 159, 67, 0.05);
  border-color: rgba(255, 159, 67, 0.2);
}

.fulfillment-title {
  font-size: 0.9rem;
  font-weight: 600;
  color: #28c76f;
  margin-bottom: 8px;
  display: flex;
  align-items: center;
  gap: 8px;
}

.fulfillment-info.pending .fulfillment-title {
  color: #ff9f43;
}

.tracking-link {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  margin-top: 8px;
  padding: 8px 16px;
  background: #7367f0;
  color: #fff;
  border-radius: 8px;
  font-size: 0.85rem;
  text-decoration: none;
  transition: all 0.3s ease;
}

.tracking-link:hover {
  background: #5e50ee;
}

/* ===== RESPONSIVE ===== */
@media (max-width: 991.98px) {
  .order-grid {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 767.98px) {
  .order-page {
    padding: 24px 0 40px;
  }
  
  .order-header {
    flex-direction: column;
  }
  
  .order-header-left h1 {
    font-size: 1.4rem;
  }
  
  .item-image {
    width: 60px;
    height: 60px;
  }
  
  .card-body {
    padding: 16px;
  }
}
</style>

<div class="order-page">
  <div class="container">
    
    <a href="{{ routes.account_url }}" class="back-link">
      <i class="fa-solid fa-arrow-left"></i>
      Back to Account
    </a>
    
    <div class="order-header">
      <div class="order-header-left">
        <h1>{{ order.name }}</h1>
        <span class="order-date">Placed on {{ order.created_at | date: '%B %d, %Y at %I:%M %p' }}</span>
      </div>
      <span class="order-status-badge {{ order.fulfillment_status }}">
        {{ order.fulfillment_status_label | default: 'Processing' }}
      </span>
    </div>
    
    <div class="order-grid">
      
      <!-- Left Column -->
      <div>
        
        <!-- Order Items -->
        <div class="order-card">
          <div class="card-header">
            <h2><i class="fa-solid fa-box"></i> Order Items</h2>
          </div>
          <div class="card-body">
            {%- for line_item in order.line_items -%}
              <div class="order-item">
                <div class="item-image">
                  {%- if line_item.image -%}
                    <img src="{{ line_item.image | image_url: width: 160 }}" alt="{{ line_item.title }}">
                  {%- else -%}
                    <div style="width:100%;height:100%;display:flex;align-items:center;justify-content:center;">
                      <i class="fa-solid fa-image" style="color:#ccc;font-size:1.5rem;"></i>
                    </div>
                  {%- endif -%}
                </div>
                <div class="item-details">
                  <h4 class="item-title">
                    {%- if line_item.product.url -%}
                      <a href="{{ line_item.product.url }}">{{ line_item.title }}</a>
                    {%- else -%}
                      {{ line_item.title }}
                    {%- endif -%}
                  </h4>
                  {%- if line_item.variant.title != 'Default Title' -%}
                    <p class="item-variant">{{ line_item.variant.title }}</p>
                  {%- endif -%}
                  <div class="item-meta">
                    <span class="item-qty">Qty: {{ line_item.quantity }}</span>
                    <span class="item-price">{{ line_item.final_line_price | money }}</span>
                  </div>
                </div>
              </div>
            {%- endfor -%}
          </div>
        </div>
        
        <!-- Fulfillment Status -->
        {%- for fulfillment in order.fulfillments -%}
          <div class="order-card" style="margin-top: 20px;">
            <div class="card-header">
              <h2><i class="fa-solid fa-truck"></i> Shipment #{{ forloop.index }}</h2>
            </div>
            <div class="card-body">
              <div class="fulfillment-info">
                <div class="fulfillment-title">
                  <i class="fa-solid fa-check-circle"></i>
                  {{ fulfillment.fulfillment_status | capitalize }}
                </div>
                <p style="font-size: 0.85rem; color: #6c757d; margin: 0;">
                  Shipped on {{ fulfillment.created_at | date: '%B %d, %Y' }}
                </p>
                {%- if fulfillment.tracking_url -%}
                  <a href="{{ fulfillment.tracking_url }}" target="_blank" class="tracking-link">
                    <i class="fa-solid fa-location-arrow"></i>
                    Track Package
                  </a>
                {%- endif -%}
              </div>
            </div>
          </div>
        {%- else -%}
          <div class="order-card" style="margin-top: 20px;">
            <div class="card-body">
              <div class="fulfillment-info pending">
                <div class="fulfillment-title">
                  <i class="fa-solid fa-clock"></i>
                  Preparing Your Order
                </div>
                <p style="font-size: 0.85rem; color: #6c757d; margin: 0;">
                  We're getting your order ready for shipment.
                </p>
              </div>
            </div>
          </div>
        {%- endfor -%}
        
      </div>
      
      <!-- Right Column -->
      <div>
        
        <!-- Order Summary -->
        <div class="order-card">
          <div class="card-header">
            <h2><i class="fa-solid fa-receipt"></i> Summary</h2>
          </div>
          <div class="card-body">
            <div class="order-summary-row">
              <span>Subtotal</span>
              <span>{{ order.line_items_subtotal_price | money }}</span>
            </div>
            
            {%- for discount in order.discounts -%}
              <div class="order-summary-row">
                <span>Discount ({{ discount.code }})</span>
                <span style="color: #28c76f;">-{{ discount.savings | money }}</span>
              </div>
            {%- endfor -%}
            
            {%- for shipping_method in order.shipping_methods -%}
              <div class="order-summary-row">
                <span>Shipping ({{ shipping_method.title }})</span>
                <span>{{ shipping_method.price | money }}</span>
              </div>
            {%- endfor -%}
            
            {%- if order.tax_price > 0 -%}
              <div class="order-summary-row">
                <span>Tax</span>
                <span>{{ order.tax_price | money }}</span>
              </div>
            {%- endif -%}
            
            <div class="order-summary-row total">
              <span>Total</span>
              <span>{{ order.total_price | money }}</span>
            </div>
          </div>
        </div>
        
        <!-- Shipping Address -->
        <div class="order-card" style="margin-top: 20px;">
          <div class="card-header">
            <h2><i class="fa-solid fa-map-marker-alt"></i> Addresses</h2>
          </div>
          <div class="card-body">
            <div class="address-block">
              <div class="address-label">Shipping Address</div>
              <div class="address-text">
                {{ order.shipping_address.first_name }} {{ order.shipping_address.last_name }}<br>
                {{ order.shipping_address.address1 }}<br>
                {%- if order.shipping_address.address2 != blank -%}{{ order.shipping_address.address2 }}<br>{%- endif -%}
                {{ order.shipping_address.city }}, {{ order.shipping_address.province_code }} {{ order.shipping_address.zip }}<br>
                {{ order.shipping_address.country }}
              </div>
            </div>
            
            <div class="address-block">
              <div class="address-label">Billing Address</div>
              <div class="address-text">
                {{ order.billing_address.first_name }} {{ order.billing_address.last_name }}<br>
                {{ order.billing_address.address1 }}<br>
                {%- if order.billing_address.address2 != blank -%}{{ order.billing_address.address2 }}<br>{%- endif -%}
                {{ order.billing_address.city }}, {{ order.billing_address.province_code }} {{ order.billing_address.zip }}<br>
                {{ order.billing_address.country }}
              </div>
            </div>
          </div>
        </div>
        
      </div>
      
    </div>
    
  </div>
</div>
