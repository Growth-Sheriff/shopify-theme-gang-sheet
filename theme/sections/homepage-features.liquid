    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Card",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon Class",
          "default": "fa-solid fa-print",
          "info": "FontAwesome icon class"
        },
        {
          "type": "color",
          "id": "icon_bg",
          "label": "Icon Background",
          "default": "#e5e3fb"
        },
        {
          "type": "color",
          "id": "icon_color",
          "label": "Icon Color",
          "default": "#7367F0"
        },
        {
          "type": "text",
          "id": "title",
