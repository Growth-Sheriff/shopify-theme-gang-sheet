      "default": "#6e6b7b"
    },
    {
      "type": "header",
      "content": "Grid Layout"
    },
    {
      "type": "range",
      "id": "columns",
      "label": "Columns",
      "min": 2,
      "max": 4,
      "default": 3
    },
    {
      "type": "text",
      "id": "grid_gap",
      "label": "Grid Gap",
      "default": "1.5rem"
    },
    {
      "type": "header",
      "content": "Card Styling"
    },
    {
      "type": "color",
      "id": "card_bg",
      "label": "Card Background",
      "default": "#ffffff"
