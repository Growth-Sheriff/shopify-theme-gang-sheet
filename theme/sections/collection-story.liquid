{% comment %}
  Collection Story Section
  A storytelling section for collection pages
{% endcomment %}

{% if section.settings.show_section %}
<section class="cp-collection-story {% if section.settings.layout == 'image-right' %}cp-story-reversed{% endif %}">
  <div class="container">
    <div class="cp-story-grid">
      <!-- Image Side -->
      <div class="cp-story-image-wrap">
        {% if section.settings.image %}
          <img 
            src="{{ section.settings.image | image_url: width: 800 }}" 
            alt="{{ section.settings.title | escape }}"
            class="cp-story-image"
            loading="lazy"
            width="800"
            height="600"
          >
        {% else %}
          <div class="cp-story-image-placeholder">
            <i class="ti ti-photo"></i>
          </div>
        {% endif %}
        
        <!-- Floating Badge -->
        {% if section.settings.floating_badge != blank %}
        <div class="cp-story-floating-badge">
          <span>{{ section.settings.floating_badge }}</span>
        </div>
        {% endif %}
      </div>
      
      <!-- Content Side -->
      <div class="cp-story-content">
        {% if section.settings.subtitle != blank %}
          <span class="cp-story-subtitle">{{ section.settings.subtitle }}</span>
        {% endif %}
        
        {% if section.settings.title != blank %}
          <h2 class="cp-story-title">{{ section.settings.title }}</h2>
        {% endif %}
        
        {% if section.settings.content != blank %}
          <div class="cp-story-text">{{ section.settings.content }}</div>
        {% endif %}
        
        <!-- Stats Row -->
        {% if section.settings.show_stats %}
        <div class="cp-story-stats">
          {% if section.settings.stat_1_number != blank %}
          <div class="cp-story-stat">
            <span class="cp-stat-number">{{ section.settings.stat_1_number }}</span>
            <span class="cp-stat-label">{{ section.settings.stat_1_label }}</span>
          </div>
          {% endif %}
          
          {% if section.settings.stat_2_number != blank %}
          <div class="cp-story-stat">
            <span class="cp-stat-number">{{ section.settings.stat_2_number }}</span>
            <span class="cp-stat-label">{{ section.settings.stat_2_label }}</span>
          </div>
          {% endif %}
          
          {% if section.settings.stat_3_number != blank %}
          <div class="cp-story-stat">
            <span class="cp-stat-number">{{ section.settings.stat_3_number }}</span>
            <span class="cp-stat-label">{{ section.settings.stat_3_label }}</span>
          </div>
          {% endif %}
        </div>
        {% endif %}
        
        <!-- CTA Button -->
        {% if section.settings.button_text != blank %}
        <a 
          href="{{ section.settings.button_link | default: '#' }}" 
          class="cp-story-btn"
        >
          {{ section.settings.button_text }}
          <i class="ti ti-arrow-right"></i>
        </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>
{% endif %}

<style>
  .cp-collection-story {
    --cp-primary: {{ settings.color_primary | default: '#7367F0' }};
    --cp-primary-light: rgba(115, 103, 240, 0.12);
    --cp-primary-gradient: linear-gradient(118deg, #7367F0, rgba(115, 103, 240, 0.7));
    --cp-heading: {{ settings.color_heading | default: '#5e5873' }};
    --cp-body: {{ settings.color_body | default: '#6e6b7b' }};
    --cp-border: #ebe9f1;
    --cp-shadow: 0 4px 24px 0 rgba(34, 41, 47, 0.1);
    --cp-radius: 0.75rem;
    
    padding: {{ section.settings.padding_top | default: 60 }}px 0 {{ section.settings.padding_bottom | default: 60 }}px;
    background: {{ section.settings.background_color | default: '#f8f8f8' }};
  }
  
  .cp-collection-story .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  .cp-story-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }
  
  .cp-story-reversed .cp-story-grid {
    direction: rtl;
  }
  
  .cp-story-reversed .cp-story-grid > * {
    direction: ltr;
  }
  
  .cp-story-image-wrap {
    position: relative;
  }
  
  .cp-story-image {
    width: 100%;
    height: auto;
    border-radius: var(--cp-radius);
    box-shadow: var(--cp-shadow);
  }
  
  .cp-story-image-placeholder {
    aspect-ratio: 4/3;
    background: linear-gradient(135deg, #f0f0f0, #e5e5e5);
    border-radius: var(--cp-radius);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .cp-story-image-placeholder i {
    font-size: 4rem;
    color: #ccc;
  }
  
  .cp-story-floating-badge {
    position: absolute;
    bottom: -1rem;
    right: -1rem;
    background: var(--cp-primary-gradient);
    color: #fff;
    padding: 1rem 1.5rem;
    border-radius: var(--cp-radius);
    font-weight: 700;
    font-size: 0.9rem;
    box-shadow: 0 8px 24px rgba(115, 103, 240, 0.4);
  }
  
  .cp-story-content {
    padding: 1rem 0;
  }
  
  .cp-story-subtitle {
    display: inline-block;
    color: var(--cp-primary);
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    margin-bottom: 0.75rem;
  }
  
  .cp-story-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--cp-heading);
    margin-bottom: 1.25rem;
    line-height: 1.2;
  }
  
  .cp-story-text {
    font-size: 1.0625rem;
    color: var(--cp-body);
    line-height: 1.8;
    margin-bottom: 2rem;
  }
  
  .cp-story-stats {
    display: flex;
    gap: 2.5rem;
    margin-bottom: 2rem;
    padding: 1.5rem 0;
    border-top: 1px solid var(--cp-border);
    border-bottom: 1px solid var(--cp-border);
  }
  
  .cp-story-stat {
    display: flex;
    flex-direction: column;
  }
  
  .cp-stat-number {
    font-size: 2rem;
    font-weight: 700;
    color: var(--cp-primary);
    line-height: 1;
    margin-bottom: 0.25rem;
  }
  
  .cp-stat-label {
    font-size: 0.8125rem;
    color: var(--cp-body);
  }
  
  .cp-story-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 2rem;
    background: var(--cp-primary-gradient);
    color: #fff;
    border-radius: 50px;
    font-size: 0.9375rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 16px rgba(115, 103, 240, 0.4);
  }
  
  .cp-story-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 24px rgba(115, 103, 240, 0.5);
  }
  
  .cp-story-btn i {
    transition: transform 0.3s;
  }
  
  .cp-story-btn:hover i {
    transform: translateX(4px);
  }
  
  /* Mobile Responsive */
  @media (max-width: 991px) {
    .cp-story-grid {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }
    
    .cp-story-reversed .cp-story-grid {
      direction: ltr;
    }
    
    .cp-story-title {
      font-size: 2rem;
    }
    
    .cp-story-floating-badge {
      bottom: 1rem;
      right: 1rem;
    }
  }
  
  @media (max-width: 576px) {
    .cp-collection-story {
      padding: 40px 0;
    }
    
    .cp-story-title {
      font-size: 1.75rem;
    }
    
    .cp-story-stats {
      gap: 1.5rem;
    }
    
    .cp-stat-number {
      font-size: 1.5rem;
    }
  }
</style>

{% schema %}
