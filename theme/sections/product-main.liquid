<script>
(function() {
  // Gallery
  window.pmGallery = {
    change: function(src, el) {
      document.getElementById('pm-main-image').src = src;
      document.querySelectorAll('.gallery-thumbnails-vertical .thumbnail').forEach(function(t) {
        t.classList.remove('active');
      });
      el.classList.add('active');
    }
  };
  
  // Accordion (varsayılan kapalı)
  window.pmAccordion = {
    toggle: function(header) {
      var item = header.closest('.pm-accordion-item');
      var isOpen = item.classList.contains('open');
      
      // Tüm accordion'ları kapat
      document.querySelectorAll('.pm-accordion-item').forEach(function(i) {
        i.classList.remove('open');
      });
      
      // Tıklanan kapalıysa aç
      if (!isOpen) {
        item.classList.add('open');
      }
    }
  };
  
  // Tabs
  document.querySelectorAll('.product-tabs-nav .product-tab-btn').forEach(function(btn) {
    btn.addEventListener('click', function() {
      var tabId = 'pm-tab-' + this.dataset.tab;
      
      document.querySelectorAll('.product-tabs-nav .product-tab-btn').forEach(function(b) {
        b.classList.remove('active');
      });
      document.querySelectorAll('.product-tabs-content .product-tab-pane').forEach(function(p) {
        p.classList.remove('active');
      });
      
      this.classList.add('active');
      var pane = document.getElementById(tabId);
      if (pane) pane.classList.add('active');
    });
  });
  
  // Quantity
  window.pmQty = {
    update: function(delta) {
      var input = document.getElementById('pm-quantity');
      if (!input) return;
      var val = parseInt(input.value) || 1;
      val = Math.max(1, Math.min(99, val + delta));
      input.value = val;
    }
  };
  
  // Variants
  var variants = {{ product.variants | json }};
  var selectedOptions = [{% for option in product.options_with_values %}'{{ option.selected_value | escape }}'{% unless forloop.last %},{% endunless %}{% endfor %}];
  
  window.pmVariant = {
    select: function(el) {
      var idx = parseInt(el.dataset.option);
      var value = el.dataset.value;
      selectedOptions[idx] = value;
      
      // UI güncelle
      var section = el.closest('.variant-option-section');
      section.querySelectorAll('[data-value]').forEach(function(b) {
        b.classList.remove('active');
      });
      el.classList.add('active');
      
      // Label güncelle
      var label = section.querySelector('.pm-selected-value');
      if (label) label.textContent = value;
      
      this.updateVariant();
    },
    
    selectDropdown: function(select) {
      var idx = parseInt(select.dataset.option);
      selectedOptions[idx] = select.value;
      
      // Label güncelle
      var section = select.closest('.variant-option-section');
      var label = section.querySelector('.pm-selected-value');
      if (label) label.textContent = select.value;
      
      this.updateVariant();
    },
    
    updateVariant: function() {
      var variant = variants.find(function(v) {
        return v.options.every(function(opt, i) {
          return opt === selectedOptions[i];
        });
      });
      
      if (variant) {
        document.getElementById('pm-variant-id').value = variant.id;
        
        // Fiyat güncelle
        var priceEl = document.getElementById('pm-current-price');
        if (priceEl) {
          priceEl.textContent = Shopify.formatMoney ? Shopify.formatMoney(variant.price) : ('$' + (variant.price / 100).toFixed(2));
        }
        
        // Buton durumu
        var addBtn = document.getElementById('pm-add-btn');
        if (addBtn) {
          addBtn.disabled = !variant.available;
          addBtn.querySelector('span').textContent = variant.available ? 'Add to Cart' : 'Sold Out';
        }
        
        // URL güncelle
        var url = new URL(window.location);
        url.searchParams.set('variant', variant.id);
        window.history.replaceState({}, '', url);
        
        // Görsel güncelle
        if (variant.featured_image) {
          var mainImg = document.getElementById('pm-main-image');
          if (mainImg) mainImg.src = variant.featured_image.src;
        }
      }
    }
  };
  
  // Add to Cart
  var addBtn = document.getElementById('pm-add-btn');
  if (addBtn) {
    addBtn.addEventListener('click', function() {
      var variantId = document.getElementById('pm-variant-id').value;
      var qtyInput = document.getElementById('pm-quantity');
      var quantity = qtyInput ? parseInt(qtyInput.value) : 1;
      
      if (window.CartManager) {
        CartManager.add(variantId, quantity);
      } else {
        fetch('/cart/add.js', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id: parseInt(variantId), quantity: quantity })
        })
        .then(function(r) { return r.json(); })
        .then(function() { 
          window.location.href = '/cart'; 
        })
        .catch(function(e) { console.error('Cart error:', e); });
      }
    });
  }
  
  // Buy Now
  var buyBtn = document.getElementById('pm-buy-btn');
  if (buyBtn) {
    buyBtn.addEventListener('click', function() {
      var variantId = document.getElementById('pm-variant-id').value;
      var qtyInput = document.getElementById('pm-quantity');
      var quantity = qtyInput ? parseInt(qtyInput.value) : 1;
      
      fetch('/cart/add.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id: parseInt(variantId), quantity: quantity })
      })
      .then(function(r) { return r.json(); })
      .then(function() { 
        window.location.href = '/checkout'; 
      })
      .catch(function(e) { console.error('Checkout error:', e); });
    });
  }
})();
</script>

