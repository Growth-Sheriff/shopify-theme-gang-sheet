<style>
  /* Grid Layout */
  .pm-grid {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  @media (min-width: 992px) {
    .pm-grid {
      display: grid;
      grid-template-columns: 41.66% 58.33%;
      gap: 1.5rem 2rem;
      align-items: start;
    }
  }
  
  .pm-left, .pm-right {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  @media (min-width: 992px) {
    .pm-right {
      position: sticky;
      top: 1rem;
    }
  }
  
  /* Mobile/Desktop Toggle */
  .pm-mobile-accordion { display: none; }
  .pm-desktop-tabs { display: block; }
  
  @media (max-width: 991px) {
    .pm-mobile-accordion { display: block; }
    .pm-desktop-tabs { display: none; }
    
    /* Mobile: Info card overlap on image */
    .pm-right {
      margin-top: -1.5rem;
      position: relative;
      z-index: 10;
    }
    
    .pm-right .product-info-card {
      border-radius: 16px 16px 12px 12px;
    }
  }
  
  /* Description scroll */
  .pm-desc-scroll {
    max-height: 500px;
    overflow-y: auto;
  }
  
  /* Accordion Styles */
  .pm-accordion-item {
    background: var(--cp-card-bg, #fff);
    border: 1px solid var(--cp-border-color, #ebe9f1);
    border-radius: var(--cp-radius-md, 0.428rem);
    margin-bottom: 0.5rem;
    overflow: hidden;
  }
  
  .pm-accordion-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.875rem 1rem;
    background: var(--cp-body-bg, #f8f8f8);
    cursor: pointer;
    font-weight: 600;
