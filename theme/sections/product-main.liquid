{% comment %}
  Product Main Section - CloudyPrints
  Dawn theme yaklaşımı: Tek section içinde tüm product sayfası
  Mevcut product-page.css class'larını kullanır
{% endcomment %}

{{ 'product-page.css' | asset_url | stylesheet_tag }}

{% comment %} ═══════════════════════════════════════════════════════════════
   BREADCRUMB
═══════════════════════════════════════════════════════════════ {% endcomment %}
{% if section.settings.show_breadcrumb %}
<div class="breadcrumb-section">
  <div class="container">
    <div class="breadcrumb-custom">
      <a href="{{ routes.root_url }}"><i class="ti ti-home"></i></a>
      <span>/</span>
      {% if product.collections.first %}
        <a href="{{ product.collections.first.url }}">{{ product.collections.first.title }}</a>
        <span>/</span>
      {% endif %}
      <span class="cloudy-badge badge-primary">{{ product.title | truncate: 30 }}</span>
    </div>
  </div>
</div>
{% endif %}

{% comment %} ═══════════════════════════════════════════════════════════════
   MAIN PRODUCT GRID
═══════════════════════════════════════════════════════════════ {% endcomment %}

{% comment %} ═══ MOBILE TITLE (Only visible on mobile, above gallery) ═══ {% endcomment %}
<div class="pm-mobile-title">
  {% if product.vendor %}
    <span class="product-vendor">{{ product.vendor }}</span>
  {% endif %}
  <h1 class="product-title">{{ product.title }}</h1>
</div>

<section class="product-section" {{ section.shopify_attributes }}>
  <div class="pm-container">
      
      {% comment %} ══════════════════════════════════════════════════════════
         LEFT COLUMN - Gallery + Tabs + Instructions
      ══════════════════════════════════════════════════════════ {% endcomment %}
      <div class="pm-left">
        
        {% comment %} ═══ GALLERY ═══ {% endcomment %}
        <div class="product-gallery">
          <div class="gallery-layout">
            {% if product.images.size > 1 %}
            <div class="gallery-thumbnails-vertical">
              {% for image in product.images %}
                <div class="thumbnail {% if forloop.first %}active{% endif %}" 
                     onclick="pmGallery.change('{{ image | image_url: width: 800 }}', this)">
                  <img src="{{ image | image_url: width: 100 }}" alt="{{ product.title }}" loading="lazy">
                </div>
              {% endfor %}
            </div>
            {% endif %}
            
            <div class="main-image-container">
              {% if product.featured_image %}
                <img src="{{ product.featured_image | image_url: width: 800 }}" 
                     alt="{{ product.title }}" 
                     class="main-product-image"
                     id="pm-main-image">
              {% else %}
                <div class="no-image-placeholder">
                  <i class="ti ti-photo-off"></i>
                  <span>No image</span>
                </div>
              {% endif %}
              
              {% if product.available %}
                <span class="cloudy-badge badge-success" style="position:absolute;top:1rem;left:1rem;">
                  <i class="ti ti-check me-1"></i>In Stock
                </span>
              {% else %}
                <span class="cloudy-badge badge-danger" style="position:absolute;top:1rem;left:1rem;">
                  <i class="ti ti-x me-1"></i>Sold Out
                </span>
              {% endif %}
              
              {% if product.compare_at_price > product.price %}
                {% assign discount = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price %}
                <span class="discount-badge">-{{ discount }}%</span>
              {% endif %}
              
              <button class="wishlist-btn" type="button"><i class="ti ti-heart"></i></button>
            </div>
          </div>
        </div>
        
        {% comment %} ═══ TABS (Desktop) ═══ {% endcomment %}
        {% if section.settings.show_tabs %}
        <div class="pm-desktop-tabs">
          <div class="product-tabs-section">
            <div class="product-tabs-nav">
              <button class="product-tab-btn active" data-tab="desc">
                <i class="ti ti-file-description"></i> Description
              </button>
              <button class="product-tab-btn" data-tab="ship">
                <i class="ti ti-truck"></i> Shipping
              </button>
              <button class="product-tab-btn" data-tab="care">
                <i class="ti ti-heart-handshake"></i> Care
              </button>
            </div>
            
            <div class="product-tabs-content">
              <div class="product-tab-pane active pm-desc-scroll" id="pm-tab-desc">
                <div class="tab-description">
                  {{ product.description }}
                </div>
              </div>
              
              <div class="product-tab-pane" id="pm-tab-ship">
                <ul class="tab-spec-list">
                  <li><span class="spec-label">Processing</span><span class="spec-value">{{ section.settings.processing_time }}</span></li>
                  <li><span class="spec-label">Standard Shipping</span><span class="spec-value">{{ section.settings.standard_shipping }}</span></li>
                  <li><span class="spec-label">Express Shipping</span><span class="spec-value">{{ section.settings.express_shipping }}</span></li>
                  <li><span class="spec-label">Free Shipping</span><span class="spec-value">{{ section.settings.free_shipping }}</span></li>
                </ul>
              </div>
              
              <div class="product-tab-pane" id="pm-tab-care">
                <div class="tab-features-grid">
                  <div class="tab-feature-item"><i class="ti ti-check"></i> Wait 24hrs before washing</div>
                  <div class="tab-feature-item"><i class="ti ti-check"></i> Wash inside out, cold water</div>
                  <div class="tab-feature-item"><i class="ti ti-check"></i> Tumble dry low</div>
                  <div class="tab-feature-item"><i class="ti ti-check"></i> Do not iron on design</div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        {% comment %} ═══ ACCORDION (Mobile) ═══ {% endcomment %}
        <div class="pm-mobile-accordion">
          <div class="pm-accordion-item">
            <div class="pm-accordion-header" onclick="pmAccordion.toggle(this)">
              <span><i class="ti ti-file-description me-2"></i>Description</span>
              <i class="ti ti-chevron-down pm-chevron"></i>
            </div>
            <div class="pm-accordion-content">
              <div class="pm-accordion-inner pm-desc-scroll">
                {{ product.description }}
              </div>
            </div>
          </div>
          
          <div class="pm-accordion-item">
            <div class="pm-accordion-header" onclick="pmAccordion.toggle(this)">
              <span><i class="ti ti-truck me-2"></i>Shipping</span>
              <i class="ti ti-chevron-down pm-chevron"></i>
            </div>
            <div class="pm-accordion-content">
              <div class="pm-accordion-inner">
                <ul class="tab-spec-list">
                  <li><span class="spec-label">Processing</span><span class="spec-value">{{ section.settings.processing_time }}</span></li>
                  <li><span class="spec-label">Standard</span><span class="spec-value">{{ section.settings.standard_shipping }}</span></li>
                  <li><span class="spec-label">Express</span><span class="spec-value">{{ section.settings.express_shipping }}</span></li>
                  <li><span class="spec-label">Free Shipping</span><span class="spec-value">{{ section.settings.free_shipping }}</span></li>
                </ul>
              </div>
            </div>
          </div>
          
          <div class="pm-accordion-item">
            <div class="pm-accordion-header" onclick="pmAccordion.toggle(this)">
              <span><i class="ti ti-heart-handshake me-2"></i>Care</span>
              <i class="ti ti-chevron-down pm-chevron"></i>
            </div>
            <div class="pm-accordion-content">
              <div class="pm-accordion-inner">
                <div class="tab-features-grid">
                  <div class="tab-feature-item"><i class="ti ti-check"></i> Wait 24hrs</div>
                  <div class="tab-feature-item"><i class="ti ti-check"></i> Cold water</div>
                  <div class="tab-feature-item"><i class="ti ti-check"></i> Tumble dry low</div>
                  <div class="tab-feature-item"><i class="ti ti-check"></i> No iron on design</div>
                </div>
              </div>
            </div>
          </div>
        </div>
        {% endif %}
        
        {% comment %} ═══ PRESS INSTRUCTIONS ═══ {% endcomment %}
        {% if section.settings.show_instructions %}
        <div class="step-card">
          <div class="step-header">
            <span class="step-icon"><i class="ti ti-flame"></i></span>
            {{ section.settings.press_title }}
          </div>
          <div class="instruction-steps">
            <div class="instruction-step">
              <i class="ti ti-thermometer"></i>
              <span class="instruction-label">TEMP</span>
              <span class="instruction-value">{{ section.settings.press_temp }}</span>
            </div>
            <div class="instruction-step">
              <i class="ti ti-clock"></i>
              <span class="instruction-label">TIME</span>
              <span class="instruction-value">{{ section.settings.press_time }}</span>
            </div>
            <div class="instruction-step">
              <i class="ti ti-arrows-vertical"></i>
              <span class="instruction-label">PRESSURE</span>
              <span class="instruction-value">{{ section.settings.press_pressure }}</span>
            </div>
            <div class="instruction-step">
              <i class="ti ti-snowflake"></i>
              <span class="instruction-label">PEEL</span>
              <span class="instruction-value">{{ section.settings.press_peel }}</span>
            </div>
          </div>
        </div>
        {% endif %}
        
        {% comment %} ═══ LEFT CUSTOM BLOCKS ═══ {% endcomment %}
        {% for block in section.blocks %}
          {% if block.type == 'left_custom_liquid' %}
            <div class="step-card" {{ block.shopify_attributes }}>
              {{ block.settings.custom_liquid }}
            </div>
          {% endif %}
        {% endfor %}
        
      </div>
      
      {% comment %} ══════════════════════════════════════════════════════════
         RIGHT COLUMN - Product Info Card
      ══════════════════════════════════════════════════════════ {% endcomment %}
      <div class="pm-right">
        
        <div class="product-info-card">
          
          {% comment %} Vendor {% endcomment %}
          {% if product.vendor %}
            <span class="product-vendor">{{ product.vendor }}</span>
          {% endif %}
          
          {% comment %} Title {% endcomment %}
          <h1 class="product-title">{{ product.title }}</h1>
          
          {% comment %} Rating {% endcomment %}
          {% if section.settings.show_rating %}
          <div class="rating-section">
            <div class="rating-stars">
              <i class="ti ti-star-filled"></i>
              <i class="ti ti-star-filled"></i>
              <i class="ti ti-star-filled"></i>
              <i class="ti ti-star-filled"></i>
              <i class="ti ti-star-half-filled"></i>
            </div>
            <span class="rating-count">{{ section.settings.rating_score }} ({{ section.settings.review_count }} reviews)</span>
            <span class="cloudy-badge badge-success"><i class="ti ti-thumb-up me-1"></i>{{ section.settings.recommend_percent }}</span>
          </div>
          {% endif %}
          
          {% comment %} Price {% endcomment %}
          <div class="product-price-box">
            {% if section.settings.price_badge != blank %}
              <span class="price-badge">{{ section.settings.price_badge }}</span>
            {% endif %}
            <div class="price-row">
              <span class="current-price" id="pm-current-price">{{ product.price | money }}</span>
              {% if product.compare_at_price > product.price %}
                <span class="compare-price">{{ product.compare_at_price | money }}</span>
                <span class="save-badge">Save {{ product.compare_at_price | minus: product.price | money }}</span>
              {% endif %}
            </div>
          </div>
          
          {% comment %} Delivery {% endcomment %}
          {% if section.settings.show_delivery %}
          <div class="delivery-card">
            <div class="delivery-title">
              <i class="ti ti-truck-delivery"></i>
              Free Delivery
            </div>
            <div class="delivery-time">{{ section.settings.delivery_time }}</div>
            <div class="delivery-location"><i class="ti ti-clock"></i> {{ section.settings.order_by }}</div>
          </div>
          {% endif %}
          
          {% comment %} ═══ VARIANTS ═══ {% endcomment %}
          {% if product.has_only_default_variant == false and section.settings.show_variants %}
            {% for option in product.options_with_values %}
              {%- assign option_index = forloop.index0 -%}
              {%- assign option_name_lower = option.name | downcase -%}
              {%- assign is_color = false -%}
              {%- assign is_size = false -%}
              
              {%- if option_name_lower == 'color' or option_name_lower == 'colour' or option_name_lower == 'renk' -%}
                {%- assign is_color = true -%}
              {%- endif -%}
              
              {%- if option_name_lower == 'size' or option_name_lower == 'beden' -%}
                {%- assign is_size = true -%}
              {%- endif -%}
              
              <div class="variant-option-section" data-option-index="{{ option_index }}">
                <label class="variant-label">
                  {{ option.name }}: <span class="pm-selected-value" data-option="{{ option_index }}">{{ option.selected_value }}</span>
                </label>
                
                {%- if is_color -%}
                  {%- case section.settings.color_display_mode -%}
                    {%- when 'swatches' -%}
                      <div class="color-options">
                        {% for value in option.values %}
                          {%- assign color_code = value | downcase | replace: ' ', '' -%}
                          <div class="color-option {% if option.selected_value == value %}active{% endif %}"
                               style="background-color: {{ color_code }};"
                               data-option="{{ option_index }}"
                               data-value="{{ value }}"
                               onclick="pmVariant.select(this)"
                               title="{{ value }}"></div>
                        {% endfor %}
                      </div>
                    {%- when 'images' -%}
                      <div class="color-options">
                        {% for value in option.values %}
                          {%- assign variant_image = product.variants | where: "option1", value | map: "featured_image" | first -%}
                          <div class="color-option {% if option.selected_value == value %}active{% endif %}"
                               style="{% if variant_image %}background-image:url('{{ variant_image | image_url: width: 60 }}');background-size:cover;{% else %}background-color:{{ value | downcase | replace: ' ', '' }};{% endif %}"
                               data-option="{{ option_index }}"
                               data-value="{{ value }}"
                               onclick="pmVariant.select(this)"
                               title="{{ value }}"></div>
                        {% endfor %}
                      </div>
                    {%- when 'dropdown' -%}
                      <div class="variant-dropdown-wrapper">
                        <select class="variant-select" data-option="{{ option_index }}" onchange="pmVariant.selectDropdown(this)">
                          {% for value in option.values %}
                            <option value="{{ value }}" {% if option.selected_value == value %}selected{% endif %}>{{ value }}</option>
                          {% endfor %}
                        </select>
                        <i class="ti ti-chevron-down variant-select-icon"></i>
                      </div>
                    {%- else -%}
                      <div class="variant-options">
                        {% for value in option.values %}
                          <button type="button" 
                                  class="variant-btn {% if option.selected_value == value %}active{% endif %}"
                                  data-option="{{ option_index }}"
                                  data-value="{{ value }}"
                                  onclick="pmVariant.select(this)">
                            {{ value }}
                          </button>
                        {% endfor %}
                      </div>
                  {%- endcase -%}
                  
                {%- elsif is_size -%}
                  {%- if section.settings.size_display_mode == 'dropdown' -%}
                    <div class="variant-dropdown-wrapper">
                      <select class="variant-select" data-option="{{ option_index }}" onchange="pmVariant.selectDropdown(this)">
                        {% for value in option.values %}
                          <option value="{{ value }}" {% if option.selected_value == value %}selected{% endif %}>{{ value }}</option>
                        {% endfor %}
                      </select>
                      <i class="ti ti-chevron-down variant-select-icon"></i>
                    </div>
                  {%- else -%}
                    <div class="variant-options">
                      {% for value in option.values %}
                        <button type="button" 
                                class="variant-btn {% if option.selected_value == value %}active{% endif %}"
                                data-option="{{ option_index }}"
                                data-value="{{ value }}"
                                onclick="pmVariant.select(this)">
                          {{ value }}
                        </button>
                      {% endfor %}
                    </div>
                  {%- endif -%}
                  
                {%- else -%}
                  <div class="variant-options">
                    {% for value in option.values %}
                      <button type="button" 
                              class="variant-btn {% if option.selected_value == value %}active{% endif %}"
                              data-option="{{ option_index }}"
                              data-value="{{ value }}"
                              onclick="pmVariant.select(this)">
                        {{ value }}
                      </button>
                    {% endfor %}
                  </div>
                {%- endif -%}
              </div>
            {% endfor %}
          {% endif %}
          
          {% comment %} ═══ QUANTITY ═══ {% endcomment %}
          {% if section.settings.show_quantity %}
          <div class="quantity-section">
            <label class="quantity-label">Quantity</label>
            <div class="quantity-control">
              <button type="button" class="qty-btn" onclick="pmQty.update(-1)">
                <i class="ti ti-minus"></i>
              </button>
              <input type="number" id="pm-quantity" class="qty-input" value="1" min="1" max="99">
              <button type="button" class="qty-btn" onclick="pmQty.update(1)">
                <i class="ti ti-plus"></i>
              </button>
            </div>
          </div>
          {% endif %}
          
          {% comment %} ═══ ADD TO CART & BUY NOW ═══ {% endcomment %}
          <input type="hidden" id="pm-variant-id" value="{{ product.selected_or_first_available_variant.id }}">
          
          <div class="pm-action-buttons">
            {% if section.settings.show_add_to_cart %}
            <button type="button" 
                    class="add-to-cart-btn" 
                    id="pm-add-btn"
                    {% unless product.available %}disabled{% endunless %}>
              <i class="ti ti-shopping-cart me-2"></i>
              <span>{% if product.available %}Add to Cart{% else %}Sold Out{% endif %}</span>
            </button>
            {% endif %}
            
            {% if section.settings.show_buy_now and product.available %}
            <button type="button" class="buy-now-btn" id="pm-buy-btn">
              <i class="ti ti-bolt me-2"></i>
              <span>Buy Now</span>
            </button>
            {% endif %}
          </div>
          
          {% comment %} ═══ TRUST BADGES ═══ {% endcomment %}
          {% if section.settings.show_trust_badges %}
          <div class="trust-badges">
            <div class="trust-badge">
              <i class="ti ti-shield-check"></i>
              <span>{{ section.settings.badge_1 }}</span>
            </div>
            <div class="trust-badge">
              <i class="ti ti-truck"></i>
              <span>{{ section.settings.badge_2 }}</span>
            </div>
            <div class="trust-badge">
              <i class="ti ti-refresh"></i>
              <span>{{ section.settings.badge_3 }}</span>
            </div>
          </div>
          {% endif %}
          
        </div>
        
        {% comment %} ═══ RIGHT BLOCKS (Widgets, Apps) ═══ {% endcomment %}
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'customizer_gangsheet' %}
              <div class="step-card" {{ block.shopify_attributes }}>
                {% render 'customizer-widget-gangsheet', product: product %}
              </div>
            {% when 'right_custom_liquid' %}
              <div class="step-card" {{ block.shopify_attributes }}>
                {{ block.settings.custom_liquid }}
              </div>
            {% when '@app' %}
              <div class="step-card" {{ block.shopify_attributes }}>
                {% render block %}
              </div>
            {% when 'right_text_block' %}
              <div class="step-card" {{ block.shopify_attributes }}>
                {% if block.settings.heading != blank %}
                  <h3 class="step-header">{{ block.settings.heading }}</h3>
                {% endif %}
                <div class="block-content">{{ block.settings.content }}</div>
              </div>
            {% when 'right_image_block' %}
              <div class="step-card" {{ block.shopify_attributes }}>
                {% if block.settings.image %}
                  <img src="{{ block.settings.image | image_url: width: 600 }}" 
                       alt="{{ block.settings.caption | default: product.title }}"
                       loading="lazy"
                       style="width: 100%; border-radius: 8px;">
                {% endif %}
                {% if block.settings.caption != blank %}
                  <p class="block-caption" style="text-align: center; margin-top: 0.5rem; color: #6e6b7b;">{{ block.settings.caption }}</p>
                {% endif %}
              </div>
            {% when 'right_icon_list' %}
              <div class="step-card" {{ block.shopify_attributes }}>
                {% if block.settings.heading != blank %}
                  <h3 class="step-header"><i class="ti ti-list-check me-2"></i>{{ block.settings.heading }}</h3>
                {% endif %}
                <ul class="icon-list" style="list-style: none; padding: 0; margin: 0;">
                  {% for i in (1..5) %}
                    {% assign item_key = 'item_' | append: i %}
                    {% assign item_value = block.settings[item_key] %}
                    {% if item_value != blank %}
                      <li style="display: flex; align-items: center; gap: 0.5rem; padding: 0.5rem 0; border-bottom: 1px solid #f1f1f1;">
                        <i class="ti ti-check" style="color: var(--cp-success, #28c76f);"></i>
                        <span>{{ item_value }}</span>
                      </li>
                    {% endif %}
                  {% endfor %}
                </ul>
              </div>
            {% when 'right_accordion' %}
              <div class="step-card pm-accordion-block" {{ block.shopify_attributes }}>
                <div class="pm-accordion-trigger {% if block.settings.open_default %}active{% endif %}" 
                     onclick="this.classList.toggle('active'); this.nextElementSibling.classList.toggle('open');">
                  <span>{{ block.settings.title }}</span>
                  <i class="ti ti-chevron-down"></i>
                </div>
                <div class="pm-accordion-content {% if block.settings.open_default %}open{% endif %}">
                  {{ block.settings.content }}
                </div>
              </div>
            {% when 'right_html_block' %}
              <div class="step-card" {{ block.shopify_attributes }}>
                {{ block.settings.html_content }}
              </div>
          {% endcase %}
        {% endfor %}
        
      </div>
      
  </div>
</section>

{% comment %} ═══════════════════════════════════════════════════════════════
   STYLES - Mevcut section'lardan alınan tüm stiller
═══════════════════════════════════════════════════════════════ {% endcomment %}
<style>
  /* ═══ BREADCRUMB - Full width, before grid ═══ */
  .breadcrumb-section {
    grid-column: 1 / -1 !important;
    grid-row: 1 !important;
    margin-bottom: 1rem;
  }
  
  /* ═══ DISPLAY CONTENTS - Make wrappers invisible to grid ═══ */
  /* theme.liquid'deki main.main-content GRID CONTAINER
     Bu wrapper'ları görünmez yaparak pm-left/pm-right doğrudan grid item oluyor */
  
  .shopify-section:has(.product-section) {
    display: contents !important;
  }
  
  .product-section {
    display: contents !important;
  }
  
  .pm-container {
    display: contents !important;
  }
  
  /* ═══ GRID ITEMS - Sol ve Sağ Kolonlar ═══ */
  /* Artık bunlar doğrudan .main-content grid'in children'ı */
  
  .pm-left {
    display: flex !important;
    flex-direction: column !important;
    gap: 1rem !important;
    min-width: 0;
  }
  
  .pm-right {
    display: flex !important;
    flex-direction: column !important;
    gap: 1rem !important;
    min-width: 0;
  }
  
  @media (min-width: 992px) {
    .pm-left {
      grid-column: 1 !important;
      grid-row: 2 / 4 !important;  /* Row 2'den başla (breadcrumb row 1) */
    }
    
    .pm-right {
      grid-column: 2 !important;
      grid-row: 2 / 5 !important;  /* Row 2'den başla */
      position: sticky;
      top: 1rem;
    }
  }
  
  /* Mobile/Desktop Toggle */
  .pm-mobile-accordion { display: none; }
  .pm-desktop-tabs { display: block; }
  
  @media (max-width: 991px) {
    /* ═══ MOBILE LAYOUT REORDER ═══ */
    /* Sıralama: Title → Gallery → Info Card → Tabs */
    
    /* Main content flex container yapıyoruz */
    .template-product .main-content {
      display: flex !important;
      flex-direction: column !important;
    }
    
    /* pm-left ve pm-right'ı da flex container yap */
    .pm-left {
      display: contents !important; /* İçindekileri parent'a taşı */
    }
    
    .pm-right {
      display: contents !important; /* İçindekileri parent'a taşı */
    }
    
    /* ═══ MOBILE TITLE - En üste ═══ */
    .product-info-card .product-vendor,
    .product-info-card .product-title {
      order: -100 !important;
    }
    
    .product-info-card .product-vendor {
      order: -101 !important;
    }
    
