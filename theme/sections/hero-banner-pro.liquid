{%- liquid
  assign section_id = 'hero-slider-' | append: section.id
  assign slide_count = section.blocks.size
  assign autoplay = section.settings.autoplay
  assign autoplay_speed = section.settings.autoplay_speed | times: 1000
  assign transition_speed = section.settings.transition_speed
  assign show_arrows = section.settings.show_arrows
  assign show_dots = section.settings.show_dots
  assign pause_on_hover = section.settings.pause_on_hover
  assign enable_swipe = section.settings.enable_swipe
  assign desktop_height = section.settings.desktop_height
  assign mobile_height = section.settings.mobile_height
-%}

<style>
  /* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
     CSS VARIABLES
     â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
  #{{ section_id }} {
    --slider-desktop-height: {{ desktop_height }}vh;
    --slider-mobile-height: {{ mobile_height }}vh;
    --slider-min-height: {{ section.settings.min_height }}px;
    --slider-max-height: {{ section.settings.max_height }}px;
    --slider-transition: {{ transition_speed }}ms;
    --slider-content-max-width: {{ section.settings.content_width }}px;
    
    --slider-arrow-bg: {{ section.settings.arrow_bg }};
    --slider-arrow-color: {{ section.settings.arrow_color }};
    --slider-arrow-size: {{ section.settings.arrow_size }}px;
    
    --slider-dot-color: {{ section.settings.dot_color }};
    --slider-dot-active: {{ section.settings.dot_active_color }};
    --slider-dot-size: {{ section.settings.dot_size }}px;
  }

  /* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
     BASE SLIDER STYLES
     â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
  #{{ section_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    margin-top: {{ section.settings.spacing_top }}px;
    margin-bottom: {{ section.settings.spacing_bottom }}px;
  }

  #{{ section_id }} .hero-slider {
    position: relative;
    width: 100%;
    height: var(--slider-mobile-height);
    min-height: var(--slider-min-height);
    max-height: var(--slider-max-height);
  }

  /* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
     SLIDES CONTAINER
     â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
  #{{ section_id }} .hero-slides {
    position: relative;
    width: 100%;
    height: 100%;
  }

  #{{ section_id }} .hero-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    visibility: hidden;
    transition: opacity var(--slider-transition) ease, visibility var(--slider-transition) ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #{{ section_id }} .hero-slide.active {
    opacity: 1;
    visibility: visible;
    z-index: 2;
  }

  /* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
     SLIDE BACKGROUND
     â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
  #{{ section_id }} .slide-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  #{{ section_id }} .slide-background img,
  #{{ section_id }} .slide-background video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  #{{ section_id }} .slide-background--gradient {
    width: 100%;
    height: 100%;
  }

  /* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
     SLIDE OVERLAY
     â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
  #{{ section_id }} .slide-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    pointer-events: none;
  }

  /* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
     SLIDE CONTENT
     â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
  #{{ section_id }} .slide-content {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: var(--slider-content-max-width);
    padding: 30px 20px;
  }

  #{{ section_id }} .slide-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 20px;
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    border-radius: 20px;
    margin-bottom: 20px;
  }

  #{{ section_id }} .slide-badge svg {
    width: 16px;
    height: 16px;
  }

  #{{ section_id }} .slide-subtitle {
    font-size: 14px;
    font-weight: 500;
    margin-bottom: 12px;
    letter-spacing: 2px;
    text-transform: uppercase;
    line-height: 1.4;
  }

  #{{ section_id }} .slide-title {
    font-size: 32px;
    font-weight: 700;
    margin: 0 0 20px 0;
    line-height: 1.1;
    letter-spacing: -1px;
  }

  #{{ section_id }} .slide-description {
    font-size: 15px;
    font-weight: 400;
    margin-bottom: 32px;
    line-height: 1.7;
    max-width: 600px;
    opacity: 0.9;
  }

  /* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
     BUTTONS
     â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
  #{{ section_id }} .slide-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
  }

  #{{ section_id }} .slide-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 16px 32px;
    font-size: 15px;
    font-weight: 600;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.3s ease;
    cursor: pointer;
    border: 2px solid transparent;
    min-width: 160px;
  }

  #{{ section_id }} .slide-btn--primary:hover,
  #{{ section_id }} .slide-btn--secondary:hover {
    transform: translateY(-2px);
  }

  #{{ section_id }} .slide-btn svg {
    width: 18px;
    height: 18px;
    transition: transform 0.3s ease;
  }

  #{{ section_id }} .slide-btn:hover svg {
    transform: translateX(4px);
  }

  /* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
     NAVIGATION ARROWS
     â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
  #{{ section_id }} .slider-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    width: var(--slider-arrow-size);
    height: var(--slider-arrow-size);
    background: var(--slider-arrow-bg);
    color: var(--slider-arrow-color);
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    opacity: 0.8;
  }

  #{{ section_id }} .slider-arrow:hover {
    opacity: 1;
    transform: translateY(-50%) scale(1.1);
  }

  #{{ section_id }} .slider-arrow--prev {
    left: 20px;
  }

  #{{ section_id }} .slider-arrow--next {
    right: 20px;
  }

  #{{ section_id }} .slider-arrow svg {
    width: 24px;
    height: 24px;
  }

  /* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
     NAVIGATION DOTS
     â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
  #{{ section_id }} .slider-dots {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
    display: flex;
    gap: 12px;
    padding: 10px 20px;
    background: rgba(0,0,0,0.2);
    border-radius: 30px;
    backdrop-filter: blur(10px);
  }

  #{{ section_id }} .slider-dot {
    width: var(--slider-dot-size);
    height: var(--slider-dot-size);
    background: var(--slider-dot-color);
    border: none;
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
  }

  #{{ section_id }} .slider-dot:hover {
    transform: scale(1.2);
  }

  #{{ section_id }} .slider-dot.active {
    background: var(--slider-dot-active);
    transform: scale(1.3);
  }

  /* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
     SLIDE COUNTER
     â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
  #{{ section_id }} .slider-counter {
    position: absolute;
    bottom: 30px;
    right: 30px;
    z-index: 10;
    font-size: 14px;
    font-weight: 600;
    color: #fff;
    background: rgba(0,0,0,0.3);
    padding: 8px 16px;
    border-radius: 20px;
    backdrop-filter: blur(10px);
  }

  #{{ section_id }} .slider-counter span {
    color: {{ section.settings.dot_active_color }};
  }

  /* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
     PROGRESS BAR
     â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
  #{{ section_id }} .slider-progress {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: rgba(255,255,255,0.2);
    z-index: 10;
  }

  #{{ section_id }} .slider-progress-bar {
    height: 100%;
    background: {{ section.settings.dot_active_color }};
    width: 0;
    transition: width 0.1s linear;
  }

  /* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
     ANIMATIONS
     â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
  {% if section.settings.enable_animations %}
  #{{ section_id }} .hero-slide.active .slide-badge {
    animation: slideUp 0.6s ease forwards;
    animation-delay: 0.1s;
    opacity: 0;
  }

  #{{ section_id }} .hero-slide.active .slide-subtitle {
    animation: slideUp 0.6s ease forwards;
    animation-delay: 0.2s;
    opacity: 0;
  }

  #{{ section_id }} .hero-slide.active .slide-title {
    animation: slideUp 0.6s ease forwards;
    animation-delay: 0.3s;
    opacity: 0;
  }

  #{{ section_id }} .hero-slide.active .slide-description {
    animation: slideUp 0.6s ease forwards;
    animation-delay: 0.4s;
    opacity: 0;
  }

  #{{ section_id }} .hero-slide.active .slide-buttons {
    animation: slideUp 0.6s ease forwards;
    animation-delay: 0.5s;
    opacity: 0;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  {% endif %}

  /* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
     DESKTOP STYLES
     â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
  @media (min-width: 768px) {
    #{{ section_id }} .hero-slider {
      height: var(--slider-desktop-height);
    }

    #{{ section_id }} .slide-content {
      padding: 60px;
    }

    #{{ section_id }} .slide-subtitle {
      font-size: 18px;
    }

    #{{ section_id }} .slide-title {
      font-size: 56px;
    }

    #{{ section_id }} .slide-description {
      font-size: 18px;
    }

    #{{ section_id }} .slide-buttons {
      flex-wrap: nowrap;
    }
  }

  @media (min-width: 1200px) {
    #{{ section_id }} .slide-content {
      padding: 80px;
    }

    #{{ section_id }} .slide-title {
      font-size: 64px;
