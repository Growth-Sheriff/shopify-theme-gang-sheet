{% comment %}
  Homepage Process Steps - 3 Column with Images
  Editable via Theme Editor
{% endcomment %}

{%- render 'custom-css-renderer', section: section -%}

<section class="process-steps-section">
  <div class="container">
    <div class="process-steps-wrapper">
      
      {% if section.settings.subtitle != blank or section.settings.title != blank or section.settings.description != blank %}
      <div class="process-header">
        {% if section.settings.subtitle != blank %}
          <p class="process-subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
        {% if section.settings.title != blank %}
          <h2 class="process-title">{{ section.settings.title }}</h2>
        {% endif %}
        {% if section.settings.description != blank %}
          <p class="process-description">{{ section.settings.description }}</p>
        {% endif %}
      </div>
      {% endif %}

      <div class="process-steps-grid">
        {% for block in section.blocks %}
          {% if block.type == 'step' %}
            <div class="process-step" {{ block.shopify_attributes }}>
              {% if block.settings.image != blank %}
                <div class="step-image-wrapper">
                  <img 
                    src="{{ block.settings.image | image_url: width: 969 }}"
                    alt="{{ block.settings.image.alt | default: block.settings.step_title }}"
                    width="969"
                    height="969"
                    loading="lazy"
                    class="step-image"
                  >
                </div>
              {% endif %}
              <div class="step-content">
                {% if block.settings.step_title != blank %}
                  <h3 class="step-title">{{ block.settings.step_title }}</h3>
                {% endif %}
                {% if block.settings.step_description != blank %}
                  <p class="step-description">{{ block.settings.step_description }}</p>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>

    </div>
  </div>
</section>

<!-- HowTo Schema for SEO -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "HowTo",
  "name": {{ section.settings.title | default: 'DTF Transfer Process' | json }},
  "description": {{ section.settings.description | default: 'Learn how to order and apply DTF transfers' | json }},
  "totalTime": "PT30M",
  "estimatedCost": {
    "@type": "MonetaryAmount",
    "currency": "USD",
    "value": "0"
  },
  "step": [
    {%- assign step_index = 0 -%}
    {%- for block in section.blocks -%}
      {%- if block.type == 'step' -%}
        {%- assign step_index = step_index | plus: 1 -%}
    {
      "@type": "HowToStep",
      "position": {{ step_index }},
      "name": {{ block.settings.step_title | default: 'Step' | json }},
      "text": {{ block.settings.step_description | default: '' | strip_html | json }}
      {%- if block.settings.image != blank -%}
      ,
      "image": "{{ block.settings.image | image_url: width: 800 }}"
      {%- endif -%}
    }{% unless forloop.last %},{% endunless %}
      {%- endif -%}
    {%- endfor -%}
  ]
}
</script>

<style>
.process-steps-section {
  padding: 80px 0;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
}

.process-steps-wrapper {
  max-width: 1200px;
  margin: 0 auto;
}

.process-header {
  text-align: center;
  margin-bottom: 60px;
}

.process-subtitle {
  font-size: 0.875rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 2px;
  color: #667eea;
  margin: 0 0 12px 0;
}

.process-title {
  font-size: 2.5rem;
  font-weight: 800;
  color: #1a1a2e;
  margin: 0 0 16px 0;
  line-height: 1.2;
}

.process-description {
  font-size: 1.1rem;
  color: #64748b;
  max-width: 600px;
  margin: 0 auto;
  line-height: 1.6;
}

.process-steps-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 40px;
}

.process-step {
  text-align: center;
  background: #fff;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.process-step:hover {
  transform: translateY(-8px);
  box-shadow: 0 12px 40px rgba(102, 126, 234, 0.15);
}

.step-image-wrapper {
  overflow: hidden;
  aspect-ratio: 1;
}

.step-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.process-step:hover .step-image {
  transform: scale(1.05);
}

.step-content {
  padding: 28px 24px 32px;
}

.step-title {
  font-size: 1.35rem;
  font-weight: 700;
  color: #1a1a2e;
  margin: 0 0 12px 0;
}

.step-description {
  font-size: 0.95rem;
  color: #64748b;
  line-height: 1.7;
  margin: 0;
}

@media (max-width: 992px) {
  .process-steps-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }
}

@media (max-width: 768px) {
  .process-steps-section {
    padding: 60px 0;
  }
  
  .process-header {
    margin-bottom: 40px;
  }
  
  .process-title {
    font-size: 1.8rem;
  }
  
  .process-steps-grid {
    grid-template-columns: 1fr;
    gap: 24px;
  }
  
  .process-step {
    max-width: 400px;
    margin: 0 auto;
  }
}
</style>

