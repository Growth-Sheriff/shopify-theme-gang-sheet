{% comment %}
  CTA Section - Fully Dynamic
  All elements customizable via Theme Editor
{% endcomment %}

{%- render 'custom-css-renderer', section: section -%}

<section class="cp-cta" style="background: {{ section.settings.background | default: 'linear-gradient(135deg, #7367F0 0%, #9e95f5 100%)' }};">
  <div class="container" style="text-align: center;">
    <h2 class="cp-cta-title" style="color: {{ section.settings.title_color | default: '#ffffff' }};">{{ section.settings.title }}</h2>
    <p class="cp-cta-desc" style="color: {{ section.settings.desc_color | default: 'rgba(255,255,255,0.9)' }};">{{ section.settings.description }}</p>
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="cp-cta-btn" style="
        background: {{ section.settings.button_bg | default: '#ffffff' }};
        color: {{ section.settings.button_color | default: '#7367F0' }};
      ">
        {% if section.settings.button_icon != blank %}
          <i class="{{ section.settings.button_icon }}"></i>
        {% endif %}
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</section>

<style>
  .cp-cta {
    padding: 3.5rem 0;
  }
  
  .cp-cta-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }
  
  .cp-cta-desc {
    max-width: 600px;
    margin: 0 auto 1.5rem;
    font-size: 1rem;
    line-height: 1.6;
  }
  
  .cp-cta-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: transform 0.2s, box-shadow 0.2s;
  }
  
  .cp-cta-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0,0,0,0.2);
  }
  
  @media (max-width: 767px) {
    .cp-cta {
      padding: 2rem 1rem;
    }
    
    .cp-cta-title {
      font-size: 1.25rem;
      margin-bottom: 0.75rem;
    }
    
    .cp-cta-desc {
      font-size: 0.85rem;
      margin-bottom: 1.25rem;
      padding: 0 0.5rem;
    }
    
    .cp-cta-btn {
      padding: 0.75rem 1.5rem;
      font-size: 0.9rem;
    }
  }
</style>

{% schema %}
{
  "name": "CTA Section",
  "tag": "section",
  "class": "homepage-cta",
  "settings": [
    {
      "type": "header",
      "content": "Section Background"
    },
    {
      "type": "color_background",
      "id": "background",
      "label": "Background",
      "default": "linear-gradient(135deg, #7367F0 0%, #9e95f5 100%)"
    },
    {
      "type": "text",
      "id": "section_padding",
      "label": "Padding",
      "default": "4rem 0"
    },
    {
      "type": "header",
      "content": "Title"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Ready to Start Your Order?"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "title_size",
      "label": "Title Size",
      "default": "2rem"
    },
    {
      "type": "header",
      "content": "Description"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Join thousands of businesses who trust CloudyPrints for their custom printing needs. No minimum orders, fast turnaround, and exceptional quality."
    },
    {
      "type": "color",
      "id": "desc_color",
      "label": "Description Color",
      "default": "#ffffffE6"
    },
    {
      "type": "text",
      "id": "desc_size",
      "label": "Description Size",
      "default": "1rem"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Get Started Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_icon",
      "label": "Button Icon Class",
      "default": "fa-solid fa-rocket"
    },
    {
      "type": "color",
      "id": "button_bg",
      "label": "Button Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Text Color",
      "default": "#7367F0"
    },
    {
      "type": "header",
      "content": "⚙️ Gelişmiş"
    },
    {
      "type": "textarea",
      "id": "custom_css",
      "label": "Özel CSS",
      "info": "Bu section için özel CSS kodları ekleyin"
    }
  ],
  "presets": [
    {
      "name": "CTA Section"
    }
  ]
}
{% endschema %}
