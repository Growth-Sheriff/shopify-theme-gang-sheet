{% comment %}
  ============================================
  COUNTDOWN TIMER SECTION
  Sale countdown / Product launch timer
  ============================================
{% endcomment %}

{%- render 'custom-css-renderer', section: section -%}

<style>
/* ===== COUNTDOWN SECTION STYLES ===== */
.countdown-section {
  padding: 60px 0;
  background: linear-gradient(135deg, #7367f0, #9e95f5);
  position: relative;
  overflow: hidden;
}

.countdown-section::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 500px;
  height: 500px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  pointer-events: none;
}

.countdown-section::after {
  content: '';
  position: absolute;
  bottom: -30%;
  left: -10%;
  width: 300px;
  height: 300px;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
  pointer-events: none;
}

.countdown-section.dark {
  background: #2d2d3a;
}

.countdown-section.light {
  background: #f8f9fc;
}

.countdown-container {
  position: relative;
  z-index: 1;
  text-align: center;
  max-width: 800px;
  margin: 0 auto;
}

.countdown-badge {
  display: inline-block;
  padding: 8px 20px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 25px;
  font-size: 0.85rem;
  font-weight: 600;
  color: #fff;
  margin-bottom: 20px;
}

.countdown-section.light .countdown-badge {
  background: rgba(115, 103, 240, 0.1);
  color: #7367f0;
}

.countdown-title {
  font-size: 2.5rem;
  font-weight: 700;
  color: #fff;
  margin: 0 0 12px 0;
  line-height: 1.2;
}

.countdown-section.light .countdown-title {
  color: #2d2d3a;
}

.countdown-subtitle {
  font-size: 1.1rem;
  color: rgba(255, 255, 255, 0.85);
  margin: 0 0 40px 0;
}

.countdown-section.light .countdown-subtitle {
  color: #6c757d;
}

/* Timer Display */
.countdown-timer {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-bottom: 40px;
}

.countdown-block {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border-radius: 16px;
  padding: 24px 20px;
  min-width: 100px;
  text-align: center;
}

.countdown-section.light .countdown-block {
  background: #fff;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
}

.countdown-number {
  font-size: 3rem;
  font-weight: 700;
  color: #fff;
  line-height: 1;
  margin-bottom: 8px;
  font-variant-numeric: tabular-nums;
}

.countdown-section.light .countdown-number {
  color: #7367f0;
}

.countdown-label {
  font-size: 0.85rem;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.8);
  text-transform: uppercase;
  letter-spacing: 1px;
}

.countdown-section.light .countdown-label {
  color: #5d596c;
}

.countdown-separator {
  font-size: 2.5rem;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.5);
  align-self: center;
  padding-bottom: 20px;
}

.countdown-section.light .countdown-separator {
  color: #e0e0e0;
}

/* CTA Button */
.countdown-cta {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 16px 36px;
  background: #fff;
  border-radius: 12px;
  color: #7367f0;
  font-size: 1rem;
  font-weight: 600;
  text-decoration: none;
  transition: all 0.3s ease;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
}

.countdown-cta:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
}

.countdown-section.light .countdown-cta {
  background: linear-gradient(135deg, #7367f0, #9e95f5);
  color: #fff;
}

/* Expired State */
.countdown-expired {
  text-align: center;
  padding: 20px;
}

.countdown-expired h3 {
  font-size: 1.5rem;
  font-weight: 600;
  color: #fff;
  margin: 0;
}

.countdown-section.light .countdown-expired h3 {
  color: #2d2d3a;
}

/* ===== RESPONSIVE ===== */
@media (max-width: 767.98px) {
  .countdown-section {
    padding: 40px 0;
  }
  
  .countdown-title {
    font-size: 1.8rem;
  }
  
  .countdown-subtitle {
    font-size: 0.95rem;
  }
  
  .countdown-timer {
    gap: 10px;
  }
  
  .countdown-block {
    min-width: 70px;
    padding: 16px 12px;
    border-radius: 12px;
  }
  
  .countdown-number {
    font-size: 2rem;
  }
  
  .countdown-label {
    font-size: 0.7rem;
  }
  
  .countdown-separator {
    font-size: 1.5rem;
    display: none;
  }
  
  .countdown-cta {
    padding: 14px 28px;
    font-size: 0.9rem;
  }
}
</style>

<section class="countdown-section {{ section.settings.style }}" id="countdown-{{ section.id }}">
  <div class="container">
    <div class="countdown-container">
      
      {%- if section.settings.badge != blank -%}
        <div class="countdown-badge">{{ section.settings.badge }}</div>
      {%- endif -%}
      
      <h2 class="countdown-title">{{ section.settings.title | default: 'Flash Sale Ends Soon!' }}</h2>
      <p class="countdown-subtitle">{{ section.settings.subtitle | default: 'Do not miss out on our biggest sale of the year. Limited time offer!' }}</p>
      
      <div class="countdown-timer" id="countdown-timer-{{ section.id }}">
        <div class="countdown-block">
          <div class="countdown-number" id="countdown-days-{{ section.id }}">00</div>
          <div class="countdown-label">Days</div>
        </div>
        <span class="countdown-separator">:</span>
        <div class="countdown-block">
          <div class="countdown-number" id="countdown-hours-{{ section.id }}">00</div>
          <div class="countdown-label">Hours</div>
        </div>
        <span class="countdown-separator">:</span>
        <div class="countdown-block">
          <div class="countdown-number" id="countdown-mins-{{ section.id }}">00</div>
          <div class="countdown-label">Minutes</div>
        </div>
        <span class="countdown-separator">:</span>
        <div class="countdown-block">
          <div class="countdown-number" id="countdown-secs-{{ section.id }}">00</div>
          <div class="countdown-label">Seconds</div>
        </div>
      </div>
      
      {%- if section.settings.button_text != blank -%}
        <a href="{{ section.settings.button_link | default: '/collections/all' }}" class="countdown-cta">
          {{ section.settings.button_text }}
          <i class="fa-solid fa-arrow-right"></i>
        </a>
      {%- endif -%}
      
    </div>
  </div>
</section>

<script>
(function() {
  const sectionId = '{{ section.id }}';
  const endDate = new Date('{{ section.settings.end_date }}T{{ section.settings.end_time | default: "23:59" }}:00').getTime();
  const hideWhenExpired = {{ section.settings.hide_when_expired | default: false }};
  const expiredMessage = '{{ section.settings.expired_message | default: "This offer has ended!" }}';
  
  const daysEl = document.getElementById('countdown-days-' + sectionId);
  const hoursEl = document.getElementById('countdown-hours-' + sectionId);
  const minsEl = document.getElementById('countdown-mins-' + sectionId);
  const secsEl = document.getElementById('countdown-secs-' + sectionId);
  const timerEl = document.getElementById('countdown-timer-' + sectionId);
  const section = document.getElementById('countdown-' + sectionId);
  
  function updateCountdown() {
    const now = new Date().getTime();
    const distance = endDate - now;
    
    if (distance < 0) {
      // Expired
      if (hideWhenExpired && section) {
        section.style.display = 'none';
      } else if (timerEl) {
        timerEl.innerHTML = '<div class="countdown-expired"><h3>' + expiredMessage + '</h3></div>';
      }
      return;
    }
    
    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
    const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const mins = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    const secs = Math.floor((distance % (1000 * 60)) / 1000);
    
    if (daysEl) daysEl.textContent = String(days).padStart(2, '0');
    if (hoursEl) hoursEl.textContent = String(hours).padStart(2, '0');
    if (minsEl) minsEl.textContent = String(mins).padStart(2, '0');
    if (secsEl) secsEl.textContent = String(secs).padStart(2, '0');
  }
  
  // Initial update
  updateCountdown();
  
  // Update every second
  setInterval(updateCountdown, 1000);
})();
</script>

