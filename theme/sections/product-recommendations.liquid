<!-- Product Recommendations - Product Bar Style -->
{%- render 'custom-css-renderer', section: section -%}

<style>
  /* Product Recommendations - Full Width */
  .cp-product-recommendations-bar {
    width: 100%;
    padding: 3rem 0;
    background: {{ section.settings.bg_color | default: '#f8f9fa' }};
  }
  
  .cp-product-recommendations-bar .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }
  
  .cp-product-recommendations-bar .cp-section-header {
    text-align: center;
    margin-bottom: 2rem;
  }
  
  .cp-product-recommendations-bar .cp-section-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: #1a1a2e;
    margin: 0;
  }
  
  .cp-product-recommendations-bar .cp-products-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
  }
  
  .cp-product-recommendations-bar .cp-product-card {
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0,0,0,0.06);
    transition: all 0.3s ease;
    text-decoration: none;
    display: block;
  }
  
  .cp-product-recommendations-bar .cp-product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.12);
  }
  
  .cp-product-recommendations-bar .cp-product-image {
    aspect-ratio: 1;
    overflow: hidden;
    background: #f5f5f5;
  }
  
  .cp-product-recommendations-bar .cp-product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .cp-product-recommendations-bar .cp-product-card:hover .cp-product-image img {
    transform: scale(1.05);
  }
  
  .cp-product-recommendations-bar .cp-product-info {
    padding: 1rem;
    text-align: center;
  }
  
  .cp-product-recommendations-bar .cp-product-name {
    font-size: 0.95rem;
    font-weight: 600;
    color: #1a1a2e;
    margin: 0 0 0.5rem;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .cp-product-recommendations-bar .cp-product-rating {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.25rem;
    margin-bottom: 0.5rem;
  }
  
  .cp-product-recommendations-bar .cp-product-rating i {
    color: #ffc107;
    font-size: 0.8rem;
  }
  
  .cp-product-recommendations-bar .cp-product-rating span {
    color: #666;
    font-size: 0.75rem;
    margin-left: 0.25rem;
  }
  
  .cp-product-recommendations-bar .cp-product-price {
    font-size: 1.1rem;
    font-weight: 700;
    color: #7367f0;
  }
  
  /* Responsive */
  @media (max-width: 1024px) {
    .cp-product-recommendations-bar .cp-products-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  @media (max-width: 768px) {
    .cp-product-recommendations-bar .cp-products-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
    
    .cp-product-recommendations-bar .cp-section-title {
      font-size: 1.5rem;
    }
  }
  
  @media (max-width: 480px) {
    .cp-product-recommendations-bar {
      padding: 2rem 0;
    }
    
    .cp-product-recommendations-bar .cp-product-info {
      padding: 0.75rem;
    }
  }
</style>

<section class="cp-product-recommendations-bar">
  <div class="container">
    <div class="cp-section-header">
      <h2 class="cp-section-title">{{ section.settings.title | default: 'Recommended Products' }}</h2>
    </div>
    
    {%- assign products_limit = section.settings.products_count | default: 4 -%}
    <div class="cp-products-grid">
      {% for recommendation in recommendations.products limit: products_limit %}
        <a href="{{ recommendation.url }}" class="cp-product-card">
          <div class="cp-product-image">
            {% if recommendation.featured_image %}
              <img src="{{ recommendation.featured_image | image_url: width: 400 }}" alt="{{ recommendation.title }}" width="400" height="400" loading="lazy">
            {% else %}
              <div style="width:100%;height:100%;display:flex;align-items:center;justify-content:center;background:#f0f0f0;">
                <i class="fa-solid fa-image" style="font-size:2rem;color:#ccc;"></i>
              </div>
            {% endif %}
          </div>
          <div class="cp-product-info">
            <h3 class="cp-product-name">{{ recommendation.title }}</h3>
            <div class="cp-product-rating">
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <span>(55)</span>
            </div>
            <div class="cp-product-price">{{ recommendation.price | money }}</div>
          </div>
        </a>
      {% else %}
        <p style="grid-column: 1/-1; text-align: center; color: #666;">No recommendations available</p>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Product Recommendations",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Recommended Products"
    },
    {
      "type": "range",
      "id": "products_count",
      "label": "Products to Show",
      "min": 2,
      "max": 8,
      "step": 1,
      "default": 4
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#f8f9fa"
    },
    {
      "type": "header",
      "content": "⚙️ Gelişmiş"
    },
    {
      "type": "textarea",
      "id": "custom_css",
      "label": "Özel CSS",
      "info": "Bu section için özel CSS kodları ekleyin"
    }
  ]
}
{% endschema %}






