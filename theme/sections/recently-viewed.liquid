{% comment %}
  ============================================
  RECENTLY VIEWED PRODUCTS SECTION
  localStorage-based recently viewed tracker
  ============================================
{% endcomment %}

<style>
/* ===== RECENTLY VIEWED STYLES ===== */
.recently-viewed-section {
  padding: 60px 0;
  background: #fff;
}

.recently-viewed-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30px;
}

.recently-viewed-title {
  font-size: 1.5rem;
  font-weight: 700;
  color: #2d2d3a;
  margin: 0;
  display: flex;
  align-items: center;
  gap: 12px;
}

.recently-viewed-title i {
  color: #7367f0;
  font-size: 1.3rem;
}

.recently-viewed-clear {
  font-size: 0.85rem;
  color: #6c757d;
  background: none;
  border: none;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 6px;
  transition: all 0.3s ease;
}

.recently-viewed-clear:hover {
  color: #ea5455;
}

/* Products Grid */
.recently-viewed-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 20px;
}

.recently-viewed-item {
  background: #fff;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0,0,0,0.04);
  border: 1px solid rgba(115, 103, 240, 0.08);
  transition: all 0.3s ease;
  position: relative;
}

.recently-viewed-item:hover {
  box-shadow: 0 8px 30px rgba(115, 103, 240, 0.15);
  transform: translateY(-4px);
}

.recently-viewed-image {
  aspect-ratio: 1;
  overflow: hidden;
  position: relative;
}

.recently-viewed-image a {
  display: block;
  width: 100%;
  height: 100%;
}

.recently-viewed-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.4s ease;
}

.recently-viewed-item:hover .recently-viewed-image img {
  transform: scale(1.05);
}

.recently-viewed-remove {
  position: absolute;
  top: 8px;
  right: 8px;
  width: 28px;
  height: 28px;
  border-radius: 50%;
  background: rgba(255,255,255,0.9);
  border: none;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: all 0.3s ease;
  z-index: 5;
}

.recently-viewed-item:hover .recently-viewed-remove {
  opacity: 1;
}

.recently-viewed-remove:hover {
  background: #ea5455;
}

.recently-viewed-remove i {
  font-size: 0.7rem;
  color: #5d596c;
}

.recently-viewed-remove:hover i {
  color: #fff;
}

.recently-viewed-info {
  padding: 14px;
}

.recently-viewed-name {
  font-size: 0.85rem;
  font-weight: 600;
  color: #2d2d3a;
  margin: 0 0 6px 0;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.recently-viewed-name a {
  color: inherit;
  text-decoration: none;
}

.recently-viewed-name a:hover {
  color: #7367f0;
}

.recently-viewed-price {
  font-size: 0.95rem;
  font-weight: 700;
  color: #7367f0;
}

.recently-viewed-price s {
  color: #9a97a8;
  font-size: 0.8rem;
  font-weight: 400;
  margin-left: 6px;
}

/* Empty State */
.recently-viewed-empty {
  text-align: center;
  padding: 40px 20px;
  color: #6c757d;
}

.recently-viewed-empty i {
  font-size: 2.5rem;
  color: #e0e0e0;
  margin-bottom: 16px;
}

.recently-viewed-empty p {
  margin: 0;
}

/* ===== RESPONSIVE ===== */
@media (max-width: 1199.98px) {
  .recently-viewed-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}

@media (max-width: 991.98px) {
  .recently-viewed-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 16px;
  }
}

@media (max-width: 767.98px) {
  .recently-viewed-section {
    padding: 40px 0;
  }
  
  .recently-viewed-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 12px;
  }
  
  .recently-viewed-title {
    font-size: 1.3rem;
  }
  
  .recently-viewed-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
  }
  
  .recently-viewed-info {
    padding: 10px;
  }
  
  .recently-viewed-name {
    font-size: 0.8rem;
  }
  
  .recently-viewed-price {
    font-size: 0.85rem;
  }
}
</style>

<section class="recently-viewed-section" id="recently-viewed-{{ section.id }}" style="display: none;">
  <div class="container">
    
    <div class="recently-viewed-header">
      <h2 class="recently-viewed-title">
        <i class="fa-solid fa-clock-rotate-left"></i>
        {{ section.settings.title | default: 'Recently Viewed' }}
      </h2>
      <button class="recently-viewed-clear" onclick="RecentlyViewed.clear('{{ section.id }}')">
        <i class="fa-solid fa-trash-alt"></i>
        Clear All
      </button>
    </div>
    
    <div class="recently-viewed-grid" id="recently-viewed-grid-{{ section.id }}">
      <!-- Products will be inserted by JS -->
    </div>
    
  </div>
</section>

<script>
// ===== RECENTLY VIEWED SYSTEM =====
const RecentlyViewed = {
  storageKey: 'shopify_recently_viewed',
  maxItems: {{ section.settings.max_products | default: 10 }},
  
  // Get recently viewed from localStorage
  getItems() {
    const data = localStorage.getItem(this.storageKey);
    return data ? JSON.parse(data) : [];
  },
  
  // Save to localStorage
  saveItems(items) {
    localStorage.setItem(this.storageKey, JSON.stringify(items));
  },
  
  // Add product to recently viewed
  add(product) {
    if (!product || !product.id) return;
    
    let items = this.getItems();
    
    // Remove if already exists
    items = items.filter(item => item.id !== product.id);
    
    // Add to beginning
    items.unshift({
      id: product.id,
      handle: product.handle,
      title: product.title,
      image: product.image,
      price: product.price,
      comparePrice: product.comparePrice,
      viewedAt: new Date().toISOString()
    });
    
    // Limit items
    items = items.slice(0, this.maxItems);
    
    this.saveItems(items);
  },
  
  // Remove item
  remove(productId, sectionId) {
    let items = this.getItems();
    items = items.filter(item => item.id !== productId);
    this.saveItems(items);
    this.render(sectionId);
  },
  
  // Clear all
  clear(sectionId) {
    localStorage.removeItem(this.storageKey);
    this.render(sectionId);
  },
  
  // Render recently viewed grid
  render(sectionId) {
    const container = document.getElementById('recently-viewed-grid-' + sectionId);
    const section = document.getElementById('recently-viewed-' + sectionId);
    
    if (!container || !section) return;
    
    const items = this.getItems();
    const displayLimit = {{ section.settings.products_to_show | default: 5 }};
    const displayItems = items.slice(0, displayLimit);
    
    // Hide section if no items
    if (displayItems.length === 0) {
      section.style.display = 'none';
      return;
    }
    
    section.style.display = 'block';
    
    let html = '';
    displayItems.forEach(item => {
      html += `
        <div class="recently-viewed-item" data-product-id="${item.id}">
          <div class="recently-viewed-image">
            <a href="/products/${item.handle}">
              <img src="${item.image}" alt="${item.title}" loading="lazy">
            </a>
            <button class="recently-viewed-remove" onclick="RecentlyViewed.remove(${item.id}, '${sectionId}')" aria-label="Remove">
              <i class="fa-solid fa-times"></i>
            </button>
          </div>
          <div class="recently-viewed-info">
            <h3 class="recently-viewed-name">
              <a href="/products/${item.handle}">${item.title}</a>
            </h3>
            <p class="recently-viewed-price">
              ${item.price}
              ${item.comparePrice ? `<s>${item.comparePrice}</s>` : ''}
            </p>
          </div>
        </div>
      `;
    });
    
    container.innerHTML = html;
  }
};

// Initialize on page load
document.addEventListener('DOMContentLoaded', function() {
  RecentlyViewed.render('{{ section.id }}');
});
</script>

{% schema %}
{
  "name": "Recently Viewed",
  "tag": "section",
  "class": "section-recently-viewed",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Recently Viewed"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to Show",
      "min": 3,
      "max": 10,
      "step": 1,
      "default": 5
    },
    {
      "type": "range",
      "id": "max_products",
      "label": "Max Products to Store",
      "min": 5,
      "max": 20,
      "step": 1,
      "default": 10,
      "info": "Maximum products to keep in memory"
    }
  ],
  "presets": [
    {
      "name": "Recently Viewed"
    }
  ]
}
{% endschema %}
