{% comment %}
  ============================================
  TRUST BADGES SECTION
  Trust indicators / Payment badges / Guarantees
  ============================================
{% endcomment %}

{%- render 'custom-css-renderer', section: section -%}

<style>
/* ===== TRUST BADGES STYLES ===== */
.trust-badges-section {
  padding: 40px 0;
  background: #f8f9fc;
  border-top: 1px solid rgba(0, 0, 0, 0.04);
  border-bottom: 1px solid rgba(0, 0, 0, 0.04);
}

.trust-badges-section.no-bg {
  background: transparent;
  border: none;
  padding: 30px 0;
}

.trust-badges-section.gradient {
  background: linear-gradient(135deg, rgba(115, 103, 240, 0.05), rgba(158, 149, 245, 0.08));
}

.trust-badges-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 30px;
}

.trust-badge {
  display: flex;
  align-items: center;
  gap: 14px;
  padding: 16px 24px;
  background: #fff;
  border-radius: 14px;
  box-shadow: 0 2px 15px rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.trust-badge:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(115, 103, 240, 0.12);
}

.trust-badges-section.no-bg .trust-badge {
  background: #f8f9fc;
}

.trust-badge-icon {
  width: 48px;
  height: 48px;
  border-radius: 12px;
  background: linear-gradient(135deg, rgba(115, 103, 240, 0.1), rgba(158, 149, 245, 0.15));
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.trust-badge-icon i {
  font-size: 1.3rem;
  color: #7367f0;
}

.trust-badge-icon.green {
  background: linear-gradient(135deg, rgba(40, 199, 111, 0.1), rgba(72, 218, 137, 0.15));
}

.trust-badge-icon.green i {
  color: #28c76f;
}

.trust-badge-icon.blue {
  background: linear-gradient(135deg, rgba(0, 207, 232, 0.1), rgba(51, 215, 237, 0.15));
}

.trust-badge-icon.blue i {
  color: #00cfe8;
}

.trust-badge-icon.orange {
  background: linear-gradient(135deg, rgba(255, 159, 67, 0.1), rgba(255, 185, 118, 0.15));
}

.trust-badge-icon.orange i {
  color: #ff9f43;
}

.trust-badge-content h4 {
  font-size: 0.95rem;
  font-weight: 600;
  color: #2d2d3a;
  margin: 0 0 4px 0;
}

.trust-badge-content p {
  font-size: 0.8rem;
  color: #6c757d;
  margin: 0;
}

/* Compact Style */
.trust-badges-section.compact .trust-badges-grid {
  gap: 24px;
}

.trust-badges-section.compact .trust-badge {
  padding: 12px 20px;
  flex-direction: column;
  text-align: center;
  min-width: 140px;
}

.trust-badges-section.compact .trust-badge-icon {
  width: 56px;
  height: 56px;
  border-radius: 50%;
  margin-bottom: 8px;
}

.trust-badges-section.compact .trust-badge-icon i {
  font-size: 1.4rem;
}

/* Inline Style */
.trust-badges-section.inline .trust-badges-grid {
  gap: 40px;
}

.trust-badges-section.inline .trust-badge {
  padding: 0;
  background: transparent;
  box-shadow: none;
}

.trust-badges-section.inline .trust-badge:hover {
  transform: none;
  box-shadow: none;
}

.trust-badges-section.inline .trust-badge-icon {
  width: 40px;
  height: 40px;
  border-radius: 10px;
}

/* Payment Icons Row */
.trust-payment-icons {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 16px;
  margin-top: 24px;
  padding-top: 24px;
  border-top: 1px solid rgba(0, 0, 0, 0.06);
}

.trust-payment-icon {
  height: 28px;
  opacity: 0.6;
  filter: grayscale(100%);
  transition: all 0.3s ease;
}

.trust-payment-icon:hover {
  opacity: 1;
  filter: grayscale(0%);
}

/* ===== RESPONSIVE ===== */
@media (max-width: 991.98px) {
  .trust-badges-grid {
    gap: 16px;
  }
  
  .trust-badge {
    flex: 1 1 calc(50% - 16px);
    min-width: 260px;
  }
}

@media (max-width: 767.98px) {
  .trust-badges-section {
    padding: 30px 0;
  }
  
  .trust-badges-grid {
    flex-direction: column;
    gap: 12px;
  }
  
  .trust-badge {
    flex: 1 1 100%;
    min-width: 100%;
    padding: 14px 18px;
  }
  
  .trust-badge-icon {
    width: 42px;
    height: 42px;
  }
  
  .trust-badge-icon i {
    font-size: 1.1rem;
  }
  
  .trust-badge-content h4 {
    font-size: 0.9rem;
  }
  
  .trust-payment-icons {
    flex-wrap: wrap;
    gap: 12px;
    margin-top: 20px;
    padding-top: 20px;
  }
  
  .trust-payment-icon {
    height: 24px;
  }
}
</style>

<section class="trust-badges-section {{ section.settings.style }}" id="trust-badges-{{ section.id }}">
  <div class="container">
    
    <div class="trust-badges-grid">
      {%- for block in section.blocks -%}
        {%- if block.type == 'badge' -%}
          <div class="trust-badge" {{ block.shopify_attributes }}>
            <div class="trust-badge-icon {{ block.settings.icon_color }}">
              <i class="{{ block.settings.icon | default: 'fa-solid fa-shield-halved' }}"></i>
            </div>
            <div class="trust-badge-content">
              <h4>{{ block.settings.title }}</h4>
              {%- if block.settings.subtitle != blank -%}
                <p>{{ block.settings.subtitle }}</p>
              {%- endif -%}
            </div>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
    
    {%- if section.settings.show_payment_icons -%}
      <div class="trust-payment-icons">
        <img src="https://cdn.shopify.com/shopifycloud/shopify/assets/payment_icons/visa-319d545c6fd255c9aad5eeaad21fd6f7f7b4fdbdb1a35ce83b89cca12a187f00.svg" alt="Visa" width="38" height="24" class="trust-payment-icon">
        <img src="https://cdn.shopify.com/shopifycloud/shopify/assets/payment_icons/master-173035bc8124581983d4bbe50b89c845e255c2c7b126e5f0d629bcd52ae06ed8.svg" alt="Mastercard" width="38" height="24" class="trust-payment-icon">
        <img src="https://cdn.shopify.com/shopifycloud/shopify/assets/payment_icons/american_express-2264c9b8b57b23b766b9c2f86f5f2f83d3b4c1d2f7c07f7d8b6c32c4d5c5e6c0.svg" alt="American Express" width="38" height="24" class="trust-payment-icon">
        <img src="https://cdn.shopify.com/shopifycloud/shopify/assets/payment_icons/paypal-49e4c1e03244b6d2de0d270ca0d22dd15da6e92cc7266e93eb43762df5aa355d.svg" alt="PayPal" width="38" height="24" class="trust-payment-icon">
        <img src="https://cdn.shopify.com/shopifycloud/shopify/assets/payment_icons/apple_pay-f6db0077dc7c325b436ecbdcf254239c5c12590ea1d9e3d8ea9a6be7fd7e7a20.svg" alt="Apple Pay" width="38" height="24" class="trust-payment-icon">
        <img src="https://cdn.shopify.com/shopifycloud/shopify/assets/payment_icons/google_pay-c66a29c63facf2053bf69352982c958e9675cabea4f2f7ccec08d169d1856b31.svg" alt="Google Pay" width="38" height="24" class="trust-payment-icon">
      </div>
    {%- endif -%}
    
  </div>
</section>

