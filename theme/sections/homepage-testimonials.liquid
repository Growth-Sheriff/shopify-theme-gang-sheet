{% comment %}
  Testimonials Section - Fully Dynamic
  All elements customizable via Theme Editor
{% endcomment %}

{%- render 'custom-css-renderer', section: section -%}

<section class="cp-testimonials" id="reviews" style="background: {{ section.settings.section_bg | default: '#f8f7fa' }}; padding: {{ section.settings.section_padding | default: '2rem 0' }};">
  <div class="container">
    {%- comment -%} Desktop Elegant Header - Blue Theme {%- endcomment -%}
    <div class="cp-elegant-header cp-header-blue cp-desktop-header">
      <div class="cp-header-deco left">
        <span class="deco-diamond"></span>
        <span class="deco-line"></span>
        <span class="deco-dot"></span>
      </div>
      <div class="cp-header-container">
        <span class="cp-header-corner tl"></span>
        <span class="cp-header-corner tr"></span>
        <span class="cp-header-corner bl"></span>
        <span class="cp-header-corner br"></span>
        <span class="cp-header-badge">{{ section.settings.badge }}</span>
        <h2 class="cp-header-title">{{ section.settings.title }}</h2>
        {% if section.settings.subtitle != blank %}
          <p class="cp-header-subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
      </div>
      <div class="cp-header-deco right">
        <span class="deco-dot"></span>
        <span class="deco-line"></span>
        <span class="deco-diamond"></span>
      </div>
    </div>
    
    {%- comment -%} Mobile Glassmorphism Header - Blush (Sıcak & Sevgi) {%- endcomment -%}
    <div class="cp-glass-header-wrap cp-glass-blush cp-mobile-header">
      <div class="cp-glass-side left">
        <span class="dot"></span>
        <span class="line"></span>
        <span class="end"></span>
      </div>
      <div class="cp-glass-container">
        <span class="cp-glass-corner tl"></span>
        <span class="cp-glass-corner tr"></span>
        <span class="cp-glass-corner bl"></span>
        <span class="cp-glass-corner br"></span>
        <div class="cp-glass-inner">
          <span class="cp-glass-badge">❤️ {{ section.settings.badge | default: 'REVIEWS' }}</span>
          <h2 class="cp-glass-title">{{ section.settings.title | default: 'TESTIMONIALS' }}</h2>
        </div>
      </div>
      <div class="cp-glass-side right">
        <span class="end"></span>
        <span class="line"></span>
        <span class="dot"></span>
      </div>
    </div>

    <div class="cp-testimonials-grid">
      {% for block in section.blocks %}
        {% if block.type == 'testimonial' %}
          <div class="cp-testimonial-card" {{ block.shopify_attributes }} style="background: {{ section.settings.card_bg | default: '#ffffff' }};">
            <div class="cp-testimonial-stars">
              {% for i in (1..5) %}
                {% if i <= block.settings.rating %}
                  <i class="fa-solid fa-star" style="color: {{ section.settings.star_color | default: '#FFB400' }};"></i>
                {% else %}
                  <i class="fa-regular fa-star" style="color: {{ section.settings.star_color | default: '#FFB400' }};"></i>
                {% endif %}
              {% endfor %}
            </div>
            <p class="cp-testimonial-text">"{{ block.settings.text }}"</p>
            <div class="cp-testimonial-author">
              {% if block.settings.avatar %}
                <div class="cp-testimonial-avatar-img">
                  <img src="{{ block.settings.avatar | image_url: width: 80 }}" alt="{{ block.settings.name }}" width="80" height="80" loading="lazy">
                </div>
              {% elsif block.settings.avatar_url != blank %}
                <div class="cp-testimonial-avatar-img">
                  <img src="{{ block.settings.avatar_url }}" alt="{{ block.settings.name }}" width="80" height="80" loading="lazy">
                </div>
              {% else %}
                <div class="cp-testimonial-avatar" style="background: {{ section.settings.avatar_bg | default: '#7367F0' }}; color: #fff;">
                  {{ block.settings.name | slice: 0, 2 | upcase }}
                </div>
              {% endif %}
              <div>
                <div class="cp-testimonial-name" style="color: {{ section.settings.name_color | default: '#5d596c' }};">{{ block.settings.name }}</div>
                <div class="cp-testimonial-role" style="color: {{ section.settings.role_color | default: '#6e6b7b' }};">{{ block.settings.role }}</div>
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .cp-testimonials {
    padding: 3rem 0 !important;
  }
  
  .cp-testimonials-grid {
    display: grid;
    /* FLUID: auto-fit for smooth responsive */
    grid-template-columns: repeat(auto-fit, minmax(min(300px, 100%), 1fr));
    gap: clamp(1rem, 2vw, 1.5rem);
  }
  
  .cp-testimonial-card {
    padding: clamp(1rem, 2vw, 1.5rem);
    border-radius: 12px;
    box-shadow: 0 2px 12px rgba(0,0,0,0.06);
    min-width: 0;
  }
  
  .cp-testimonial-avatar-img {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    overflow: hidden;
  }
  
  .cp-testimonial-avatar-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  @media (max-width: 991px) {
    .cp-testimonials-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 767px) {
    .cp-testimonials {
      padding: 2rem 0 !important;
    }
    
    .cp-testimonials .cp-section-header {
      margin-bottom: 1.5rem !important;
    }
    
    .cp-testimonials .cp-section-badge {
      font-size: 0.7rem;
      padding: 0.3rem 0.75rem;
    }
    
    .cp-testimonials .cp-section-title {
      font-size: 1.25rem;
    }
    
    .cp-testimonials .cp-section-subtitle {
      font-size: 0.85rem;
      display: none;
    }
    
    .cp-testimonials-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
      padding: 0 0.5rem;
    }
    
    .cp-testimonial-card {
      padding: 1rem;
      border-radius: 10px;
    }
    
    .cp-testimonial-stars i {
      font-size: 0.8rem;
    }
    
    .cp-testimonial-text {
      font-size: 0.85rem;
      line-height: 1.5;
    }
    
    .cp-testimonial-avatar-img {
      width: 40px;
      height: 40px;
    }
    
    .cp-testimonial-name {
      font-size: 0.85rem;
    }
    
    .cp-testimonial-role {
      font-size: 0.75rem;
    }
  }
</style>

