{% comment %}
  Premium Footer - Luxury Soft Design
{% endcomment %}

<footer class="main-footer">
  <!-- Newsletter Section -->
  {% if section.settings.show_newsletter %}
  <div class="footer-newsletter">
    <div class="container">
      <div class="newsletter-wrapper">
        <div class="newsletter-content">
          <div class="newsletter-icon">
            <i class="fa-solid fa-envelope-open-text"></i>
          </div>
          <div class="newsletter-text">
            <h3>{{ section.settings.newsletter_title | default: "Join Our Newsletter" }}</h3>
            <p>{{ section.settings.newsletter_subtitle | default: "Get exclusive offers, new arrivals & 10% off your first order" }}</p>
          </div>
        </div>
        <div class="newsletter-form-wrapper">
          {% form 'customer', class: 'newsletter-form' %}
            <div class="form-group">
              <input type="email" 
                     name="contact[email]" 
                     placeholder="Enter your email address" 
                     class="newsletter-input"
                     required>
              <button type="submit" class="newsletter-btn">
                <span>Subscribe</span>
                <i class="fa-solid fa-arrow-right"></i>
              </button>
            </div>
            <p class="newsletter-privacy">
              <i class="fa-solid fa-shield-check"></i>
              We respect your privacy. Unsubscribe anytime.
            </p>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
  {% endif %}
  
  <!-- Main Footer -->
  <div class="footer-main">
    <div class="container">
      <div class="footer-grid">
        
        <!-- Brand Column -->
        <div class="footer-brand">
          {% if section.settings.logo %}
            <img src="{{ section.settings.logo | image_url: width: 160 }}" 
                 alt="{{ shop.name }}" 
                 class="footer-logo"
                 width="160"
                 height="45"
                 loading="lazy">
          {% else %}
            <span class="footer-logo-text">{{ shop.name }}</span>
          {% endif %}
          
          <p class="footer-description">
            {{ section.settings.description | default: "High-quality custom DTF transfers for your apparel business. Fast turnaround, vibrant colors, and exceptional durability." }}
          </p>
          
          <!-- Social Links -->
          <div class="footer-social">
            {% if section.settings.facebook %}
            <a href="{{ section.settings.facebook }}" class="social-link" target="_blank" rel="noopener" aria-label="Facebook">
              <i class="fa-brands fa-facebook-f"></i>
            </a>
            {% endif %}
            {% if section.settings.instagram %}
            <a href="{{ section.settings.instagram }}" class="social-link" target="_blank" rel="noopener" aria-label="Instagram">
              <i class="fa-brands fa-instagram"></i>
            </a>
            {% endif %}
            {% if section.settings.twitter %}
            <a href="{{ section.settings.twitter }}" class="social-link" target="_blank" rel="noopener" aria-label="Twitter">
              <i class="fa-brands fa-x-twitter"></i>
            </a>
            {% endif %}
            {% if section.settings.youtube %}
            <a href="{{ section.settings.youtube }}" class="social-link" target="_blank" rel="noopener" aria-label="YouTube">
              <i class="fa-brands fa-youtube"></i>
            </a>
            {% endif %}
            {% if section.settings.tiktok %}
            <a href="{{ section.settings.tiktok }}" class="social-link" target="_blank" rel="noopener" aria-label="TikTok">
              <i class="fa-brands fa-tiktok"></i>
            </a>
            {% endif %}
          </div>
        </div>
        
        <!-- Link Columns -->
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'link_column' %}
              <div class="footer-column" {{ block.shopify_attributes }}>
                <h4 class="footer-heading">{{ block.settings.title }}</h4>
                <ul class="footer-links">
                  {% for link in linklists[block.settings.menu].links %}
                    <li>
                      <a href="{{ link.url }}">
                        <i class="fa-solid fa-chevron-right"></i>
                        <span>{{ link.title }}</span>
                      </a>
                    </li>
                  {% endfor %}
                </ul>
              </div>
            
            {% when 'contact' %}
              <div class="footer-column footer-contact" {{ block.shopify_attributes }}>
                <h4 class="footer-heading">{{ block.settings.title | default: "Contact Us" }}</h4>
                <ul class="contact-list">
                  {% if block.settings.address %}
                  <li>
                    <div class="contact-icon">
                      <i class="fa-solid fa-location-dot"></i>
                    </div>
                    <span>{{ block.settings.address }}</span>
                  </li>
                  {% endif %}
                  {% if block.settings.phone %}
                  <li>
                    <div class="contact-icon">
                      <i class="fa-solid fa-phone"></i>
                    </div>
                    <a href="tel:{{ block.settings.phone | remove: ' ' }}">{{ block.settings.phone }}</a>
                  </li>
                  {% endif %}
                  {% if block.settings.email %}
                  <li>
                    <div class="contact-icon">
                      <i class="fa-solid fa-envelope"></i>
                    </div>
                    <a href="mailto:{{ block.settings.email }}">{{ block.settings.email }}</a>
                  </li>
                  {% endif %}
                  {% if block.settings.hours %}
                  <li>
                    <div class="contact-icon">
                      <i class="fa-solid fa-clock"></i>
                    </div>
                    <span>{{ block.settings.hours }}</span>
                  </li>
                  {% endif %}
                </ul>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
      
      <!-- Trust Badges -->
      {% if section.settings.show_trust_badges %}
      <div class="footer-trust">
        <div class="trust-badge">
          <div class="trust-icon">
            <i class="fa-solid fa-lock"></i>
          </div>
          <div class="trust-text">
            <span class="trust-title">Secure Payment</span>
            <span class="trust-desc">256-bit SSL Encryption</span>
          </div>
        </div>
        <div class="trust-badge">
          <div class="trust-icon">
            <i class="fa-solid fa-truck-fast"></i>
          </div>
          <div class="trust-text">
            <span class="trust-title">Fast Shipping</span>
            <span class="trust-desc">2-3 Business Days</span>
          </div>
        </div>
        <div class="trust-badge">
          <div class="trust-icon">
            <i class="fa-solid fa-rotate-left"></i>
          </div>
          <div class="trust-text">
            <span class="trust-title">Easy Returns</span>
            <span class="trust-desc">30 Day Guarantee</span>
          </div>
        </div>
        <div class="trust-badge">
          <div class="trust-icon">
            <i class="fa-solid fa-headset"></i>
          </div>
          <div class="trust-text">
            <span class="trust-title">24/7 Support</span>
            <span class="trust-desc">Always Here to Help</span>
          </div>
        </div>
      </div>
      {% endif %}
    </div>
  </div>
  
  <!-- Footer Bottom -->
  <div class="footer-bottom">
    <div class="container">
      <div class="footer-bottom-inner">
        <div class="footer-copyright">
          <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
        </div>
        
        <div class="footer-payments">
          <span class="payments-label">We Accept:</span>
          <div class="payment-icons">
            <i class="fa-brands fa-cc-visa"></i>
            <i class="fa-brands fa-cc-mastercard"></i>
            <i class="fa-brands fa-cc-amex"></i>
            <i class="fa-brands fa-cc-paypal"></i>
            <i class="fa-brands fa-apple-pay"></i>
            <i class="fa-brands fa-google-pay"></i>
          </div>
        </div>
        
        <div class="footer-legal">
          <a href="/policies/privacy-policy">Privacy</a>
          <a href="/policies/terms-of-service">Terms</a>
          <a href="/policies/refund-policy">Refunds</a>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Back to Top -->
  <button class="back-to-top" id="backToTop" aria-label="Back to top">
    <i class="fa-solid fa-chevron-up"></i>
  </button>
</footer>

<style>
