gamification-engine.dev {
    reverse_proxy localhost:3000
    log {
        output file /var/log/caddy/gamification-engine.log
    }
}

customizerapp.dev {
    reverse_proxy localhost:3001

    # Remove X-Frame-Options and add CSP for Shopify embedded app
    header -X-Frame-Options
    header Content-Security-Policy "frame-ancestors 'self' https://admin.shopify.com https://*.myshopify.com;"

    log {
        output file /var/log/caddy/customizerapp.log
    }
}

