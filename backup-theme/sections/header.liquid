  background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
}

.promo-overlay span {
  color: #fff;
  font-size: 0.85rem;
  font-weight: 600;
}

/* Header Actions */
.header-actions {
  display: flex;
  align-items: center;
  gap: 6px;
}

.action-btn {
  position: relative;
  width: 44px;
  height: 44px;
  display: flex;
