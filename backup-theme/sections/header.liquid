  box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
}

.search-input-wrapper i {
  color: #adb5bd;
  font-size: 1.1rem;
}

.search-input {
  flex: 1;
  border: none;
  background: transparent;
  font-size: 1rem;
  color: #1a1a2e;
  outline: none;
}

.search-input::placeholder {
  color: #adb5bd;
}

.search-close {
  width: 36px;
  height: 36px;
  border: none;
  background: #e9ecef;
  border-radius: 10px;
  color: #6c757d;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.search-close:hover {
  background: #dee2e6;
  color: #1a1a2e;
}

.search-suggestions {
  margin-top: 20px;
  text-align: center;
}

.suggestions-title {
  display: block;
  font-size: 0.75rem;
