  list-style: none;
  margin: 0;
  padding: 0;
}

.dropdown-links li {
  margin-bottom: 4px;
}

.dropdown-link {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 10px 14px;
  color: #1a1a2e;
  font-size: 0.9rem;
  font-weight: 500;
  text-decoration: none;
  border-radius: 10px;
