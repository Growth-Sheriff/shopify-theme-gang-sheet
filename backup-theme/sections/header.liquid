.mobile-social {
  display: flex;
  justify-content: center;
  gap: 12px;
}

.mobile-social a {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 10px;
  color: #6c757d;
  font-size: 1rem;
  text-decoration: none;
  transition: all 0.3s ease;
}

.mobile-social a:hover {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
