{% comment %}
  ============================================
  BACK TO TOP BUTTON SNIPPET
  Include in theme.liquid before </body>
  Usage: {% render 'back-to-top' %}
  ============================================
{% endcomment %}

<style>
/* ===== BACK TO TOP BUTTON ===== */
.back-to-top {
  position: fixed;
  bottom: 30px;
  right: 30px;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background: linear-gradient(135deg, #7367f0, #9e95f5);
  border: none;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  opacity: 0;
  visibility: hidden;
  transform: translateY(20px);
  transition: all 0.3s ease;
  box-shadow: 0 4px 20px rgba(115, 103, 240, 0.35);
}

.back-to-top.visible {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

.back-to-top:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 30px rgba(115, 103, 240, 0.5);
}

.back-to-top i {
  font-size: 1.2rem;
  color: #fff;
}

/* Progress Ring */
.back-to-top-progress {
  position: absolute;
  top: -2px;
  left: -2px;
  width: 54px;
  height: 54px;
  transform: rotate(-90deg);
}

.back-to-top-progress circle {
  fill: none;
  stroke-width: 2;
}

.back-to-top-progress .bg {
  stroke: rgba(255, 255, 255, 0.2);
}

.back-to-top-progress .progress {
  stroke: #fff;
  stroke-dasharray: 160;
  stroke-dashoffset: 160;
  transition: stroke-dashoffset 0.2s ease;
}

/* Alternative Styles */
.back-to-top.square {
  border-radius: 12px;
}

.back-to-top.pill {
  width: auto;
  padding: 0 20px;
  border-radius: 25px;
  gap: 8px;
}

.back-to-top.pill span {
  font-size: 0.85rem;
  font-weight: 500;
  color: #fff;
}

/* ===== RESPONSIVE ===== */
@media (max-width: 767.98px) {
  .back-to-top {
    bottom: 80px; /* Above bottom nav */
    right: 16px;
    width: 44px;
    height: 44px;
  }
  
  .back-to-top-progress {
    width: 48px;
    height: 48px;
  }
  
  .back-to-top.pill {
    padding: 0 16px;
  }
  
  .back-to-top.pill span {
    display: none;
  }
}
</style>

<button class="back-to-top {{ style | default: '' }}" id="back-to-top" aria-label="Back to top" onclick="scrollToTop()">
  {%- if show_progress -%}
    <svg class="back-to-top-progress" viewBox="0 0 54 54">
      <circle class="bg" cx="27" cy="27" r="25"></circle>
      <circle class="progress" cx="27" cy="27" r="25" id="back-to-top-progress"></circle>
    </svg>
  {%- endif -%}
  <i class="fa-solid fa-arrow-up"></i>
  {%- if style == 'pill' -%}
    <span>Top</span>
  {%- endif -%}
</button>

<script>
// Back to Top functionality
(function() {
  const button = document.getElementById('back-to-top');
  const progressCircle = document.getElementById('back-to-top-progress');
  const showAfter = 300; // Show after scrolling 300px
  
  if (!button) return;
  
  function updateButton() {
    const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
    const scrollHeight = document.documentElement.scrollHeight - document.documentElement.clientHeight;
    const scrollPercent = scrollTop / scrollHeight;
    
    // Show/hide button
    if (scrollTop > showAfter) {
      button.classList.add('visible');
    } else {
      button.classList.remove('visible');
    }
    
    // Update progress circle
    if (progressCircle) {
      const circumference = 160; // 2 * PI * r (where r = 25)
      const offset = circumference - (scrollPercent * circumference);
      progressCircle.style.strokeDashoffset = offset;
    }
  }
  
  // Throttled scroll handler
  let ticking = false;
  window.addEventListener('scroll', function() {
    if (!ticking) {
      window.requestAnimationFrame(function() {
        updateButton();
        ticking = false;
      });
      ticking = true;
    }
  });
  
  // Initial check
  updateButton();
})();

function scrollToTop() {
  window.scrollTo({
    top: 0,
    behavior: 'smooth'
  });
}
</script>
