<style>
/* ===== BLOG PAGE STYLES ===== */
.blog-page {
  padding: 40px 0 60px;
  background: linear-gradient(180deg, #f8f9fc 0%, #fff 100%);
  min-height: 100vh;
}

.blog-header {
  text-align: center;
  margin-bottom: 40px;
  padding: 0 15px;
}

.blog-title {
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 12px;
  background: linear-gradient(135deg, #7367f0 0%, #9e95f5 50%, #7367f0 100%);
  background-size: 200% auto;
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

.blog-description {
  font-size: 1rem;
  color: #6c757d;
  max-width: 600px;
  margin: 0 auto;
}

/* Tags Filter */
.blog-tags {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 10px;
  margin-bottom: 40px;
  padding: 0 15px;
}

.blog-tag {
  display: inline-flex;
  align-items: center;
  padding: 8px 16px;
  background: #fff;
  border: 1px solid rgba(115, 103, 240, 0.2);
  border-radius: 20px;
  font-size: 0.85rem;
  color: #5d596c;
  text-decoration: none;
  transition: all 0.3s ease;
}

.blog-tag:hover,
.blog-tag.active {
  background: #7367f0;
  color: #fff;
  border-color: #7367f0;
}

/* Articles Grid */
.articles-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
  gap: 30px;
  padding: 0 15px;
}

/* Article Card */
.article-card {
  background: #fff;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0,0,0,0.06);
  transition: all 0.3s ease;
  border: 1px solid rgba(115, 103, 240, 0.08);
}

.article-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 12px 40px rgba(115, 103, 240, 0.15);
}

.article-card-link {
  display: block;
  text-decoration: none;
  color: inherit;
}

.article-image {
  position: relative;
  height: 220px;
  overflow: hidden;
  background: linear-gradient(135deg, #f0f2f8, #e8eaf3);
}

.article-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.4s ease;
}

.article-card:hover .article-image img {
  transform: scale(1.08);
}

.article-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #7367f0, #9e95f5);
  color: #fff;
}

.article-placeholder svg {
  width: 48px;
  height: 48px;
  margin-bottom: 8px;
  opacity: 0.8;
}

.article-date-badge {
  position: absolute;
  top: 16px;
  left: 16px;
  background: rgba(255,255,255,0.95);
  backdrop-filter: blur(8px);
  padding: 8px 12px;
  border-radius: 8px;
  text-align: center;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.article-date-badge .day {
  display: block;
  font-size: 1.25rem;
  font-weight: 700;
  color: #7367f0;
  line-height: 1;
}

.article-date-badge .month {
  display: block;
  font-size: 0.7rem;
  text-transform: uppercase;
  color: #6c757d;
  margin-top: 2px;
}

.article-body {
  padding: 24px;
}

.article-meta {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 12px;
  font-size: 0.8rem;
  color: #9a97a8;
}

.article-meta svg {
  width: 14px;
  height: 14px;
}

.article-meta-item {
  display: flex;
  align-items: center;
  gap: 4px;
}

.article-card-title {
  font-size: 1.2rem;
  font-weight: 600;
  color: #2d2d3a;
  margin: 0 0 12px 0;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.article-card:hover .article-card-title {
  color: #7367f0;
}

.article-excerpt {
  font-size: 0.9rem;
  color: #6c757d;
  line-height: 1.6;
  margin: 0 0 16px 0;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.article-read-more {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  font-size: 0.85rem;
  font-weight: 600;
  color: #7367f0;
}

.article-read-more svg {
  width: 16px;
  height: 16px;
  transition: transform 0.3s ease;
}

.article-card:hover .article-read-more svg {
  transform: translateX(4px);
}

/* Pagination */
.blog-pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 8px;
  margin-top: 50px;
  padding: 0 15px;
}

.blog-pagination a,
.blog-pagination span {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 40px;
  height: 40px;
  padding: 0 12px;
  background: #fff;
  border: 1px solid rgba(115, 103, 240, 0.2);
  border-radius: 8px;
  font-size: 0.9rem;
  color: #5d596c;
  text-decoration: none;
  transition: all 0.3s ease;
}

.blog-pagination a:hover {
  background: #7367f0;
  color: #fff;
  border-color: #7367f0;
}

.blog-pagination .current {
  background: #7367f0;
  color: #fff;
  border-color: #7367f0;
}

/* ===== RESPONSIVE ===== */
@media (max-width: 767.98px) {
  .blog-page {
    padding: 24px 0 40px;
  }
  
  .blog-title {
    font-size: 1.8rem;
  }
  
  .blog-header {
    margin-bottom: 24px;
  }
  
  .blog-tags {
    margin-bottom: 24px;
  }
  
  .blog-tag {
    padding: 6px 12px;
    font-size: 0.75rem;
  }
  
  .articles-grid {
    grid-template-columns: 1fr;
    gap: 20px;
  }
  
  .article-image {
    height: 180px;
  }
  
  .article-body {
    padding: 16px;
  }
  
  .article-card-title {
    font-size: 1.05rem;
  }
}
</style>

<div class="blog-page">
  <div class="container">
    
    <!-- Header -->
    <div class="blog-header">
      <h1 class="blog-title">{{ blog.title }}</h1>
      {%- if blog.articles_count > 0 -%}
        <p class="blog-description">{{ blog.articles_count }} {{ blog.articles_count | pluralize: 'article', 'articles' }} to explore</p>
      {%- endif -%}
    </div>
    
    <!-- Tags Filter -->
    {%- if blog.all_tags.size > 0 -%}
      <div class="blog-tags">
        <a href="{{ blog.url }}" class="blog-tag {% unless current_tags %}active{% endunless %}">All</a>
        {%- for tag in blog.all_tags -%}
          <a href="{{ blog.url }}/tagged/{{ tag | handleize }}" class="blog-tag {% if current_tags contains tag %}active{% endif %}">
            {{ tag }}
          </a>
        {%- endfor -%}
      </div>
    {%- endif -%}
    
    <!-- Articles -->
    {%- paginate blog.articles by 12 -%}
      <div class="articles-grid">
        {%- for article in blog.articles -%}
          <article class="article-card">
            <a href="{{ article.url }}" class="article-card-link">
              
              <!-- Image -->
              <div class="article-image">
                {%- if article.image -%}
                  <img 
                    src="{{ article.image | image_url: width: 700 }}" 
                    alt="{{ article.title | escape }}"
                    loading="lazy"
                    width="700"
                    height="440"
                  >
                {%- else -%}
                  <div class="article-placeholder">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
                    </svg>
                  </div>
                {%- endif -%}
                
                <div class="article-date-badge">
                  <span class="day">{{ article.published_at | date: '%d' }}</span>
                  <span class="month">{{ article.published_at | date: '%b' }}</span>
                </div>
              </div>
              
              <!-- Body -->
              <div class="article-body">
                <div class="article-meta">
                  <span class="article-meta-item">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                    </svg>
                    {{ article.author }}
                  </span>
                  {%- if article.comments_count > 0 -%}
                    <span class="article-meta-item">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                      </svg>
                      {{ article.comments_count }}
                    </span>
                  {%- endif -%}
                </div>
                
                <h2 class="article-card-title">{{ article.title }}</h2>
                
                <p class="article-excerpt">{{ article.excerpt_or_content | strip_html | truncate: 150 }}</p>
                
                <span class="article-read-more">
                  Read More
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </span>
              </div>
              
            </a>
          </article>
        {%- endfor -%}
      </div>
      
      <!-- Pagination -->
      {%- if paginate.pages > 1 -%}
        <nav class="blog-pagination">
          {%- if paginate.previous -%}
            <a href="{{ paginate.previous.url }}">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
              </svg>
            </a>
          {%- endif -%}
          
          {%- for part in paginate.parts -%}
            {%- if part.is_link -%}
              <a href="{{ part.url }}">{{ part.title }}</a>
            {%- else -%}
              <span class="{% if part.title == paginate.current_page %}current{% endif %}">{{ part.title }}</span>
            {%- endif -%}
          {%- endfor -%}
          
          {%- if paginate.next -%}
            <a href="{{ paginate.next.url }}">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          {%- endif -%}
        </nav>
      {%- endif -%}
    {%- endpaginate -%}
    
  </div>
</div>
