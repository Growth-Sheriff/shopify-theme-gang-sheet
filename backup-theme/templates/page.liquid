{% comment %}
  Page Template
{% endcomment %}

<section class="cp-page-section">
  <div class="container">
    <div class="cp-page-header">
      <h1 class="cp-page-title">{{ page.title }}</h1>
    </div>
    <div class="cp-page-content">
      {{ page.content }}
    </div>
  </div>
</section>

<style>
  .cp-page-section {
    padding: 3rem 0 5rem;
  }
  
  .cp-page-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .cp-page-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #5d596c;
  }
  
  .cp-page-content {
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.8;
    color: #6e6b7b;
  }
  
  .cp-page-content h2,
  .cp-page-content h3,
  .cp-page-content h4 {
    color: #5d596c;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .cp-page-content p {
    margin-bottom: 1rem;
  }
  
  .cp-page-content a {
    color: #7367F0;
  }
  
  .cp-page-content ul,
  .cp-page-content ol {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }
  
  .cp-page-content img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem 0;
  }
</style>






